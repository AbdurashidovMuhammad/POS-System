<UserControl x:Class="WPF.Views.ProductView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="clr-namespace:WPF.ViewModels"
             mc:Ignorable="d"
             d:DataContext="{d:DesignInstance Type=vm:ProductViewModel}"
             d:DesignHeight="700" d:DesignWidth="1200"
             Loaded="UserControl_Loaded">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>

        <!-- ═══════════════ MAIN CONTENT ═══════════════ -->
        <Border Grid.Column="0" Background="White" CornerRadius="16">
            <Border.Effect>
                <DropShadowEffect BlurRadius="20" ShadowDepth="2" Opacity="0.06" Direction="270"/>
            </Border.Effect>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Gradient Header -->
                <Border Grid.Row="0" CornerRadius="16,16,0,0">
                    <Border.Background>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,0.5">
                            <GradientStop Color="#4361ee" Offset="0"/>
                            <GradientStop Color="#3a0ca3" Offset="1"/>
                        </LinearGradientBrush>
                    </Border.Background>
                    <Grid Margin="24,18">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                            <Path Data="M12,2A10,10 0 0,1 22,12A10,10 0 0,1 12,22A10,10 0 0,1 2,12A10,10 0 0,1 12,2M7,10L12,15L17,10H7Z"
                                  Fill="White" Width="22" Height="22" Stretch="Uniform" Opacity="0.9"/>
                            <TextBlock Text="Mahsulotlar" FontSize="18" FontWeight="SemiBold" Foreground="White" Margin="12,0,0,0" VerticalAlignment="Center"/>
                            <Border Background="Transparent" CornerRadius="12" Padding="10,4" Margin="12,0,0,0" VerticalAlignment="Center" BorderBrush="#FFFFFF90" BorderThickness="1.5">
                                <TextBlock Text="{Binding TotalCount, StringFormat={}{0} ta}" FontSize="12" Foreground="White" FontWeight="Bold"/>
                            </Border>
                        </StackPanel>

                        <!-- Add Product Button -->
                        <Button Grid.Column="1"
                                Command="{Binding ShowAddPanelCommand}"
                                Cursor="Hand">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border x:Name="border" CornerRadius="12" Padding="22,12">
                                        <Border.Background>
                                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                                <GradientStop Color="#4CAF50" Offset="0"/>
                                                <GradientStop Color="#2e7d32" Offset="1"/>
                                            </LinearGradientBrush>
                                        </Border.Background>
                                        <StackPanel Orientation="Horizontal">
                                            <Path Data="M19,13H13V19H11V13H5V11H11V5H13V11H19V13Z"
                                                  Fill="White" Width="16" Height="16" Stretch="Uniform" Margin="0,0,10,0" VerticalAlignment="Center"/>
                                            <TextBlock Text="Yangi mahsulot" Foreground="White" FontSize="15" FontWeight="SemiBold" VerticalAlignment="Center"/>
                                        </StackPanel>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter TargetName="border" Property="Opacity" Value="0.88"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>
                    </Grid>
                </Border>

                <!-- Search Bar -->
                <Border Grid.Row="1" Padding="20,16,20,12">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <Border x:Name="SearchBorder" Grid.Column="0" Background="#f8f9fa" CornerRadius="12" BorderBrush="#e8e8e8" BorderThickness="1">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <Border Grid.Column="0" Background="#4361ee" CornerRadius="12,0,0,12" Padding="14,0">
                                    <Path Data="M9.5,3A6.5,6.5 0 0,1 16,9.5C16,11.11 15.41,12.59 14.44,13.73L14.71,14H15.5L20.5,19L19,20.5L14,15.5V14.71L13.73,14.44C12.59,15.41 11.11,16 9.5,16A6.5,6.5 0 0,1 3,9.5A6.5,6.5 0 0,1 9.5,3M9.5,5C7,5 5,7 5,9.5C5,12 7,14 9.5,14C12,14 14,12 14,9.5C14,7 12,5 9.5,5Z"
                                          Fill="White"
                                          Width="18" Height="18"
                                          Stretch="Uniform"
                                          VerticalAlignment="Center"/>
                                </Border>
                                <TextBox x:Name="SearchTextBox"
                                         Grid.Column="1"
                                         Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                                         Background="Transparent"
                                         BorderThickness="0"
                                         Padding="12,13"
                                         FontSize="14"
                                         VerticalContentAlignment="Center"
                                         LostFocus="SearchTextBox_LostFocus">
                                    <TextBox.InputBindings>
                                        <KeyBinding Key="Enter" Command="{Binding SearchProductsCommand}"/>
                                        <KeyBinding Key="Escape" Command="{Binding CloseSuggestionsCommand}"/>
                                    </TextBox.InputBindings>
                                </TextBox>
                                <Button Grid.Column="2"
                                        Command="{Binding SearchProductsCommand}"
                                        Margin="4"
                                        Cursor="Hand">
                                    <Button.Template>
                                        <ControlTemplate TargetType="Button">
                                            <Border x:Name="border" CornerRadius="10" Padding="22,12">
                                                <Border.Background>
                                                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                                        <GradientStop Color="#4361ee" Offset="0"/>
                                                        <GradientStop Color="#3a0ca3" Offset="1"/>
                                                    </LinearGradientBrush>
                                                </Border.Background>
                                                <TextBlock Text="Qidirish" Foreground="White" FontSize="15" FontWeight="SemiBold"/>
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter TargetName="border" Property="Opacity" Value="0.85"/>
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Button.Template>
                                </Button>

                                <!-- Suggestions Popup -->
                                <Popup Grid.Column="1"
                                       IsOpen="{Binding IsSuggestionsOpen}"
                                       PlacementTarget="{Binding ElementName=SearchBorder}"
                                       Placement="Bottom"
                                       Width="{Binding ElementName=SearchBorder, Path=ActualWidth}"
                                       StaysOpen="False"
                                       AllowsTransparency="True"
                                       PopupAnimation="Slide">
                                    <Border Background="White"
                                            BorderBrush="#e0e0e0"
                                            BorderThickness="1"
                                            CornerRadius="12"
                                            Margin="0,4,0,0"
                                            MaxHeight="350">
                                        <Border.Effect>
                                            <DropShadowEffect BlurRadius="20" ShadowDepth="4" Opacity="0.15" Direction="270"/>
                                        </Border.Effect>
                                        <ScrollViewer VerticalScrollBarVisibility="Auto" MaxHeight="340">
                                            <ItemsControl ItemsSource="{Binding Suggestions}">
                                                <ItemsControl.ItemTemplate>
                                                    <DataTemplate>
                                                        <Border Padding="14,10"
                                                                Cursor="Hand"
                                                                Background="Transparent"
                                                                BorderBrush="#f0f0f0"
                                                                BorderThickness="0,0,0,1">
                                                            <Border.InputBindings>
                                                                <MouseBinding MouseAction="LeftClick"
                                                                              Command="{Binding DataContext.SelectSuggestionCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                                              CommandParameter="{Binding}"/>
                                                            </Border.InputBindings>
                                                            <StackPanel>
                                                                <TextBlock Text="{Binding Name}"
                                                                           FontSize="14"
                                                                           FontWeight="SemiBold"
                                                                           Foreground="#1a1a2e"/>
                                                                <StackPanel Orientation="Horizontal" Margin="0,3,0,0">
                                                                    <TextBlock Text="{Binding Barcode}" FontSize="11" Foreground="#aaa"/>
                                                                    <TextBlock Text="  ·  " FontSize="11" Foreground="#ccc"/>
                                                                    <TextBlock Text="{Binding UnitPrice, StringFormat={}{0:N0} sum}" FontSize="11" Foreground="#4CAF50" FontWeight="SemiBold"/>
                                                                </StackPanel>
                                                            </StackPanel>
                                                            <Border.Style>
                                                                <Style TargetType="Border">
                                                                    <Style.Triggers>
                                                                        <Trigger Property="IsMouseOver" Value="True">
                                                                            <Setter Property="Background" Value="#f8f9fa"/>
                                                                        </Trigger>
                                                                    </Style.Triggers>
                                                                </Style>
                                                            </Border.Style>
                                                        </Border>
                                                    </DataTemplate>
                                                </ItemsControl.ItemTemplate>
                                            </ItemsControl>
                                        </ScrollViewer>
                                    </Border>
                                </Popup>
                            </Grid>
                        </Border>
                    </Grid>
                </Border>

                <!-- Success Message -->
                <Border Grid.Row="2"
                        Margin="20,0,20,8"
                        Background="#e8f5e9"
                        Padding="14"
                        CornerRadius="10"
                        Visibility="{Binding SuccessMessage, Converter={StaticResource NullToVisibilityConverter}}">
                    <StackPanel Orientation="Horizontal">
                        <Path Data="M12,2A10,10 0 0,1 22,12A10,10 0 0,1 12,22A10,10 0 0,1 2,12A10,10 0 0,1 12,2M12,4A8,8 0 0,0 4,12A8,8 0 0,0 12,20A8,8 0 0,0 20,12A8,8 0 0,0 12,4M11,16.5L6.5,12L7.91,10.59L11,13.67L16.59,8.09L18,9.5L11,16.5Z"
                              Fill="#4CAF50" Width="16" Height="16" Stretch="Uniform" Margin="0,0,10,0" VerticalAlignment="Center"/>
                        <TextBlock Text="{Binding SuccessMessage}" Foreground="#2E7D32" FontSize="13" VerticalAlignment="Center"/>
                    </StackPanel>
                </Border>

                <!-- Error Message -->
                <Border Grid.Row="3"
                        Margin="20,0,20,8"
                        Background="#FFEBEE"
                        Padding="14"
                        CornerRadius="10"
                        Visibility="{Binding ErrorMessage, Converter={StaticResource NullToVisibilityConverter}}">
                    <StackPanel Orientation="Horizontal">
                        <Path Data="M13,13H11V7H13M13,17H11V15H13M12,2A10,10 0 0,0 2,12A10,10 0 0,0 12,22A10,10 0 0,0 22,12A10,10 0 0,0 12,2Z"
                              Fill="#e53935" Width="16" Height="16" Stretch="Uniform" Margin="0,0,10,0" VerticalAlignment="Center"/>
                        <TextBlock Text="{Binding ErrorMessage}" Foreground="#C62828" FontSize="13" TextWrapping="Wrap"/>
                    </StackPanel>
                </Border>

                <!-- Column Headers -->
                <Border Grid.Row="4" Padding="20,0,20,0">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <!-- Table Header -->
                        <Border Grid.Row="0" Background="#f8f9fa" CornerRadius="10" Padding="16,12" Margin="0,0,0,4">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="40"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="120"/>
                                    <ColumnDefinition Width="110"/>
                                    <ColumnDefinition Width="80"/>
                                    <ColumnDefinition Width="90"/>
                                    <ColumnDefinition Width="150"/>
                                    <ColumnDefinition Width="80"/>
                                    <ColumnDefinition Width="70"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0" Text="#" FontSize="12" Foreground="#666" FontWeight="Bold"/>
                                <TextBlock Grid.Column="1" Text="Nomi" FontSize="12" Foreground="#666" FontWeight="Bold"/>
                                <TextBlock Grid.Column="2" Text="Kategoriya" FontSize="12" Foreground="#666" FontWeight="Bold"/>
                                <TextBlock Grid.Column="3" Text="Narxi" FontSize="12" Foreground="#666" FontWeight="Bold"/>
                                <TextBlock Grid.Column="4" Text="O'lchov" FontSize="12" Foreground="#666" FontWeight="Bold"/>
                                <TextBlock Grid.Column="5" Text="Zaxira" FontSize="12" Foreground="#666" FontWeight="Bold"/>
                                <TextBlock Grid.Column="6" Text="Shtrix kod" FontSize="12" Foreground="#666" FontWeight="Bold"/>
                                <TextBlock Grid.Column="7" Text="Holat" FontSize="12" Foreground="#666" FontWeight="Bold"/>
                                <TextBlock Grid.Column="8" Text="Amallar" FontSize="12" Foreground="#666" FontWeight="Bold" HorizontalAlignment="Center"/>
                            </Grid>
                        </Border>

                        <!-- Products List -->
                        <ListView Grid.Row="1"
                                  x:Name="ProductsListView"
                                  ItemsSource="{Binding Products}"
                                  SelectedItem="{Binding SelectedProduct}"
                                  BorderThickness="0"
                                  Background="Transparent"
                                  ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                                  SelectionMode="Single">
                            <ListView.ItemContainerStyle>
                                <Style TargetType="ListViewItem">
                                    <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                                    <Setter Property="Padding" Value="0"/>
                                    <Setter Property="Margin" Value="0,1"/>
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="ListViewItem">
                                                <Border x:Name="border" Background="Transparent" CornerRadius="10">
                                                    <ContentPresenter/>
                                                </Border>
                                                <ControlTemplate.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter TargetName="border" Property="Background" Value="#f8f9fa"/>
                                                    </Trigger>
                                                    <Trigger Property="IsSelected" Value="True">
                                                        <Setter TargetName="border" Property="Background" Value="#e8f0fe"/>
                                                    </Trigger>
                                                </ControlTemplate.Triggers>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                    <Setter Property="ContextMenu">
                                        <Setter.Value>
                                            <ContextMenu FontSize="15">
                                                <MenuItem Header="Shtrix kod" Padding="6,8,20,8"
                                                          Command="{Binding PlacementTarget.Tag.ShowBarcodeCommand, RelativeSource={RelativeSource AncestorType=ContextMenu}}">
                                                    <MenuItem.Icon>
                                                        <Path Data="M2,6H4V18H2V6M5,6H6V18H5V6M7,6H10V18H7V6M11,6H12V18H11V6M14,6H16V18H14V6M17,6H20V18H17V6M21,6H22V18H21V6Z"
                                                              Fill="#333" Width="18" Height="18" Stretch="Uniform"/>
                                                    </MenuItem.Icon>
                                                </MenuItem>
                                                <Separator/>
                                                <MenuItem Header="Tahrirlash" Padding="6,8,20,8"
                                                          Command="{Binding PlacementTarget.Tag.EditProductCommand, RelativeSource={RelativeSource AncestorType=ContextMenu}}">
                                                    <MenuItem.Icon>
                                                        <Path Data="M20.71,7.04C21.1,6.65 21.1,6 20.71,5.63L18.37,3.29C18,2.9 17.35,2.9 16.96,3.29L15.12,5.12L18.87,8.87M3,17.25V21H6.75L17.81,9.93L14.06,6.18L3,17.25Z"
                                                              Fill="#4361ee" Width="18" Height="18" Stretch="Uniform"/>
                                                    </MenuItem.Icon>
                                                </MenuItem>
                                                <MenuItem Header="Zaxira qo'shish" Padding="6,8,20,8"
                                                          Command="{Binding PlacementTarget.Tag.ShowStockInPanelCommand, RelativeSource={RelativeSource AncestorType=ContextMenu}}">
                                                    <MenuItem.Icon>
                                                        <Path Data="M19,13H13V19H11V13H5V11H11V5H13V11H19V13Z"
                                                              Fill="#FF9800" Width="18" Height="18" Stretch="Uniform"/>
                                                    </MenuItem.Icon>
                                                </MenuItem>
                                                <Separator/>
                                                <MenuItem Header="O'chirish" Padding="6,8,20,8"
                                                          Command="{Binding PlacementTarget.Tag.DeleteProductCommand, RelativeSource={RelativeSource AncestorType=ContextMenu}}">
                                                    <MenuItem.Icon>
                                                        <Path Data="M19,4H15.5L14.5,3H9.5L8.5,4H5V6H19M6,19A2,2 0 0,0 8,21H16A2,2 0 0,0 18,19V7H6V19Z"
                                                              Fill="#f44336" Width="18" Height="18" Stretch="Uniform"/>
                                                    </MenuItem.Icon>
                                                </MenuItem>
                                            </ContextMenu>
                                        </Setter.Value>
                                    </Setter>
                                    <Setter Property="Tag" Value="{Binding DataContext, RelativeSource={RelativeSource AncestorType=UserControl}}"/>
                                </Style>
                            </ListView.ItemContainerStyle>
                            <ListView.ItemTemplate>
                                <DataTemplate>
                                    <Border Padding="16,10">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="40"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="120"/>
                                                <ColumnDefinition Width="110"/>
                                                <ColumnDefinition Width="80"/>
                                                <ColumnDefinition Width="90"/>
                                                <ColumnDefinition Width="150"/>
                                                <ColumnDefinition Width="80"/>
                                                <ColumnDefinition Width="70"/>
                                            </Grid.ColumnDefinitions>

                                            <!-- Row Number -->
                                            <Border Grid.Column="0" Background="#f0f4ff" CornerRadius="8" Width="28" Height="28" VerticalAlignment="Center" HorizontalAlignment="Left">
                                                <TextBlock Text="{Binding RelativeSource={RelativeSource AncestorType=ListViewItem}, Converter={StaticResource IndexConverter}}"
                                                           FontSize="12" FontWeight="SemiBold" Foreground="#4361ee"
                                                           HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </Border>

                                            <!-- Name -->
                                            <TextBlock Grid.Column="1" Text="{Binding Name}"
                                                       FontSize="13.5" FontWeight="SemiBold" Foreground="#1a1a2e"
                                                       VerticalAlignment="Center"
                                                       TextTrimming="CharacterEllipsis"
                                                       ToolTip="{Binding Name}"/>

                                            <!-- Category -->
                                            <Border Grid.Column="2" VerticalAlignment="Center" HorizontalAlignment="Left">
                                                <Border Background="#e8f0fe" CornerRadius="6" Padding="8,4">
                                                    <TextBlock Text="{Binding Category.Name}"
                                                               FontSize="11" Foreground="#4361ee" FontWeight="SemiBold"
                                                               TextTrimming="CharacterEllipsis"
                                                               ToolTip="{Binding Category.Name}"/>
                                                </Border>
                                            </Border>

                                            <!-- Price -->
                                            <StackPanel Grid.Column="3" Orientation="Horizontal" VerticalAlignment="Center">
                                                <TextBlock Text="{Binding UnitPrice, StringFormat={}{0:N0}}"
                                                           FontSize="13" FontWeight="Bold" Foreground="#2e7d32"/>
                                                <TextBlock Text=" sum" FontSize="11" Foreground="#888" VerticalAlignment="Bottom" Margin="2,0,0,1"/>
                                            </StackPanel>

                                            <!-- Unit Type -->
                                            <TextBlock Grid.Column="4" Text="{Binding UnitType}"
                                                       FontSize="12" Foreground="#666"
                                                       VerticalAlignment="Center"/>

                                            <!-- Stock -->
                                            <Border Grid.Column="5" VerticalAlignment="Center" HorizontalAlignment="Left">
                                                <Border CornerRadius="6" Padding="8,4">
                                                    <Border.Style>
                                                        <Style TargetType="Border">
                                                            <Setter Property="Background" Value="#e8f5e9"/>
                                                            <Style.Triggers>
                                                                <DataTrigger Binding="{Binding StockQuantity}" Value="0">
                                                                    <Setter Property="Background" Value="#FFEBEE"/>
                                                                </DataTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </Border.Style>
                                                    <TextBlock FontSize="12" FontWeight="Bold">
                                                        <TextBlock.Style>
                                                            <Style TargetType="TextBlock">
                                                                <Setter Property="Foreground" Value="#2e7d32"/>
                                                                <Style.Triggers>
                                                                    <DataTrigger Binding="{Binding StockQuantity}" Value="0">
                                                                        <Setter Property="Foreground" Value="#e53935"/>
                                                                    </DataTrigger>
                                                                </Style.Triggers>
                                                            </Style>
                                                        </TextBlock.Style>
                                                        <Run Text="{Binding StockQuantity, StringFormat=0.##}"/>
                                                    </TextBlock>
                                                </Border>
                                            </Border>

                                            <!-- Barcode -->
                                            <DockPanel Grid.Column="6" VerticalAlignment="Center">
                                                <Button DockPanel.Dock="Right"
                                                        Click="CopyBarcode_Click"
                                                        Tag="{Binding Barcode}"
                                                        Cursor="Hand"
                                                        ToolTip="Nusxalash"
                                                        Margin="4,0,0,0">
                                                    <Button.Template>
                                                        <ControlTemplate TargetType="Button">
                                                            <Border x:Name="border" Background="Transparent" CornerRadius="6" Padding="6,4">
                                                                <Path Data="M19,21H8V7H19M19,5H8A2,2 0 0,0 6,7V21A2,2 0 0,0 8,23H19A2,2 0 0,0 21,21V7A2,2 0 0,0 19,5M16,1H4A2,2 0 0,0 2,3V17H4V3H16V1Z"
                                                                      Fill="#aaa" Width="13" Height="13" Stretch="Uniform"/>
                                                            </Border>
                                                            <ControlTemplate.Triggers>
                                                                <Trigger Property="IsMouseOver" Value="True">
                                                                    <Setter TargetName="border" Property="Background" Value="#f0f0f0"/>
                                                                </Trigger>
                                                            </ControlTemplate.Triggers>
                                                        </ControlTemplate>
                                                    </Button.Template>
                                                </Button>
                                                <TextBlock Text="{Binding Barcode}"
                                                           TextTrimming="CharacterEllipsis"
                                                           ToolTip="{Binding Barcode}"
                                                           FontSize="12"
                                                           Foreground="#666"
                                                           VerticalAlignment="Center"/>
                                            </DockPanel>

                                            <!-- Status -->
                                            <Border Grid.Column="7" CornerRadius="10" Padding="8,4" HorizontalAlignment="Left" VerticalAlignment="Center">
                                                <Border.Style>
                                                    <Style TargetType="Border">
                                                        <Setter Property="Background" Value="#e8f5e9"/>
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding IsActive}" Value="False">
                                                                <Setter Property="Background" Value="#FFEBEE"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </Border.Style>
                                                <TextBlock FontSize="11" FontWeight="SemiBold">
                                                    <TextBlock.Style>
                                                        <Style TargetType="TextBlock">
                                                            <Setter Property="Text" Value="Faol"/>
                                                            <Setter Property="Foreground" Value="#4CAF50"/>
                                                            <Style.Triggers>
                                                                <DataTrigger Binding="{Binding IsActive}" Value="False">
                                                                    <Setter Property="Text" Value="Nofaol"/>
                                                                    <Setter Property="Foreground" Value="#f44336"/>
                                                                </DataTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </TextBlock.Style>
                                                </TextBlock>
                                            </Border>

                                            <!-- Actions Button -->
                                            <Button Grid.Column="8"
                                                    x:Name="ActionMenuButton"
                                                    Click="ActionMenuButton_Click"
                                                    Tag="{Binding DataContext, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                    Cursor="Hand"
                                                    ToolTip="Amallar"
                                                    HorizontalAlignment="Center"
                                                    VerticalAlignment="Center">
                                                <Button.Template>
                                                    <ControlTemplate TargetType="Button">
                                                        <Border x:Name="btnBorder"
                                                                Background="Transparent"
                                                                CornerRadius="10"
                                                                Padding="14,8">
                                                            <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
                                                                <Ellipse Width="5" Height="5" Fill="#999" Margin="0,0,0,3"/>
                                                                <Ellipse Width="5" Height="5" Fill="#999" Margin="0,0,0,3"/>
                                                                <Ellipse Width="5" Height="5" Fill="#999"/>
                                                            </StackPanel>
                                                        </Border>
                                                        <ControlTemplate.Triggers>
                                                            <Trigger Property="IsMouseOver" Value="True">
                                                                <Setter TargetName="btnBorder" Property="Background" Value="#f0f0f0"/>
                                                            </Trigger>
                                                            <Trigger Property="IsPressed" Value="True">
                                                                <Setter TargetName="btnBorder" Property="Background" Value="#e0e0e0"/>
                                                            </Trigger>
                                                        </ControlTemplate.Triggers>
                                                    </ControlTemplate>
                                                </Button.Template>
                                            </Button>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>

                        <!-- Empty State -->
                        <StackPanel Grid.Row="1"
                                    VerticalAlignment="Center"
                                    HorizontalAlignment="Center"
                                    Visibility="{Binding Products.Count, Converter={StaticResource IntToVisibilityConverter}, ConverterParameter=invert}">
                            <Border Background="#f0f4ff" CornerRadius="24" Width="80" Height="80" HorizontalAlignment="Center">
                                <Path Data="M12,2A10,10 0 0,1 22,12A10,10 0 0,1 12,22A10,10 0 0,1 2,12A10,10 0 0,1 12,2M7,10L12,15L17,10H7Z"
                                      Fill="#4361ee" Width="36" Height="36" Stretch="Uniform"
                                      HorizontalAlignment="Center" VerticalAlignment="Center" Opacity="0.5"/>
                            </Border>
                            <TextBlock Text="Mahsulotlar topilmadi"
                                       FontSize="16" FontWeight="SemiBold" Foreground="#555"
                                       HorizontalAlignment="Center" Margin="0,16,0,0"/>
                            <TextBlock Text="Yangi mahsulot qo'shish uchun yuqoridagi tugmani bosing"
                                       FontSize="13" Foreground="#aaa"
