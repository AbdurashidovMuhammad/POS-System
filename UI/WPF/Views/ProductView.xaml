<UserControl x:Class="WPF.Views.ProductView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="clr-namespace:WPF.ViewModels"
             mc:Ignorable="d"
             d:DataContext="{d:DesignInstance Type=vm:ProductViewModel}"
             d:DesignHeight="700" d:DesignWidth="1200"
             Loaded="UserControl_Loaded">

    <UserControl.Resources>
        <!-- Primary Button Style -->
        <Style x:Key="PrimaryButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#2196F3"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="20,12"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}" CornerRadius="8" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#1976D2"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="border" Property="Opacity" Value="0.5"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Success Button Style -->
        <Style x:Key="SuccessButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#4CAF50"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="20,12"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}" CornerRadius="8" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#388E3C"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="border" Property="Opacity" Value="0.5"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Warning Button Style -->
        <Style x:Key="WarningButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#FF9800"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="16,10"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}" CornerRadius="6" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#F57C00"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="border" Property="Opacity" Value="0.5"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Danger Button Style -->
        <Style x:Key="DangerButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#f44336"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="16,10"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}" CornerRadius="6" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#d32f2f"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="border" Property="Opacity" Value="0.5"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Secondary Button Style -->
        <Style x:Key="SecondaryButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#f5f5f5"/>
            <Setter Property="Foreground" Value="#333"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#ddd"/>
            <Setter Property="Padding" Value="20,12"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" CornerRadius="8" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#e8e8e8"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="border" Property="Opacity" Value="0.5"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Form Input Style -->
        <Style x:Key="FormInputStyle" TargetType="TextBox">
            <Setter Property="Background" Value="#f8f9fa"/>
            <Setter Property="BorderBrush" Value="#e0e0e0"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="12,10"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border x:Name="border" Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" CornerRadius="6">
                            <ScrollViewer x:Name="PART_ContentHost" Margin="{TemplateBinding Padding}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter TargetName="border" Property="BorderBrush" Value="#2196F3"/>
                                <Setter TargetName="border" Property="BorderThickness" Value="2"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Form ComboBox Style -->
        <Style x:Key="FormComboBoxStyle" TargetType="ComboBox">
            <Setter Property="Background" Value="#f8f9fa"/>
            <Setter Property="BorderBrush" Value="#e0e0e0"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="12,10"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>
    </UserControl.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>

        <!-- Main Content -->
        <Grid Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Header with Search and Add Button -->
            <Border Grid.Row="0" Background="White" CornerRadius="12" Padding="20" Margin="0,0,0,15">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="20" ShadowDepth="2" Opacity="0.08" Direction="270"/>
                </Border.Effect>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Search Box -->
                    <Border x:Name="SearchBorder" Grid.Column="0" Background="#f5f5f5" CornerRadius="8" Margin="0,0,15,0">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <Path Grid.Column="0"
                                  Data="M9.5,3A6.5,6.5 0 0,1 16,9.5C16,11.11 15.41,12.59 14.44,13.73L14.71,14H15.5L20.5,19L19,20.5L14,15.5V14.71L13.73,14.44C12.59,15.41 11.11,16 9.5,16A6.5,6.5 0 0,1 3,9.5A6.5,6.5 0 0,1 9.5,3M9.5,5C7,5 5,7 5,9.5C5,12 7,14 9.5,14C12,14 14,12 14,9.5C14,7 12,5 9.5,5Z"
                                  Fill="#888"
                                  Width="18" Height="18"
                                  Stretch="Uniform"
                                  Margin="15,0,10,0"
                                  VerticalAlignment="Center"/>
                            <TextBox x:Name="SearchTextBox"
                                     Grid.Column="1"
                                     Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                                     Background="Transparent"
                                     BorderThickness="0"
                                     Padding="5,12"
                                     FontSize="14"
                                     VerticalContentAlignment="Center"
                                     LostFocus="SearchTextBox_LostFocus">
                                <TextBox.InputBindings>
                                    <KeyBinding Key="Enter" Command="{Binding SearchProductsCommand}"/>
                                    <KeyBinding Key="Escape" Command="{Binding CloseSuggestionsCommand}"/>
                                </TextBox.InputBindings>
                            </TextBox>
                            <Button Grid.Column="2"
                                    Content="Qidirish"
                                    Command="{Binding SearchProductsCommand}"
                                    Style="{StaticResource PrimaryButtonStyle}"
                                    Padding="20,10"
                                    Margin="5"/>

                            <!-- Suggestions Popup -->
                            <Popup Grid.Column="1"
                                   IsOpen="{Binding IsSuggestionsOpen}"
                                   PlacementTarget="{Binding ElementName=SearchBorder}"
                                   Placement="Bottom"
                                   Width="{Binding ElementName=SearchBorder, Path=ActualWidth}"
                                   StaysOpen="False"
                                   AllowsTransparency="True"
                                   PopupAnimation="Slide">
                                <Border Background="White"
                                        BorderBrush="#e0e0e0"
                                        BorderThickness="1"
                                        CornerRadius="8"
                                        MaxHeight="350">
                                    <Border.Effect>
                                        <DropShadowEffect BlurRadius="15" ShadowDepth="3" Opacity="0.15" Direction="270"/>
                                    </Border.Effect>
                                    <ScrollViewer VerticalScrollBarVisibility="Auto" MaxHeight="340">
                                        <ItemsControl ItemsSource="{Binding Suggestions}">
                                            <ItemsControl.ItemTemplate>
                                                <DataTemplate>
                                                    <Border Padding="10,8"
                                                            Cursor="Hand"
                                                            Background="Transparent"
                                                            BorderBrush="#f0f0f0"
                                                            BorderThickness="0,0,0,1">
                                                        <Border.InputBindings>
                                                            <MouseBinding MouseAction="LeftClick"
                                                                          Command="{Binding DataContext.SelectSuggestionCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                                          CommandParameter="{Binding}"/>
                                                        </Border.InputBindings>
                                                        <TextBlock Text="{Binding Name}"
                                                                   FontSize="14"
                                                                   Foreground="#333"/>
                                                        <Border.Style>
                                                            <Style TargetType="Border">
                                                                <Style.Triggers>
                                                                    <Trigger Property="IsMouseOver" Value="True">
                                                                        <Setter Property="Background" Value="#f5f5f5"/>
                                                                    </Trigger>
                                                                </Style.Triggers>
                                                            </Style>
                                                        </Border.Style>
                                                    </Border>
                                                </DataTemplate>
                                            </ItemsControl.ItemTemplate>
                                        </ItemsControl>
                                    </ScrollViewer>
                                </Border>
                            </Popup>
                        </Grid>
                    </Border>

                    <!-- Add Button -->
                    <Button Grid.Column="2"
                            Command="{Binding ShowAddPanelCommand}"
                            Style="{StaticResource SuccessButtonStyle}"
                            Padding="20,12">
                        <StackPanel Orientation="Horizontal">
                            <Path Data="M19,13H13V19H11V13H5V11H11V5H13V11H19V13Z"
                                  Fill="White"
                                  Width="16" Height="16"
                                  Stretch="Uniform"
                                  Margin="0,0,8,0"
                                  VerticalAlignment="Center"/>
                            <TextBlock Text="Yangi mahsulot" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>
                </Grid>
            </Border>

            <!-- Success Message -->
            <Border Grid.Row="1"
                    Background="#E8F5E9"
                    Padding="15"
                    CornerRadius="8"
                    Margin="0,0,0,15"
                    Visibility="{Binding SuccessMessage, Converter={StaticResource NullToVisibilityConverter}}">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Path Grid.Column="0"
                          Data="M21,7L9,19L3.5,13.5L4.91,12.09L9,16.17L19.59,5.59L21,7Z"
                          Fill="#4CAF50"
                          Width="20" Height="20"
                          Stretch="Uniform"
                          Margin="0,0,12,0"
                          VerticalAlignment="Center"/>
                    <TextBlock Grid.Column="1" Text="{Binding SuccessMessage}" Foreground="#2E7D32" FontSize="14" VerticalAlignment="Center"/>
                </Grid>
            </Border>

            <!-- Products DataGrid -->
            <Border Grid.Row="2" Background="White" CornerRadius="12">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="20" ShadowDepth="2" Opacity="0.08" Direction="270"/>
                </Border.Effect>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <DataGrid x:Name="ProductsDataGrid"
                              Grid.Row="0"
                              ItemsSource="{Binding Products}"
                              SelectedItem="{Binding SelectedProduct}"
                              AutoGenerateColumns="False"
                              IsReadOnly="True"
                              CanUserAddRows="False"
                              SelectionUnit="FullRow"
                              Background="White"
                              GridLinesVisibility="All"
                              VerticalGridLinesBrush="#e0e0e0"
                              HorizontalGridLinesBrush="#f0f0f0"
                              HeadersVisibility="All"
                              BorderThickness="0"
                              Margin="15"
                              SelectionMode="Single"
                              LoadingRow="ProductsDataGrid_LoadingRow"
                              ClipboardCopyMode="ExcludeHeader">
                        <DataGrid.ColumnHeaderStyle>
                            <Style TargetType="DataGridColumnHeader">
                                <Setter Property="Background" Value="#f8f9fa"/>
                                <Setter Property="Padding" Value="12,12"/>
                                <Setter Property="FontWeight" Value="SemiBold"/>
                                <Setter Property="Foreground" Value="#333"/>
                                <Setter Property="BorderBrush" Value="#e0e0e0"/>
                                <Setter Property="BorderThickness" Value="0,0,1,2"/>
                            </Style>
                        </DataGrid.ColumnHeaderStyle>
                        <DataGrid.RowStyle>
                            <Style TargetType="DataGridRow">
                                <Setter Property="Background" Value="White"/>
                                <Setter Property="BorderBrush" Value="#f0f0f0"/>
                                <Setter Property="BorderThickness" Value="0,0,0,1"/>
                                <Setter Property="Tag" Value="{Binding DataContext, RelativeSource={RelativeSource AncestorType=UserControl}}"/>
                                <Setter Property="ContextMenu">
                                    <Setter.Value>
                                        <ContextMenu>
                                            <MenuItem Header="Shtrix kod"
                                                      Command="{Binding PlacementTarget.Tag.ShowBarcodeCommand, RelativeSource={RelativeSource AncestorType=ContextMenu}}">
                                                <MenuItem.Icon>
                                                    <Path Data="M2,6H4V18H2V6M5,6H6V18H5V6M7,6H10V18H7V6M11,6H12V18H11V6M14,6H16V18H14V6M17,6H20V18H17V6M21,6H22V18H21V6Z"
                                                          Fill="#333" Width="14" Height="14" Stretch="Uniform"/>
                                                </MenuItem.Icon>
                                            </MenuItem>
                                            <Separator/>
                                            <MenuItem Header="Tahrirlash"
                                                      Command="{Binding PlacementTarget.Tag.EditProductCommand, RelativeSource={RelativeSource AncestorType=ContextMenu}}">
                                                <MenuItem.Icon>
                                                    <Path Data="M20.71,7.04C21.1,6.65 21.1,6 20.71,5.63L18.37,3.29C18,2.9 17.35,2.9 16.96,3.29L15.12,5.12L18.87,8.87M3,17.25V21H6.75L17.81,9.93L14.06,6.18L3,17.25Z"
                                                          Fill="#2196F3" Width="14" Height="14" Stretch="Uniform"/>
                                                </MenuItem.Icon>
                                            </MenuItem>
                                            <MenuItem Header="Zaxira qo'shish"
                                                      Command="{Binding PlacementTarget.Tag.ShowStockInPanelCommand, RelativeSource={RelativeSource AncestorType=ContextMenu}}">
                                                <MenuItem.Icon>
                                                    <Path Data="M19,13H13V19H11V13H5V11H11V5H13V11H19V13Z"
                                                          Fill="#FF9800" Width="14" Height="14" Stretch="Uniform"/>
                                                </MenuItem.Icon>
                                            </MenuItem>
                                            <Separator/>
                                            <MenuItem Header="O'chirish"
                                                      Command="{Binding PlacementTarget.Tag.DeleteProductCommand, RelativeSource={RelativeSource AncestorType=ContextMenu}}">
                                                <MenuItem.Icon>
                                                    <Path Data="M19,4H15.5L14.5,3H9.5L8.5,4H5V6H19M6,19A2,2 0 0,0 8,21H16A2,2 0 0,0 18,19V7H6V19Z"
                                                          Fill="#f44336" Width="14" Height="14" Stretch="Uniform"/>
                                                </MenuItem.Icon>
                                            </MenuItem>
                                        </ContextMenu>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#f8f9fa"/>
                                    </Trigger>
                                    <Trigger Property="IsSelected" Value="True">
                                        <Setter Property="Background" Value="#e3f2fd"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </DataGrid.RowStyle>
                        <DataGrid.CellStyle>
                            <Style TargetType="DataGridCell">
                                <Setter Property="BorderBrush" Value="#e0e0e0"/>
                                <Setter Property="BorderThickness" Value="0,0,1,0"/>
                                <Setter Property="Cursor" Value="Hand"/>
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="DataGridCell">
                                            <Border Background="{TemplateBinding Background}"
                                                    BorderBrush="{TemplateBinding BorderBrush}"
                                                    BorderThickness="{TemplateBinding BorderThickness}"
                                                    Padding="12,10">
                                                <ContentPresenter VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsSelected" Value="True">
                                        <Setter Property="Background" Value="#e3f2fd"/>
                                        <Setter Property="Foreground" Value="#333"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </DataGrid.CellStyle>
                        <DataGrid.RowHeaderStyle>
                            <Style TargetType="DataGridRowHeader">
                                <Setter Property="Width" Value="45"/>
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="DataGridRowHeader">
                                            <Border Background="#f8f9fa"
                                                    BorderBrush="#e0e0e0"
                                                    BorderThickness="0,0,1,0">
                                                <TextBlock Text="{Binding RelativeSource={RelativeSource AncestorType=DataGridRow}, Path=Header}"
                                                           Foreground="#666"
                                                           FontSize="13"
                                                           HorizontalAlignment="Center"
                                                           VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </DataGrid.RowHeaderStyle>
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Nomi" Binding="{Binding Name}" Width="*">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="TextTrimming" Value="CharacterEllipsis"/>
                                        <Setter Property="ToolTip" Value="{Binding Name}"/>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>
                            <DataGridTextColumn Header="Kategoriya" Binding="{Binding Category.Name}" Width="130">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="TextTrimming" Value="CharacterEllipsis"/>
                                        <Setter Property="ToolTip" Value="{Binding Category.Name}"/>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>
                            <DataGridTemplateColumn Header="Narxi" Width="120"
                                                    ClipboardContentBinding="{Binding UnitPrice, StringFormat=N0}">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock TextTrimming="CharacterEllipsis">
                                            <Run Text="{Binding UnitPrice, StringFormat=N0}"/>
                                            <Run Text=" so'm" Foreground="#888"/>
                                        </TextBlock>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                            <DataGridTextColumn Header="O'lchov" Binding="{Binding UnitType}" Width="80">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="TextTrimming" Value="CharacterEllipsis"/>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>
                            <DataGridTemplateColumn Header="Zaxira" Width="100"
                                                    ClipboardContentBinding="{Binding StockQuantity, StringFormat=N2}">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock FontWeight="SemiBold">
                                            <TextBlock.Style>
                                                <Style TargetType="TextBlock">
                                                    <Setter Property="Foreground" Value="#4CAF50"/>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding StockQuantity}" Value="0">
                                                            <Setter Property="Foreground" Value="#f44336"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </TextBlock.Style>
                                            <Run Text="{Binding StockQuantity, StringFormat=N2}"/>
                                        </TextBlock>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                            <DataGridTemplateColumn Header="Shtrix kod" Width="160"
                                                    ClipboardContentBinding="{Binding Barcode}">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <DockPanel>
                                            <Button DockPanel.Dock="Right"
                                                    Click="CopyBarcode_Click"
                                                    Tag="{Binding Barcode}"
                                                    Cursor="Hand"
                                                    ToolTip="Nusxalash"
                                                    Width="24" Height="24"
                                                    Margin="4,0,0,0"
                                                    Background="Transparent"
                                                    BorderThickness="0">
                                                <TextBlock Text="&#xE8C8;" FontFamily="Segoe MDL2 Assets" FontSize="13" Foreground="#888"/>
                                            </Button>
                                            <TextBlock Text="{Binding Barcode}"
                                                       TextTrimming="CharacterEllipsis"
                                                       ToolTip="{Binding Barcode}"
                                                       VerticalAlignment="Center"/>
                                        </DockPanel>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                            <DataGridTemplateColumn Header="Holat" Width="90"
                                                    ClipboardContentBinding="{Binding IsActive}">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <Border CornerRadius="10" Padding="8,4" HorizontalAlignment="Left">
                                            <Border.Style>
                                                <Style TargetType="Border">
                                                    <Setter Property="Background" Value="#E8F5E9"/>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding IsActive}" Value="False">
                                                            <Setter Property="Background" Value="#FFEBEE"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Border.Style>
                                            <TextBlock FontSize="12" FontWeight="SemiBold">
                                                <TextBlock.Style>
                                                    <Style TargetType="TextBlock">
                                                        <Setter Property="Text" Value="Faol"/>
                                                        <Setter Property="Foreground" Value="#4CAF50"/>
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding IsActive}" Value="False">
                                                                <Setter Property="Text" Value="Nofaol"/>
                                                                <Setter Property="Foreground" Value="#f44336"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </TextBlock.Style>
                                            </TextBlock>
                                        </Border>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                            <DataGridTemplateColumn Header="Amallar" Width="70" CanUserResize="False" CanUserReorder="False">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <Button x:Name="ActionMenuButton"
                                                Background="Transparent"
                                                BorderThickness="0"
                                                Cursor="Hand"
                                                Padding="6"
                                                HorizontalAlignment="Center"
                                                Click="ActionMenuButton_Click"
                                                Tag="{Binding DataContext, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                ToolTip="Amallar">
                                            <Button.Template>
                                                <ControlTemplate TargetType="Button">
                                                    <Border x:Name="btnBorder"
                                                            Background="Transparent"
                                                            CornerRadius="6"
                                                            Padding="8,6">
                                                        <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
                                                            <Ellipse Width="4" Height="4" Fill="#999" Margin="0,0,0,2"/>
                                                            <Ellipse Width="4" Height="4" Fill="#999" Margin="0,0,0,2"/>
                                                            <Ellipse Width="4" Height="4" Fill="#999"/>
                                                        </StackPanel>
                                                    </Border>
                                                    <ControlTemplate.Triggers>
                                                        <Trigger Property="IsMouseOver" Value="True">
                                                            <Setter TargetName="btnBorder" Property="Background" Value="#f0f0f0"/>
                                                        </Trigger>
                                                        <Trigger Property="IsPressed" Value="True">
                                                            <Setter TargetName="btnBorder" Property="Background" Value="#e0e0e0"/>
                                                        </Trigger>
                                                    </ControlTemplate.Triggers>
                                                </ControlTemplate>
                                            </Button.Template>
                                        </Button>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>
                    </DataGrid>

                    <!-- Pagination Controls -->
                    <Border Grid.Row="1" BorderBrush="#e0e0e0" BorderThickness="0,1,0,0" Padding="15,12">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Grid.Column="0" VerticalAlignment="Center" Foreground="#666" FontSize="13">
                                <Run Text="Jami: "/>
                                <Run Text="{Binding TotalCount}" FontWeight="SemiBold"/>
                                <Run Text=" ta mahsulot"/>
                            </TextBlock>

                            <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center">
                                <Button Content="Oldingi"
                                        Command="{Binding PreviousPageCommand}"
                                        Style="{StaticResource SecondaryButtonStyle}"
                                        Padding="12,8"
                                        Margin="0,0,10,0"/>

                                <TextBlock VerticalAlignment="Center" FontSize="13" Foreground="#333" Margin="5,0">
                                    <Run Text="Sahifa "/>
                                    <Run Text="{Binding CurrentPage}" FontWeight="SemiBold"/>
                                    <Run Text=" / "/>
                                    <Run Text="{Binding TotalPages}" FontWeight="SemiBold"/>
                                </TextBlock>

                                <Button Content="Keyingi"
                                        Command="{Binding NextPageCommand}"
                                        Style="{StaticResource SecondaryButtonStyle}"
                                        Padding="12,8"
                                        Margin="10,0,0,0"/>
                            </StackPanel>
                        </Grid>
                    </Border>

                    <!-- Loading Indicator -->
                    <Border Grid.RowSpan="2"
                            Background="#E0FFFFFF"
                            CornerRadius="12"
                            Visibility="{Binding IsLoading, Converter={StaticResource BoolToVisibilityConverter}}">
                        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                            <ProgressBar IsIndeterminate="True" Width="200" Height="4"/>
                            <TextBlock Text="Yuklanmoqda..." Margin="0,15,0,0" FontSize="14" Foreground="#666"/>
                        </StackPanel>
                    </Border>

                    <!-- Error Message -->
                    <Border Grid.RowSpan="2"
                            Background="#FFEBEE"
                            Padding="20"
                            CornerRadius="8"
                            VerticalAlignment="Top"
                            HorizontalAlignment="Stretch"
                            Margin="15"
                            Visibility="{Binding ErrorMessage, Converter={StaticResource NullToVisibilityConverter}}">
                        <TextBlock Text="{Binding ErrorMessage}" Foreground="#C62828"/>
                    </Border>
                </Grid>
            </Border>
        </Grid>

        <!-- Side Panel for Add/Edit/StockIn -->
        <Border Grid.Column="1"
                Width="400"
                Background="White"
                Margin="15,0,0,0"
                CornerRadius="12"
                Visibility="{Binding IsPanelOpen, Converter={StaticResource BoolToVisibilityConverter}}">
            <Border.Effect>
                <DropShadowEffect BlurRadius="20" ShadowDepth="2" Opacity="0.1" Direction="180"/>
            </Border.Effect>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Panel Header -->
                <Border Grid.Row="0" BorderBrush="#e0e0e0" BorderThickness="0,0,0,1" Padding="20,18">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" FontSize="18" FontWeight="SemiBold" Foreground="#1a1a2e" VerticalAlignment="Center">
                            <TextBlock.Style>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Text" Value="Yangi mahsulot"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding IsEditPanelOpen}" Value="True">
                                            <Setter Property="Text" Value="Mahsulotni tahrirlash"/>
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding IsStockInPanelOpen}" Value="True">
                                            <Setter Property="Text" Value="Zaxira qo'shish"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>
                        <Button Grid.Column="1"
                                Command="{Binding CancelPanelCommand}"
                                Background="Transparent"
                                BorderThickness="0"
                                Cursor="Hand"
                                Padding="8">
                            <Path Data="M19,6.41L17.59,5L12,10.59L6.41,5L5,6.41L10.59,12L5,17.59L6.41,19L12,13.41L17.59,19L19,17.59L13.41,12L19,6.41Z"
                                  Fill="#888"
                                  Width="18" Height="18"
                                  Stretch="Uniform"/>
                        </Button>
                    </Grid>
                </Border>

                <!-- Panel Content -->
                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Padding="20">
                    <StackPanel>
                        <!-- Add/Edit Form -->
                        <StackPanel Visibility="{Binding IsStockInPanelOpen, Converter={StaticResource BoolToVisibilityConverter}, ConverterParameter=invert}">
                            <!-- Product Name -->
                            <TextBlock Text="Mahsulot nomi" FontWeight="SemiBold" Foreground="#333" Margin="0,0,0,8"/>
                            <TextBox Text="{Binding FormName, UpdateSourceTrigger=PropertyChanged}"
                                     Style="{StaticResource FormInputStyle}"
                                     Margin="0,0,0,20"/>

                            <!-- Category -->
                            <TextBlock Text="Kategoriya" FontWeight="SemiBold" Foreground="#333" Margin="0,0,0,8"/>
                            <ComboBox ItemsSource="{Binding Categories}"
                                      SelectedValue="{Binding FormCategoryId}"
                                      SelectedValuePath="Id"
                                      DisplayMemberPath="Name"
                                      Style="{StaticResource FormComboBoxStyle}"
                                      Margin="0,0,0,20"/>

                            <!-- Unit Price -->
                            <TextBlock Text="Narxi (so'm)" FontWeight="SemiBold" Foreground="#333" Margin="0,0,0,8"/>
                            <TextBox Text="{Binding FormUnitPrice, UpdateSourceTrigger=PropertyChanged, StringFormat=N0}"
                                     Style="{StaticResource FormInputStyle}"
                                     Margin="0,0,0,20"/>

                            <!-- Unit Type -->
                            <TextBlock Text="O'lchov birligi" FontWeight="SemiBold" Foreground="#333" Margin="0,0,0,8"/>
                            <ComboBox ItemsSource="{Binding UnitTypes}"
                                      SelectedItem="{Binding FormUnitType}"
                                      Style="{StaticResource FormComboBoxStyle}"
                                      Margin="0,0,0,20"/>

                            <!-- Initial Stock (only for new products) -->
                            <StackPanel Visibility="{Binding IsAddPanelOpen, Converter={StaticResource BoolToVisibilityConverter}}">
                                <TextBlock Text="Boshlang'ich zaxira" FontWeight="SemiBold" Foreground="#333" Margin="0,0,0,8"/>
                                <TextBox Text="{Binding FormStockQuantity, UpdateSourceTrigger=PropertyChanged, StringFormat=N2}"
                                         Style="{StaticResource FormInputStyle}"
                                         Margin="0,0,0,20"/>
                            </StackPanel>
                        </StackPanel>

                        <!-- Stock In Form -->
                        <StackPanel Visibility="{Binding IsStockInPanelOpen, Converter={StaticResource BoolToVisibilityConverter}}">
                            <!-- Product Info -->
                            <Border Background="#f8f9fa" CornerRadius="8" Padding="15" Margin="0,0,0,20">
                                <StackPanel>
                                    <TextBlock Text="{Binding SelectedProduct.Name}" FontSize="16" FontWeight="SemiBold" Foreground="#1a1a2e"/>
                                    <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                                        <TextBlock Text="Joriy zaxira: " Foreground="#666"/>
                                        <TextBlock Text="{Binding SelectedProduct.StockQuantity, StringFormat=N2}" FontWeight="SemiBold" Foreground="#4CAF50"/>
                                        <TextBlock Text="{Binding SelectedProduct.UnitType}" Foreground="#666" Margin="5,0,0,0"/>
                                    </StackPanel>
                                </StackPanel>
                            </Border>

                            <!-- Stock Quantity -->
                            <TextBlock Text="Qo'shiladigan miqdor" FontWeight="SemiBold" Foreground="#333" Margin="0,0,0,8"/>
                            <TextBox Text="{Binding StockInQuantity, UpdateSourceTrigger=PropertyChanged, StringFormat=N2}"
                                     Style="{StaticResource FormInputStyle}"
                                     FontSize="18"
                                     Margin="0,0,0,10"/>
                            <TextBlock Foreground="#888" FontSize="12" Margin="0,0,0,20">
                                <Run Text="Yangi zaxira: "/>
                                <Run FontWeight="SemiBold" Foreground="#4CAF50">
                                    <Run.Text>
                                        <MultiBinding StringFormat="{}{0:N2}">
                                            <Binding Path="SelectedProduct.StockQuantity"/>
                                        </MultiBinding>
                                    </Run.Text>
                                </Run>
                                <Run Text=" + "/>
                                <Run Text="{Binding StockInQuantity, StringFormat=N2}" FontWeight="SemiBold"/>
                            </TextBlock>
                        </StackPanel>

                        <!-- Form Error -->
                        <Border Background="#FFEBEE"
                                Padding="12"
                                CornerRadius="6"
                                Margin="0,0,0,15"
                                Visibility="{Binding FormError, Converter={StaticResource NullToVisibilityConverter}}">
                            <TextBlock Text="{Binding FormError}" Foreground="#C62828" TextWrapping="Wrap"/>
                        </Border>
                    </StackPanel>
                </ScrollViewer>

                <!-- Panel Footer -->
                <Border Grid.Row="2" BorderBrush="#e0e0e0" BorderThickness="0,1,0,0" Padding="20,15">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <Button Grid.Column="0"
                                Content="Bekor qilish"
                                Command="{Binding CancelPanelCommand}"
                                Style="{StaticResource SecondaryButtonStyle}"
                                Margin="0,0,8,0"/>

                        <!-- Save Button for Add -->
                        <Button Grid.Column="1"
                                Content="Saqlash"
                                Command="{Binding SaveProductCommand}"
                                Style="{StaticResource SuccessButtonStyle}"
                                Margin="8,0,0,0"
                                IsEnabled="{Binding IsSaving, Converter={StaticResource BoolToVisibilityConverter}, ConverterParameter=invert}"
                                Visibility="{Binding IsAddPanelOpen, Converter={StaticResource BoolToVisibilityConverter}}"/>

                        <!-- Update Button for Edit -->
                        <Button Grid.Column="1"
                                Content="Yangilash"
                                Command="{Binding UpdateProductCommand}"
                                Style="{StaticResource PrimaryButtonStyle}"
                                Margin="8,0,0,0"
                                IsEnabled="{Binding IsSaving, Converter={StaticResource BoolToVisibilityConverter}, ConverterParameter=invert}"
                                Visibility="{Binding IsEditPanelOpen, Converter={StaticResource BoolToVisibilityConverter}}"/>

                        <!-- Add Stock Button -->
                        <Button Grid.Column="1"
                                Content="Zaxiraga qo'shish"
                                Command="{Binding AddStockCommand}"
                                Style="{StaticResource WarningButtonStyle}"
                                Margin="8,0,0,0"
                                IsEnabled="{Binding IsSaving, Converter={StaticResource BoolToVisibilityConverter}, ConverterParameter=invert}"
                                Visibility="{Binding IsStockInPanelOpen, Converter={StaticResource BoolToVisibilityConverter}}"/>
                    </Grid>
                </Border>

                <!-- Saving Indicator -->
                <Border Grid.RowSpan="3"
                        Background="#80FFFFFF"
                        CornerRadius="12"
                        Visibility="{Binding IsSaving, Converter={StaticResource BoolToVisibilityConverter}}">
                    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                        <ProgressBar IsIndeterminate="True" Width="150" Height="4"/>
                        <TextBlock Text="Saqlanmoqda..." Margin="0,12,0,0" FontSize="14" Foreground="#666"/>
                    </StackPanel>
                </Border>
            </Grid>
        </Border>
        <!-- Barcode Image Dialog Overlay -->
        <Border Grid.ColumnSpan="2"
                Background="#80000000"
                Visibility="{Binding IsBarcodeDialogOpen, Converter={StaticResource BoolToVisibilityConverter}}"
                MouseLeftButtonDown="BarcodeOverlay_MouseLeftButtonDown">
            <Border Background="White"
                    CornerRadius="16"
                    Padding="30"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    MinWidth="380"
                    MouseLeftButtonDown="BarcodeDialog_MouseLeftButtonDown">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="30" ShadowDepth="5" Opacity="0.2" Direction="270"/>
                </Border.Effect>
                <StackPanel>
                    <!-- Header -->
                    <Grid Margin="0,0,0,20">
                        <TextBlock Text="Shtrix kod"
                                   FontSize="20"
                                   FontWeight="SemiBold"
                                   Foreground="#1a1a2e"
                                   VerticalAlignment="Center"/>
                        <Button HorizontalAlignment="Right"
                                Command="{Binding CloseBarcodeDialogCommand}"
                                Background="Transparent"
                                BorderThickness="0"
                                Cursor="Hand"
                                Padding="8">
                            <Path Data="M19,6.41L17.59,5L12,10.59L6.41,5L5,6.41L10.59,12L5,17.59L6.41,19L12,13.41L17.59,19L19,17.59L13.41,12L19,6.41Z"
                                  Fill="#888"
                                  Width="16" Height="16"
                                  Stretch="Uniform"/>
                        </Button>
                    </Grid>

                    <!-- Product Name -->
                    <TextBlock Text="{Binding BarcodeDialogProductName}"
                               FontSize="15"
                               Foreground="#555"
                               HorizontalAlignment="Center"
                               Margin="0,0,0,15"/>

                    <!-- Barcode Image -->
                    <Border Background="#fafafa"
                            CornerRadius="10"
                            Padding="20"
                            BorderBrush="#e8e8e8"
                            BorderThickness="1"
                            HorizontalAlignment="Center">
                        <Image Source="{Binding BarcodeImage}"
                               Stretch="None"
                               RenderOptions.BitmapScalingMode="NearestNeighbor"/>
                    </Border>

                    <!-- Buttons -->
                    <StackPanel Orientation="Horizontal"
                                HorizontalAlignment="Center"
                                Margin="0,25,0,0">
                        <Button Command="{Binding PrintBarcodeImageCommand}"
                                Style="{StaticResource PrimaryButtonStyle}"
                                Padding="24,12"
                                Margin="0,0,10,0">
                            <StackPanel Orientation="Horizontal">
                                <Path Data="M18,3H6V7H18M19,12A1,1 0 0,1 18,13A1,1 0 0,1 17,12A1,1 0 0,1 18,11A1,1 0 0,1 19,12M16,19H8V14H16M19,8H5A3,3 0 0,0 2,11V17H6V21H18V17H22V11A3,3 0 0,0 19,8Z"
                                      Fill="White"
                                      Width="14" Height="14"
                                      Stretch="Uniform"
                                      Margin="0,0,8,0"
                                      VerticalAlignment="Center"/>
                                <TextBlock Text="Chop etish" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>
                        <Button Content="Yopish"
                                Command="{Binding CloseBarcodeDialogCommand}"
                                Style="{StaticResource SecondaryButtonStyle}"
                                Padding="24,12"/>
                    </StackPanel>
                </StackPanel>
            </Border>
        </Border>
    </Grid>
</UserControl>
