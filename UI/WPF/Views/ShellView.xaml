<UserControl x:Class="WPF.Views.ShellView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="clr-namespace:WPF.ViewModels"
             mc:Ignorable="d"
             d:DataContext="{d:DesignInstance Type=vm:ShellViewModel}"
             d:DesignHeight="700" d:DesignWidth="1200">

    <UserControl.Resources>
        <!-- Sidebar Colors -->
        <Color x:Key="SidebarBgColor">#1a1a2e</Color>
        <Color x:Key="SidebarHoverColor">#16213e</Color>
        <Color x:Key="SidebarSelectedColor">#0f3460</Color>
        <Color x:Key="AccentColor">#e94560</Color>
        <Color x:Key="TextPrimaryColor">#ffffff</Color>
        <Color x:Key="TextSecondaryColor">#a0a0a0</Color>

        <SolidColorBrush x:Key="SidebarBgBrush" Color="{StaticResource SidebarBgColor}"/>
        <SolidColorBrush x:Key="SidebarHoverBrush" Color="{StaticResource SidebarHoverColor}"/>
        <SolidColorBrush x:Key="SidebarSelectedBrush" Color="{StaticResource SidebarSelectedColor}"/>
        <SolidColorBrush x:Key="AccentBrush" Color="{StaticResource AccentColor}"/>
        <SolidColorBrush x:Key="TextPrimaryBrush" Color="{StaticResource TextPrimaryColor}"/>
        <SolidColorBrush x:Key="TextSecondaryBrush" Color="{StaticResource TextSecondaryColor}"/>

        <!-- Menu Item Style -->
        <Style x:Key="MenuItemButtonStyle" TargetType="RadioButton">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="{StaticResource TextSecondaryBrush}"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Height" Value="50"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="RadioButton">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                Padding="0">
                            <Grid>
                                <!-- Selection Indicator -->
                                <Border x:Name="indicator"
                                        Width="4"
                                        HorizontalAlignment="Left"
                                        Background="{StaticResource AccentBrush}"
                                        CornerRadius="0,2,2,0"
                                        Visibility="Collapsed"/>

                                <StackPanel Orientation="Horizontal"
                                            VerticalAlignment="Center"
                                            Margin="20,0,0,0">
                                    <!-- Icon -->
                                    <Path x:Name="icon"
                                          Data="{Binding IconPath}"
                                          Fill="{StaticResource TextSecondaryBrush}"
                                          Width="22"
                                          Height="22"
                                          Stretch="Uniform"/>

                                    <!-- Title -->
                                    <TextBlock x:Name="title"
                                               Text="{Binding Title}"
                                               Foreground="{StaticResource TextSecondaryBrush}"
                                               FontSize="14"
                                               VerticalAlignment="Center"
                                               Margin="15,0,0,0"/>
                                </StackPanel>
                            </Grid>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="{StaticResource SidebarHoverBrush}"/>
                                <Setter TargetName="icon" Property="Fill" Value="{StaticResource TextPrimaryBrush}"/>
                                <Setter TargetName="title" Property="Foreground" Value="{StaticResource TextPrimaryBrush}"/>
                            </Trigger>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="border" Property="Background" Value="{StaticResource SidebarSelectedBrush}"/>
                                <Setter TargetName="indicator" Property="Visibility" Value="Visible"/>
                                <Setter TargetName="icon" Property="Fill" Value="{StaticResource AccentBrush}"/>
                                <Setter TargetName="title" Property="Foreground" Value="{StaticResource TextPrimaryBrush}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Sidebar -->
        <Border Grid.Column="0" Background="{StaticResource SidebarBgBrush}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="80"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Logo Area -->
                <Border Grid.Row="0" Padding="20,0">
                    <StackPanel VerticalAlignment="Center" Orientation="Horizontal">
                        <Border Width="40" Height="40" Background="{StaticResource AccentBrush}" CornerRadius="8">
                            <TextBlock Text="P"
                                       Foreground="White"
                                       FontSize="24"
                                       FontWeight="Bold"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center"/>
                        </Border>
                        <StackPanel Margin="12,0,0,0" VerticalAlignment="Center">
                            <TextBlock Text="POS Tizimi"
                                       Foreground="{StaticResource TextPrimaryBrush}"
                                       FontSize="18"
                                       FontWeight="SemiBold"/>
                            <TextBlock Text="Savdo boshqaruvi"
                                       Foreground="{StaticResource TextSecondaryBrush}"
                                       FontSize="11"/>
                        </StackPanel>
                    </StackPanel>
                </Border>

                <!-- Separator -->
                <Border Grid.Row="0" VerticalAlignment="Bottom" Height="1" Background="#333" Margin="20,0"/>

                <!-- Navigation Menu -->
                <ItemsControl Grid.Row="1" ItemsSource="{Binding MenuItems}" Margin="0,20,0,0">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <RadioButton Style="{StaticResource MenuItemButtonStyle}"
                                         IsChecked="{Binding IsSelected, Mode=TwoWay}"
                                         GroupName="MenuItems"
                                         Command="{Binding DataContext.SelectMenuCommand, RelativeSource={RelativeSource AncestorType=ItemsControl}}"
                                         CommandParameter="{Binding}">
                                <RadioButton.InputBindings>
                                    <MouseBinding MouseAction="LeftClick"
                                                  Command="{Binding DataContext.SelectMenuCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                  CommandParameter="{Binding}"/>
                                </RadioButton.InputBindings>
                            </RadioButton>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>

                <!-- Bottom Section - Logout -->
                <Border Grid.Row="2" Padding="15" Margin="0,0,0,10">
                    <Button Command="{Binding LogoutCommand}"
                            Background="Transparent"
                            BorderThickness="0"
                            Cursor="Hand">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border x:Name="border"
                                        Background="#2a2a3e"
                                        CornerRadius="8"
                                        Padding="15,12">
                                    <StackPanel Orientation="Horizontal">
                                        <Path Data="M16,17V14H9V10H16V7L21,12L16,17M14,2A2,2 0 0,1 16,4V6H14V4H5V20H14V18H16V20A2,2 0 0,1 14,22H5A2,2 0 0,1 3,20V4A2,2 0 0,1 5,2H14Z"
                                              Fill="{StaticResource AccentBrush}"
                                              Width="18"
                                              Height="18"
                                              Stretch="Uniform"/>
                                        <TextBlock Text="Chiqish"
                                                   Foreground="{StaticResource TextPrimaryBrush}"
                                                   FontSize="13"
                                                   VerticalAlignment="Center"
                                                   Margin="12,0,0,0"/>
                                    </StackPanel>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter TargetName="border" Property="Background" Value="#3a3a4e"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                </Border>
            </Grid>
        </Border>

        <!-- Main Content Area -->
        <Grid Grid.Column="1" Background="#f0f2f5">
            <Grid.RowDefinitions>
                <RowDefinition Height="70"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <Border Grid.Row="0" Background="White">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="10" ShadowDepth="1" Opacity="0.08" Direction="270"/>
                </Border.Effect>
                <Grid Margin="30,0">
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                        <TextBlock Text="{Binding PageTitle}"
                                   FontSize="22"
                                   FontWeight="SemiBold"
                                   Foreground="#1a1a2e"/>
                    </StackPanel>

                    <!-- Right side - Time/Date -->
                    <StackPanel Orientation="Horizontal"
                                HorizontalAlignment="Right"
                                VerticalAlignment="Center">
                        <Border Background="#f0f2f5" CornerRadius="8" Padding="15,8">
                            <StackPanel Orientation="Horizontal">
                                <Path Data="M12,20A8,8 0 0,0 20,12A8,8 0 0,0 12,4A8,8 0 0,0 4,12A8,8 0 0,0 12,20M12,2A10,10 0 0,1 22,12A10,10 0 0,1 12,22C6.47,22 2,17.5 2,12A10,10 0 0,1 12,2M12.5,7V12.25L17,14.92L16.25,16.15L11,13V7H12.5Z"
                                      Fill="#666"
                                      Width="16"
                                      Height="16"
                                      Stretch="Uniform"/>
                                <TextBlock x:Name="dateTimeText"
                                           Text="{Binding Source={x:Static System:DateTime.Now}, StringFormat='{}{0:dd.MM.yyyy}'}"
                                           Foreground="#666"
                                           FontSize="13"
                                           VerticalAlignment="Center"
                                           Margin="8,0,0,0"
                                           xmlns:System="clr-namespace:System;assembly=mscorlib"/>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Content -->
            <Border Grid.Row="1" Margin="20">
                <ContentControl Content="{Binding CurrentView}"/>
            </Border>
        </Grid>
    </Grid>
</UserControl>
