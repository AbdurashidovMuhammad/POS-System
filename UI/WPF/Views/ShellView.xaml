<UserControl x:Class="WPF.Views.ShellView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="clr-namespace:WPF.ViewModels"
             xmlns:converters="clr-namespace:WPF.Converters"
             mc:Ignorable="d"
             d:DataContext="{d:DesignInstance Type=vm:ShellViewModel}"
             d:DesignHeight="700" d:DesignWidth="1200">

    <UserControl.Resources>
        <!-- Sidebar Colors -->
        <Color x:Key="SidebarBgColor">#1a1a2e</Color>
        <Color x:Key="SidebarHoverColor">#16213e</Color>
        <Color x:Key="SidebarSelectedColor">#0f3460</Color>
        <Color x:Key="AccentColor">#e94560</Color>
        <Color x:Key="TextPrimaryColor">#ffffff</Color>
        <Color x:Key="TextSecondaryColor">#a0a0a0</Color>

        <SolidColorBrush x:Key="SidebarBgBrush" Color="{StaticResource SidebarBgColor}"/>
        <SolidColorBrush x:Key="SidebarHoverBrush" Color="{StaticResource SidebarHoverColor}"/>
        <SolidColorBrush x:Key="SidebarSelectedBrush" Color="{StaticResource SidebarSelectedColor}"/>
        <SolidColorBrush x:Key="AccentBrush" Color="{StaticResource AccentColor}"/>
        <SolidColorBrush x:Key="TextPrimaryBrush" Color="{StaticResource TextPrimaryColor}"/>
        <SolidColorBrush x:Key="TextSecondaryBrush" Color="{StaticResource TextSecondaryColor}"/>

        <converters:BoolToVisibilityConverter x:Key="BoolToVisibility"/>

        <!-- Menu Item Style - Expanded -->
        <Style x:Key="MenuItemButtonStyle" TargetType="RadioButton">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="{StaticResource TextSecondaryBrush}"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Height" Value="50"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="RadioButton">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                Padding="0"
                                ClipToBounds="True">
                            <Grid>
                                <!-- Selection Indicator -->
                                <Border x:Name="indicator"
                                        Width="4"
                                        HorizontalAlignment="Left"
                                        Background="{StaticResource AccentBrush}"
                                        CornerRadius="0,2,2,0"
                                        Visibility="Collapsed"/>

                                <StackPanel x:Name="contentPanel"
                                            Orientation="Horizontal"
                                            VerticalAlignment="Center"
                                            Margin="20,0,0,0">
                                    <!-- Icon -->
                                    <Path x:Name="icon"
                                          Data="{Binding IconPath}"
                                          Fill="{StaticResource TextSecondaryBrush}"
                                          Width="22"
                                          Height="22"
                                          Stretch="Uniform"/>

                                    <!-- Title -->
                                    <TextBlock x:Name="title"
                                               Text="{Binding Title}"
                                               Foreground="{StaticResource TextSecondaryBrush}"
                                               FontSize="14"
                                               VerticalAlignment="Center"
                                               Margin="15,0,0,0"/>
                                </StackPanel>
                            </Grid>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="{StaticResource SidebarHoverBrush}"/>
                                <Setter TargetName="icon" Property="Fill" Value="{StaticResource TextPrimaryBrush}"/>
                                <Setter TargetName="title" Property="Foreground" Value="{StaticResource TextPrimaryBrush}"/>
                            </Trigger>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="border" Property="Background" Value="{StaticResource SidebarSelectedBrush}"/>
                                <Setter TargetName="indicator" Property="Visibility" Value="Visible"/>
                                <Setter TargetName="icon" Property="Fill" Value="{StaticResource AccentBrush}"/>
                                <Setter TargetName="title" Property="Foreground" Value="{StaticResource TextPrimaryBrush}"/>
                            </Trigger>
                            <DataTrigger Binding="{Binding DataContext.IsSidebarCollapsed, RelativeSource={RelativeSource AncestorType=UserControl}}" Value="True">
                                <Setter TargetName="title" Property="Visibility" Value="Collapsed"/>
                                <Setter TargetName="contentPanel" Property="Margin" Value="0"/>
                                <Setter TargetName="contentPanel" Property="HorizontalAlignment" Value="Center"/>
                            </DataTrigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Hamburger Toggle Button Style -->
        <Style x:Key="ToggleButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Width" Value="40"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                CornerRadius="8"
                                Padding="8">
                            <Path Data="M3,6H21V8H3V6M3,11H21V13H3V11M3,16H21V18H3V16Z"
                                  Fill="{StaticResource TextSecondaryBrush}"
                                  Width="20" Height="20"
                                  Stretch="Uniform"
                                  HorizontalAlignment="Center"
                                  VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="{StaticResource SidebarHoverBrush}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Sidebar -->
        <Border x:Name="SidebarBorder" Grid.Column="0" Background="{StaticResource SidebarBgBrush}" Width="250">
            <Border.Style>
                <Style TargetType="Border">
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding IsSidebarCollapsed}" Value="True">
                            <DataTrigger.EnterActions>
                                <BeginStoryboard>
                                    <Storyboard>
                                        <DoubleAnimation Storyboard.TargetProperty="Width"
                                                         To="62" Duration="0:0:0.2">
                                            <DoubleAnimation.EasingFunction>
                                                <CubicEase EasingMode="EaseOut"/>
                                            </DoubleAnimation.EasingFunction>
                                        </DoubleAnimation>
                                    </Storyboard>
                                </BeginStoryboard>
                            </DataTrigger.EnterActions>
                            <DataTrigger.ExitActions>
                                <BeginStoryboard>
                                    <Storyboard>
                                        <DoubleAnimation Storyboard.TargetProperty="Width"
                                                         To="250" Duration="0:0:0.2">
                                            <DoubleAnimation.EasingFunction>
                                                <CubicEase EasingMode="EaseOut"/>
                                            </DoubleAnimation.EasingFunction>
                                        </DoubleAnimation>
                                    </Storyboard>
                                </BeginStoryboard>
                            </DataTrigger.ExitActions>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </Border.Style>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="80"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Logo Area -->
                <Border Grid.Row="0" Padding="10,0">
                    <Grid VerticalAlignment="Center">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Toggle Button -->
                        <Button Grid.Column="0"
                                Style="{StaticResource ToggleButtonStyle}"
                                Command="{Binding ToggleSidebarCommand}"
                                ToolTip="Menyuni yig'ish/ochish"/>

                        <!-- Logo Text - hidden when collapsed -->
                        <StackPanel Grid.Column="1"
                                    Margin="8,0,0,0"
                                    VerticalAlignment="Center"
                                    Visibility="{Binding IsSidebarCollapsed, Converter={StaticResource BoolToVisibility}, ConverterParameter=invert}">
                            <TextBlock Text="POS Tizimi"
                                       Foreground="{StaticResource TextPrimaryBrush}"
                                       FontSize="18"
                                       FontWeight="SemiBold"/>
                            <TextBlock Text="Savdo boshqaruvi"
                                       Foreground="{StaticResource TextSecondaryBrush}"
                                       FontSize="11"/>
                        </StackPanel>
                    </Grid>
                </Border>

                <!-- Separator -->
                <Border Grid.Row="0" VerticalAlignment="Bottom" Height="1" Background="#333" Margin="10,0"/>

                <!-- Navigation Menu -->
                <ItemsControl Grid.Row="1" ItemsSource="{Binding MenuItems}" Margin="0,20,0,0">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <RadioButton Style="{StaticResource MenuItemButtonStyle}"
                                         IsChecked="{Binding IsSelected, Mode=TwoWay}"
                                         GroupName="MenuItems"
                                         Command="{Binding DataContext.SelectMenuCommand, RelativeSource={RelativeSource AncestorType=ItemsControl}}"
                                         CommandParameter="{Binding}"
                                         ToolTip="{Binding Title}">
                                <RadioButton.InputBindings>
                                    <MouseBinding MouseAction="LeftClick"
                                                  Command="{Binding DataContext.SelectMenuCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                  CommandParameter="{Binding}"/>
                                </RadioButton.InputBindings>
                            </RadioButton>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>

                <!-- Bottom Section - Logout -->
                <Border Grid.Row="2" Padding="10" Margin="0,0,0,10">
                    <Button Command="{Binding LogoutCommand}"
                            Background="Transparent"
                            BorderThickness="0"
                            Cursor="Hand"
                            ToolTip="Chiqish">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border x:Name="border"
                                        Background="#2a2a3e"
                                        CornerRadius="8"
                                        Padding="10,12">
                                    <StackPanel Orientation="Horizontal"
                                                HorizontalAlignment="Center">
                                        <Path Data="M16,17V14H9V10H16V7L21,12L16,17M14,2A2,2 0 0,1 16,4V6H14V4H5V20H14V18H16V20A2,2 0 0,1 14,22H5A2,2 0 0,1 3,20V4A2,2 0 0,1 5,2H14Z"
                                              Fill="{StaticResource AccentBrush}"
                                              Width="18"
                                              Height="18"
                                              Stretch="Uniform"/>
                                        <TextBlock Text="Chiqish"
                                                   Foreground="{StaticResource TextPrimaryBrush}"
                                                   FontSize="13"
                                                   VerticalAlignment="Center"
                                                   Margin="12,0,0,0"
                                                   Visibility="{Binding DataContext.IsSidebarCollapsed, RelativeSource={RelativeSource AncestorType=UserControl}, Converter={StaticResource BoolToVisibility}, ConverterParameter=invert}"/>
                                    </StackPanel>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter TargetName="border" Property="Background" Value="#3a3a4e"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                </Border>
            </Grid>
        </Border>

        <!-- Main Content Area -->
        <Grid Grid.Column="1" Background="#f0f2f5">
            <Grid.RowDefinitions>
                <RowDefinition Height="70"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <Border Grid.Row="0" Background="White">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="10" ShadowDepth="1" Opacity="0.08" Direction="270"/>
                </Border.Effect>
                <Grid Margin="30,0">
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                        <TextBlock Text="{Binding PageTitle}"
                                   FontSize="22"
                                   FontWeight="SemiBold"
                                   Foreground="#1a1a2e"/>
                    </StackPanel>

                    <!-- Right side - Time/Date -->
                    <StackPanel Orientation="Horizontal"
                                HorizontalAlignment="Right"
                                VerticalAlignment="Center">
                        <Border Background="#f0f2f5" CornerRadius="8" Padding="15,8">
                            <StackPanel Orientation="Horizontal">
                                <Path Data="M12,20A8,8 0 0,0 20,12A8,8 0 0,0 12,4A8,8 0 0,0 4,12A8,8 0 0,0 12,20M12,2A10,10 0 0,1 22,12A10,10 0 0,1 12,22C6.47,22 2,17.5 2,12A10,10 0 0,1 12,2M12.5,7V12.25L17,14.92L16.25,16.15L11,13V7H12.5Z"
                                      Fill="#666"
                                      Width="16"
                                      Height="16"
                                      Stretch="Uniform"/>
                                <TextBlock x:Name="dateTimeText"
                                           Text="{Binding Source={x:Static System:DateTime.Now}, StringFormat='{}{0:dd.MM.yyyy}'}"
                                           Foreground="#666"
                                           FontSize="13"
                                           VerticalAlignment="Center"
                                           Margin="8,0,0,0"
                                           xmlns:System="clr-namespace:System;assembly=mscorlib"/>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Content -->
            <Border Grid.Row="1" Margin="20">
                <ContentControl Content="{Binding CurrentView}"/>
            </Border>

            <!-- Toast Notification -->
            <Border Grid.Row="0" Grid.RowSpan="2"
                    VerticalAlignment="Top"
                    HorizontalAlignment="Center"
                    Margin="0,80,0,0"
                    CornerRadius="10"
                    Padding="24,14"
                    Visibility="{Binding IsToastVisible, Converter={StaticResource BoolToVisibility}}">
                <Border.Background>
                    <SolidColorBrush Color="#D32F2F"/>
                </Border.Background>
                <Border.Effect>
                    <DropShadowEffect BlurRadius="20" ShadowDepth="3" Opacity="0.3" Direction="270"/>
                </Border.Effect>
                <StackPanel Orientation="Horizontal">
                    <Path Data="M13,14H11V10H13M13,18H11V16H13M1,21H23L12,2L1,21Z"
                          Fill="White"
                          Width="20" Height="20"
                          Stretch="Uniform"
                          Margin="0,0,10,0"/>
                    <TextBlock Text="{Binding ToastMessage}"
                               Foreground="White"
                               FontSize="14"
                               FontWeight="Medium"
                               VerticalAlignment="Center"/>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</UserControl>
