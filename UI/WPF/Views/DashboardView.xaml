<UserControl x:Class="WPF.Views.DashboardView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="clr-namespace:WPF.ViewModels"
             mc:Ignorable="d"
             d:DataContext="{d:DesignInstance Type=vm:DashboardViewModel}"
             d:DesignHeight="600" d:DesignWidth="900">

    <UserControl.Resources>
        <Style x:Key="StatCardStyle" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Padding" Value="24"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="20" ShadowDepth="2" Opacity="0.08" Direction="270"/>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Welcome Section -->
        <Border Grid.Row="0" Background="White" CornerRadius="12" Padding="30" Margin="0,0,0,20">
            <Border.Effect>
                <DropShadowEffect BlurRadius="20" ShadowDepth="2" Opacity="0.08" Direction="270"/>
            </Border.Effect>
            <Grid>
                <StackPanel>
                    <TextBlock Text="Xush kelibsiz!"
                               FontSize="28"
                               FontWeight="SemiBold"
                               Foreground="#1a1a2e"/>
                    <TextBlock Text="Bugungi savdo statistikasi va tizim holati"
                               FontSize="14"
                               Foreground="#666"
                               Margin="0,8,0,0"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Stats Cards -->
        <Grid Grid.Row="1" Margin="0,0,0,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Bugungi sotish -->
            <Border Grid.Column="0" Style="{StaticResource StatCardStyle}" Margin="0,0,10,0">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <StackPanel Grid.Column="0">
                        <TextBlock Text="Bugungi sotish"
                                   FontSize="13"
                                   Foreground="#888"/>
                        <TextBlock Text="{Binding TodaySalesAmount}"
                                   FontSize="24"
                                   FontWeight="Bold"
                                   Foreground="#1a1a2e"
                                   Margin="0,8,0,0"/>
                        <TextBlock Text="+0% kechagidan"
                                   FontSize="12"
                                   Foreground="#4CAF50"
                                   Margin="0,5,0,0"/>
                    </StackPanel>
                    <Border Grid.Column="1"
                            Width="50" Height="50"
                            Background="#e8f5e9"
                            CornerRadius="12">
                        <Path Data="M5,6H23V18H5V6M14,9A3,3 0 0,1 17,12A3,3 0 0,1 14,15A3,3 0 0,1 11,12A3,3 0 0,1 14,9M9,8A2,2 0 0,1 7,10V14A2,2 0 0,1 9,16H19A2,2 0 0,1 21,14V10A2,2 0 0,1 19,8H9M1,10H3V20H19V22H1V10Z"
                              Fill="#4CAF50"
                              Width="24" Height="24"
                              Stretch="Uniform"
                              HorizontalAlignment="Center"
                              VerticalAlignment="Center"/>
                    </Border>
                </Grid>
            </Border>

            <!-- Buyurtmalar -->
            <Border Grid.Column="1" Style="{StaticResource StatCardStyle}" Margin="5,0">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <StackPanel Grid.Column="0">
                        <TextBlock Text="Bugungi buyurtmalar"
                                   FontSize="13"
                                   Foreground="#888"/>
                        <TextBlock Text="{Binding TodayOrdersCount}"
                                   FontSize="24"
                                   FontWeight="Bold"
                                   Foreground="#1a1a2e"
                                   Margin="0,8,0,0"/>
                        <TextBlock Text="Jami buyurtmalar"
                                   FontSize="12"
                                   Foreground="#666"
                                   Margin="0,5,0,0"/>
                    </StackPanel>
                    <Border Grid.Column="1"
                            Width="50" Height="50"
                            Background="#e3f2fd"
                            CornerRadius="12">
                        <Path Data="M17,18C15.89,18 15,18.89 15,20A2,2 0 0,0 17,22A2,2 0 0,0 19,20C19,18.89 18.1,18 17,18M1,2V4H3L6.6,11.59L5.24,14.04C5.09,14.32 5,14.65 5,15A2,2 0 0,0 7,17H19V15H7.42A0.25,0.25 0 0,1 7.17,14.75C7.17,14.7 7.18,14.66 7.2,14.63L8.1,13H15.55C16.3,13 16.96,12.58 17.3,11.97L20.88,5.5C20.95,5.34 21,5.17 21,5A1,1 0 0,0 20,4H5.21L4.27,2M7,18C5.89,18 5,18.89 5,20A2,2 0 0,0 7,22A2,2 0 0,0 9,20C9,18.89 8.1,18 7,18Z"
                              Fill="#2196F3"
                              Width="24" Height="24"
                              Stretch="Uniform"
                              HorizontalAlignment="Center"
                              VerticalAlignment="Center"/>
                    </Border>
                </Grid>
            </Border>

            <!-- Mahsulotlar -->
            <Border Grid.Column="2" Style="{StaticResource StatCardStyle}" Margin="5,0">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <StackPanel Grid.Column="0">
                        <TextBlock Text="Jami mahsulotlar"
                                   FontSize="13"
                                   Foreground="#888"/>
                        <TextBlock Text="{Binding TotalProductsCount}"
                                   FontSize="24"
                                   FontWeight="Bold"
                                   Foreground="#1a1a2e"
                                   Margin="0,8,0,0"/>
                        <TextBlock Text="Faol mahsulotlar"
                                   FontSize="12"
                                   Foreground="#666"
                                   Margin="0,5,0,0"/>
                    </StackPanel>
                    <Border Grid.Column="1"
                            Width="50" Height="50"
                            Background="#fff3e0"
                            CornerRadius="12">
                        <Path Data="M12,3L2,12H5V20H19V12H22L12,3M12,8.75A2.25,2.25 0 0,1 14.25,11A2.25,2.25 0 0,1 12,13.25A2.25,2.25 0 0,1 9.75,11A2.25,2.25 0 0,1 12,8.75Z"
                              Fill="#FF9800"
                              Width="24" Height="24"
                              Stretch="Uniform"
                              HorizontalAlignment="Center"
                              VerticalAlignment="Center"/>
                    </Border>
                </Grid>
            </Border>

            <!-- Kategoriyalar -->
            <Border Grid.Column="3" Style="{StaticResource StatCardStyle}" Margin="10,0,0,0">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <StackPanel Grid.Column="0">
                        <TextBlock Text="Kategoriyalar"
                                   FontSize="13"
                                   Foreground="#888"/>
                        <TextBlock Text="{Binding TotalCategoriesCount}"
                                   FontSize="24"
                                   FontWeight="Bold"
                                   Foreground="#1a1a2e"
                                   Margin="0,8,0,0"/>
                        <TextBlock Text="Faol kategoriyalar"
                                   FontSize="12"
                                   Foreground="#666"
                                   Margin="0,5,0,0"/>
                    </StackPanel>
                    <Border Grid.Column="1"
                            Width="50" Height="50"
                            Background="#fce4ec"
                            CornerRadius="12">
                        <Path Data="M10,4H4C2.89,4 2,4.89 2,6V18A2,2 0 0,0 4,20H20A2,2 0 0,0 22,18V8C22,6.89 21.1,6 20,6H12L10,4Z"
                              Fill="#e91e63"
                              Width="24" Height="24"
                              Stretch="Uniform"
                              HorizontalAlignment="Center"
                              VerticalAlignment="Center"/>
                    </Border>
                </Grid>
            </Border>
        </Grid>

        <!-- Quick Actions & Recent Activity -->
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="350"/>
            </Grid.ColumnDefinitions>

            <!-- Quick Actions -->
            <Border Grid.Column="0" Background="White" CornerRadius="12" Margin="0,0,10,0">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="20" ShadowDepth="2" Opacity="0.08" Direction="270"/>
                </Border.Effect>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <Border Grid.Row="0" Padding="24,20" BorderBrush="#eee" BorderThickness="0,0,0,1">
                        <TextBlock Text="Tezkor harakatlar"
                                   FontSize="16"
                                   FontWeight="SemiBold"
                                   Foreground="#1a1a2e"/>
                    </Border>

                    <UniformGrid Grid.Row="1" Rows="1" Columns="3" Margin="20">
                        <!-- Yangi sotish -->
                        <Button Command="{Binding NavigateToSalesCommand}"
                                Margin="5"
                                Cursor="Hand">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border x:Name="border"
                                            Background="#f8f9fa"
                                            CornerRadius="12"
                                            Padding="20">
                                        <StackPanel HorizontalAlignment="Center">
                                            <Border Width="60" Height="60"
                                                    Background="#e8f5e9"
                                                    CornerRadius="30"
                                                    Margin="0,0,0,12">
                                                <Path Data="M17,18C15.89,18 15,18.89 15,20A2,2 0 0,0 17,22A2,2 0 0,0 19,20C19,18.89 18.1,18 17,18M1,2V4H3L6.6,11.59L5.24,14.04C5.09,14.32 5,14.65 5,15A2,2 0 0,0 7,17H19V15H7.42A0.25,0.25 0 0,1 7.17,14.75C7.17,14.7 7.18,14.66 7.2,14.63L8.1,13H15.55C16.3,13 16.96,12.58 17.3,11.97L20.88,5.5C20.95,5.34 21,5.17 21,5A1,1 0 0,0 20,4H5.21L4.27,2M7,18C5.89,18 5,18.89 5,20A2,2 0 0,0 7,22A2,2 0 0,0 9,20C9,18.89 8.1,18 7,18Z"
                                                      Fill="#4CAF50"
                                                      Width="28" Height="28"
                                                      Stretch="Uniform"
                                                      HorizontalAlignment="Center"
                                                      VerticalAlignment="Center"/>
                                            </Border>
                                            <TextBlock Text="Yangi sotish"
                                                       FontSize="14"
                                                       FontWeight="SemiBold"
                                                       Foreground="#1a1a2e"
                                                       HorizontalAlignment="Center"/>
                                            <TextBlock Text="Kassaga o'tish"
                                                       FontSize="12"
                                                       Foreground="#888"
                                                       HorizontalAlignment="Center"
                                                       Margin="0,4,0,0"/>
                                        </StackPanel>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter TargetName="border" Property="Background" Value="#e8f5e9"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>

                        <!-- Mahsulotlar -->
                        <Button Command="{Binding NavigateToProductsCommand}"
                                Margin="5"
                                Cursor="Hand">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border x:Name="border"
                                            Background="#f8f9fa"
                                            CornerRadius="12"
                                            Padding="20">
                                        <StackPanel HorizontalAlignment="Center">
                                            <Border Width="60" Height="60"
                                                    Background="#e3f2fd"
                                                    CornerRadius="30"
                                                    Margin="0,0,0,12">
                                                <Path Data="M12,3L2,12H5V20H19V12H22L12,3M12,8.75A2.25,2.25 0 0,1 14.25,11A2.25,2.25 0 0,1 12,13.25A2.25,2.25 0 0,1 9.75,11A2.25,2.25 0 0,1 12,8.75Z"
                                                      Fill="#2196F3"
                                                      Width="28" Height="28"
                                                      Stretch="Uniform"
                                                      HorizontalAlignment="Center"
                                                      VerticalAlignment="Center"/>
                                            </Border>
                                            <TextBlock Text="Mahsulotlar"
                                                       FontSize="14"
                                                       FontWeight="SemiBold"
                                                       Foreground="#1a1a2e"
                                                       HorizontalAlignment="Center"/>
                                            <TextBlock Text="Ro'yxatni ko'rish"
                                                       FontSize="12"
                                                       Foreground="#888"
                                                       HorizontalAlignment="Center"
                                                       Margin="0,4,0,0"/>
                                        </StackPanel>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter TargetName="border" Property="Background" Value="#e3f2fd"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>

                        <!-- Hisobotlar -->
                        <Button Command="{Binding NavigateToReportsCommand}"
                                Margin="5"
                                Cursor="Hand">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border x:Name="border"
                                            Background="#f8f9fa"
                                            CornerRadius="12"
                                            Padding="20">
                                        <StackPanel HorizontalAlignment="Center">
                                            <Border Width="60" Height="60"
                                                    Background="#fff3e0"
                                                    CornerRadius="30"
                                                    Margin="0,0,0,12">
                                                <Path Data="M19,3H5C3.89,3 3,3.89 3,5V19A2,2 0 0,0 5,21H19A2,2 0 0,0 21,19V5C21,3.89 20.1,3 19,3M9,17H7V10H9V17M13,17H11V7H13V17M17,17H15V13H17V17Z"
                                                      Fill="#FF9800"
                                                      Width="28" Height="28"
                                                      Stretch="Uniform"
                                                      HorizontalAlignment="Center"
                                                      VerticalAlignment="Center"/>
                                            </Border>
                                            <TextBlock Text="Hisobotlar"
                                                       FontSize="14"
                                                       FontWeight="SemiBold"
                                                       Foreground="#1a1a2e"
                                                       HorizontalAlignment="Center"/>
                                            <TextBlock Text="Statistika"
                                                       FontSize="12"
                                                       Foreground="#888"
                                                       HorizontalAlignment="Center"
                                                       Margin="0,4,0,0"/>
                                        </StackPanel>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter TargetName="border" Property="Background" Value="#fff3e0"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>
                    </UniformGrid>
                </Grid>
            </Border>

            <!-- Recent Activity -->
            <Border Grid.Column="1" Background="White" CornerRadius="12" Margin="10,0,0,0">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="20" ShadowDepth="2" Opacity="0.08" Direction="270"/>
                </Border.Effect>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <Border Grid.Row="0" Padding="24,20" BorderBrush="#eee" BorderThickness="0,0,0,1">
                        <TextBlock Text="So'nggi faoliyat"
                                   FontSize="16"
                                   FontWeight="SemiBold"
                                   Foreground="#1a1a2e"/>
                    </Border>

                    <!-- Empty state -->
                    <StackPanel Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Center"
                                Visibility="{Binding HasActivities, Converter={StaticResource BoolToVisibilityConverter}, ConverterParameter=invert}">
                        <Path Data="M19,3H5C3.89,3 3,3.89 3,5V19A2,2 0 0,0 5,21H19A2,2 0 0,0 21,19V5C21,3.89 20.1,3 19,3M19,19H5V5H19V19M17,17H7V7H17V17Z"
                              Fill="#ddd"
                              Width="48" Height="48"
                              Stretch="Uniform"
                              HorizontalAlignment="Center"/>
                        <TextBlock Text="Hozircha faoliyat yo'q"
                                   FontSize="14"
                                   Foreground="#888"
                                   HorizontalAlignment="Center"
                                   Margin="0,15,0,0"/>
                        <TextBlock Text="Amaliyot boshlanganida bu yerda ko'rinadi"
                                   FontSize="12"
                                   Foreground="#aaa"
                                   HorizontalAlignment="Center"
                                   Margin="0,5,0,0"/>
                    </StackPanel>

                    <!-- Activity list -->
                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto"
                                  Visibility="{Binding HasActivities, Converter={StaticResource BoolToVisibilityConverter}}">
                        <ItemsControl ItemsSource="{Binding RecentActivities}" Margin="8,8,8,8">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Padding="16,10" BorderBrush="#f0f0f0" BorderThickness="0,0,0,1">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>

                                            <!-- Action icon -->
                                            <Border Grid.Column="0" Width="36" Height="36"
                                                    CornerRadius="18" Margin="0,0,12,0"
                                                    VerticalAlignment="Center"
                                                    Background="#e8f5e9">
                                                <Path Data="M12,2A10,10 0 0,0 2,12A10,10 0 0,0 12,22A10,10 0 0,0 22,12A10,10 0 0,0 12,2M12,20A8,8 0 0,1 4,12A8,8 0 0,1 12,4A8,8 0 0,1 20,12A8,8 0 0,1 12,20M16.5,11L13,7.5V10H8V14H13V16.5L16.5,11Z"
                                                      Fill="#4CAF50"
                                                      Width="18" Height="18"
                                                      Stretch="Uniform"
                                                      HorizontalAlignment="Center"
                                                      VerticalAlignment="Center"/>
                                            </Border>

                                            <!-- Description -->
                                            <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                                <TextBlock Text="{Binding Description}"
                                                           FontSize="13"
                                                           Foreground="#1a1a2e"
                                                           TextTrimming="CharacterEllipsis"/>
                                                <TextBlock Text="{Binding ActionTypeName}"
                                                           FontSize="11"
                                                           Foreground="#999"
                                                           Margin="0,2,0,0"/>
                                            </StackPanel>

                                            <!-- Timestamp -->
                                            <TextBlock Grid.Column="2"
                                                       Text="{Binding Timestamp, StringFormat={}{0:HH:mm dd.MM}}"
                                                       FontSize="11"
                                                       Foreground="#aaa"
                                                       VerticalAlignment="Center"
                                                       Margin="8,0,0,0"/>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</UserControl>
