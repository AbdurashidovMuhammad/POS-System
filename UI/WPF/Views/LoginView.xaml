<UserControl x:Class="WPF.Views.LoginView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="clr-namespace:WPF.ViewModels"
             mc:Ignorable="d"
             d:DataContext="{d:DesignInstance Type=vm:LoginViewModel}"
             d:DesignHeight="600" d:DesignWidth="900">

    <Grid>
        <!-- Background with gradient -->
        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="#1a237e" Offset="0"/>
                <GradientStop Color="#283593" Offset="0.3"/>
                <GradientStop Color="#3949ab" Offset="0.7"/>
                <GradientStop Color="#5c6bc0" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>

        <!-- Subtle pattern overlay -->
        <Grid Opacity="0.05">
            <Ellipse Width="400" Height="400" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="-100,-100,0,0">
                <Ellipse.Fill>
                    <RadialGradientBrush>
                        <GradientStop Color="White" Offset="0"/>
                        <GradientStop Color="Transparent" Offset="1"/>
                    </RadialGradientBrush>
                </Ellipse.Fill>
            </Ellipse>
            <Ellipse Width="500" Height="500" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,0,-150,-150">
                <Ellipse.Fill>
                    <RadialGradientBrush>
                        <GradientStop Color="White" Offset="0"/>
                        <GradientStop Color="Transparent" Offset="1"/>
                    </RadialGradientBrush>
                </Ellipse.Fill>
            </Ellipse>
        </Grid>

        <!-- Login Card -->
        <Border Background="White"
                CornerRadius="16"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                MinWidth="420"
                MaxWidth="440"
                Padding="0">
            <Border.Effect>
                <DropShadowEffect BlurRadius="40" ShadowDepth="2" Opacity="0.3" Color="#000000"/>
            </Border.Effect>

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Header section with accent color -->
                <Border Grid.Row="0" CornerRadius="16,16,0,0" Padding="40,35,40,30">
                    <Border.Background>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                            <GradientStop Color="#1565C0" Offset="0"/>
                            <GradientStop Color="#1976D2" Offset="0.5"/>
                            <GradientStop Color="#2196F3" Offset="1"/>
                        </LinearGradientBrush>
                    </Border.Background>
                    <StackPanel>
                        <!-- Logo / Icon -->
                        <Border Width="70" Height="70"
                                CornerRadius="35"
                                Background="#FFFFFF"
                                HorizontalAlignment="Center"
                                Margin="0,0,0,16">
                            <Border.Effect>
                                <DropShadowEffect BlurRadius="12" ShadowDepth="2" Opacity="0.15"/>
                            </Border.Effect>
                            <Viewbox Width="36" Height="36">
                                <Canvas Width="24" Height="24">
                                    <!-- Store/POS icon -->
                                    <Path Data="M4 6H2v14c0 1.1.9 2 2 2h14v-2H4V6zm16-4H8c-1.1 0-2 .9-2 2v12c0 1.1.9 2 2 2h12c1.1 0 2-.9 2-2V4c0-1.1-.9-2-2-2zm0 14H8V4h12v12zm-7-1h2v-4h4V9h-4V5h-2v4H9v2h4v4z"
                                          Fill="#1976D2"/>
                                </Canvas>
                            </Viewbox>
                        </Border>

                        <TextBlock Text="POS Tizimi"
                                   FontSize="26"
                                   FontWeight="SemiBold"
                                   Foreground="White"
                                   HorizontalAlignment="Center"/>
                        <TextBlock Text="Tizimga kirish"
                                   FontSize="14"
                                   Foreground="#B3FFFFFF"
                                   HorizontalAlignment="Center"
                                   Margin="0,6,0,0"/>
                    </StackPanel>
                </Border>

                <!-- Form section -->
                <StackPanel Grid.Row="1" Margin="36,30,36,36">

                    <!-- Username field -->
                    <TextBlock Text="Foydalanuvchi nomi"
                               FontSize="13"
                               FontWeight="Medium"
                               Foreground="#546E7A"
                               Margin="2,0,0,8"/>
                    <Border BorderBrush="#E0E0E0" BorderThickness="1.5" CornerRadius="10"
                            Background="#FAFAFA"
                            x:Name="UsernameBorder">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="46"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <!-- User icon -->
                            <Viewbox Width="18" Height="18" Grid.Column="0" Margin="14,0,0,0">
                                <Canvas Width="24" Height="24">
                                    <Path Data="M12 12c2.21 0 4-1.79 4-4s-1.79-4-4-4-4 1.79-4 4 1.79 4 4 4zm0 2c-2.67 0-8 1.34-8 4v2h16v-2c0-2.66-5.33-4-8-4z"
                                          Fill="#90A4AE"/>
                                </Canvas>
                            </Viewbox>
                            <TextBox Grid.Column="1"
                                     Text="{Binding Username, UpdateSourceTrigger=PropertyChanged}"
                                     FontSize="14"
                                     VerticalContentAlignment="Center"
                                     Padding="4,12"
                                     BorderThickness="0"
                                     Background="Transparent">
                                <TextBox.Style>
                                    <Style TargetType="TextBox">
                                        <Setter Property="CaretBrush" Value="#1976D2"/>
                                    </Style>
                                </TextBox.Style>
                            </TextBox>
                        </Grid>
                    </Border>

                    <!-- Password field -->
                    <TextBlock Text="Parol"
                               FontSize="13"
                               FontWeight="Medium"
                               Foreground="#546E7A"
                               Margin="2,20,0,8"/>
                    <Border BorderBrush="#E0E0E0" BorderThickness="1.5" CornerRadius="10"
                            Background="#FAFAFA"
                            x:Name="PasswordBorder">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="46"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="44"/>
                            </Grid.ColumnDefinitions>
                            <!-- Lock icon -->
                            <Viewbox Width="18" Height="18" Grid.Column="0" Margin="14,0,0,0">
                                <Canvas Width="24" Height="24">
                                    <Path Data="M18 8h-1V6c0-2.76-2.24-5-5-5S7 3.24 7 6v2H6c-1.1 0-2 .9-2 2v10c0 1.1.9 2 2 2h12c1.1 0 2-.9 2-2V10c0-1.1-.9-2-2-2zm-6 9c-1.1 0-2-.9-2-2s.9-2 2-2 2 .9 2 2-.9 2-2 2zm3.1-9H8.9V6c0-1.71 1.39-3.1 3.1-3.1 1.71 0 3.1 1.39 3.1 3.1v2z"
                                          Fill="#90A4AE"/>
                                </Canvas>
                            </Viewbox>

                            <!-- PasswordBox (visible when password is hidden) -->
                            <PasswordBox x:Name="PasswordBox"
                                         Grid.Column="1"
                                         FontSize="14"
                                         VerticalContentAlignment="Center"
                                         Padding="4,12"
                                         BorderThickness="0"
                                         Background="Transparent"
                                         PasswordChanged="PasswordBox_PasswordChanged"
                                         Visibility="{Binding IsPasswordVisible, Converter={StaticResource InverseBoolToVisibilityConverter}}"/>

                            <!-- TextBox (visible when password is shown) -->
                            <TextBox x:Name="PasswordTextBox"
                                     Grid.Column="1"
                                     Text="{Binding Password, UpdateSourceTrigger=PropertyChanged}"
                                     FontSize="14"
                                     VerticalContentAlignment="Center"
                                     Padding="4,12"
                                     BorderThickness="0"
                                     Background="Transparent"
                                     Visibility="{Binding IsPasswordVisible, Converter={StaticResource BoolToVisibilityConverter}}">
                                <TextBox.Style>
                                    <Style TargetType="TextBox">
                                        <Setter Property="CaretBrush" Value="#1976D2"/>
                                    </Style>
                                </TextBox.Style>
                            </TextBox>

                            <!-- Eye toggle button -->
                            <Button Grid.Column="2"
                                    Command="{Binding TogglePasswordVisibilityCommand}"
                                    Cursor="Hand"
                                    VerticalAlignment="Stretch"
                                    Background="Transparent"
                                    BorderThickness="0"
                                    Padding="8,0"
                                    ToolTip="Parolni ko'rsatish/yashirish">
                                <Button.Template>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="Transparent" Padding="{TemplateBinding Padding}">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Button.Template>
                                <Grid>
                                    <!-- Eye open icon (password hidden - click to show) -->
                                    <Viewbox Width="20" Height="20"
                                             Visibility="{Binding IsPasswordVisible, Converter={StaticResource InverseBoolToVisibilityConverter}}">
                                        <Canvas Width="24" Height="24">
                                            <Path Data="M12 4.5C7 4.5 2.73 7.61 1 12c1.73 4.39 6 7.5 11 7.5s9.27-3.11 11-7.5c-1.73-4.39-6-7.5-11-7.5zM12 17c-2.76 0-5-2.24-5-5s2.24-5 5-5 5 2.24 5 5-2.24 5-5 5zm0-8c-1.66 0-3 1.34-3 3s1.34 3 3 3 3-1.34 3-3-1.34-3-3-3z"
                                                  Fill="#90A4AE"/>
                                        </Canvas>
                                    </Viewbox>
                                    <!-- Eye closed icon (password visible - click to hide) -->
                                    <Viewbox Width="20" Height="20"
                                             Visibility="{Binding IsPasswordVisible, Converter={StaticResource BoolToVisibilityConverter}}">
                                        <Canvas Width="24" Height="24">
                                            <Path Data="M12 7c2.76 0 5 2.24 5 5 0 .65-.13 1.26-.36 1.83l2.92 2.92c1.51-1.26 2.7-2.89 3.43-4.75-1.73-4.39-6-7.5-11-7.5-1.4 0-2.74.25-3.98.7l2.16 2.16C10.74 7.13 11.35 7 12 7zM2 4.27l2.28 2.28.46.46C3.08 8.3 1.78 10.02 1 12c1.73 4.39 6 7.5 11 7.5 1.55 0 3.03-.3 4.38-.84l.42.42L19.73 22 21 20.73 3.27 3 2 4.27zM7.53 9.8l1.55 1.55c-.05.21-.08.43-.08.65 0 1.66 1.34 3 3 3 .22 0 .44-.03.65-.08l1.55 1.55c-.67.33-1.41.53-2.2.53-2.76 0-5-2.24-5-5 0-.79.2-1.53.53-2.2zm4.31-.78l3.15 3.15.02-.16c0-1.66-1.34-3-3-3l-.17.01z"
                                                  Fill="#1976D2"/>
                                        </Canvas>
                                    </Viewbox>
                                </Grid>
                            </Button>
                        </Grid>
                    </Border>

                    <!-- Error message -->
                    <Border Background="#FFF3E0" CornerRadius="8" Padding="12,10" Margin="0,18,0,0"
                            Visibility="{Binding ErrorMessage, Converter={StaticResource NullToVisibilityConverter}}">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Viewbox Width="16" Height="16" Margin="0,0,8,0">
                                <Canvas Width="24" Height="24">
                                    <Path Data="M1 21h22L12 2 1 21zm12-3h-2v-2h2v2zm0-4h-2v-4h2v4z"
                                          Fill="#E65100"/>
                                </Canvas>
                            </Viewbox>
                            <TextBlock Grid.Column="1"
                                       Text="{Binding ErrorMessage}"
                                       Foreground="#E65100"
                                       FontSize="13"
                                       TextWrapping="Wrap"
                                       VerticalAlignment="Center"/>
                        </Grid>
                    </Border>

                    <!-- Login button -->
                    <Button Command="{Binding LoginCommand}"
                            Margin="0,24,0,0"
                            Cursor="Hand"
                            Height="48">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border x:Name="ButtonBorder"
                                                    CornerRadius="10"
                                                    Padding="20,0">
                                                <Border.Background>
                                                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                                        <GradientStop Color="#1565C0" Offset="0"/>
                                                        <GradientStop Color="#1E88E5" Offset="1"/>
                                                    </LinearGradientBrush>
                                                </Border.Background>
                                                <Border.Effect>
                                                    <DropShadowEffect BlurRadius="12" ShadowDepth="3" Opacity="0.25" Color="#1565C0"/>
                                                </Border.Effect>
                                                <Grid HorizontalAlignment="Center" VerticalAlignment="Center">
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="Auto"/>
                                                        <ColumnDefinition Width="Auto"/>
                                                    </Grid.ColumnDefinitions>
                                                    <!-- Login icon -->
                                                    <Viewbox Width="18" Height="18" Grid.Column="0" Margin="0,0,10,0">
                                                        <Canvas Width="24" Height="24">
                                                            <Path Data="M11 7L9.6 8.4l2.6 2.6H2v2h10.2l-2.6 2.6L11 17l5-5-5-5zm9 12H12v2h8c1.1 0 2-.9 2-2V5c0-1.1-.9-2-2-2h-8v2h8v14z"
                                                                  Fill="White"/>
                                                        </Canvas>
                                                    </Viewbox>
                                                    <TextBlock Grid.Column="1"
                                                               Text="Kirish"
                                                               Foreground="White"
                                                               FontSize="16"
                                                               FontWeight="SemiBold"
                                                               VerticalAlignment="Center"/>
                                                </Grid>
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter TargetName="ButtonBorder" Property="Background">
                                                        <Setter.Value>
                                                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                                                <GradientStop Color="#0D47A1" Offset="0"/>
                                                                <GradientStop Color="#1565C0" Offset="1"/>
                                                            </LinearGradientBrush>
                                                        </Setter.Value>
                                                    </Setter>
                                                </Trigger>
                                                <Trigger Property="IsEnabled" Value="False">
                                                    <Setter TargetName="ButtonBorder" Property="Background">
                                                        <Setter.Value>
                                                            <SolidColorBrush Color="#B0BEC5"/>
                                                        </Setter.Value>
                                                    </Setter>
                                                    <Setter TargetName="ButtonBorder" Property="Effect" Value="{x:Null}"/>
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </Button.Style>
                    </Button>

                    <!-- Loading indicator -->
                    <Grid Margin="0,16,0,0"
                          Visibility="{Binding IsLoading, Converter={StaticResource BoolToVisibilityConverter}}">
                        <Border CornerRadius="3" Background="#E3F2FD" Height="4" ClipToBounds="True">
                            <Border x:Name="ProgressIndicator" CornerRadius="3" Background="#1976D2" Width="100" HorizontalAlignment="Left" Margin="-100,0,0,0">
                                <Border.Triggers>
                                    <EventTrigger RoutedEvent="Loaded">
                                        <BeginStoryboard>
                                            <Storyboard RepeatBehavior="Forever">
                                                <ThicknessAnimation
                                                    Storyboard.TargetProperty="Margin"
                                                    From="-100,0,0,0"
                                                    To="450,0,0,0"
                                                    Duration="0:0:1.2"/>
                                            </Storyboard>
                                        </BeginStoryboard>
                                    </EventTrigger>
                                </Border.Triggers>
                            </Border>
                        </Border>
                    </Grid>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</UserControl>
