<UserControl x:Class="WPF.Views.SalesHistoryView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="clr-namespace:WPF.ViewModels"
             mc:Ignorable="d"
             d:DataContext="{d:DesignInstance Type=vm:SalesHistoryViewModel}"
             d:DesignHeight="700" d:DesignWidth="1100">

    <UserControl.Resources>
        <Style x:Key="StatCardStyle" TargetType="Border">
            <Setter Property="Background" Value="{StaticResource BackgroundCardBrush}"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Padding" Value="24"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="20" ShadowDepth="2" Opacity="0.08" Direction="270"/>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="ModernDatePicker" TargetType="DatePicker">
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Padding" Value="8,6"/>
            <Setter Property="Background" Value="{StaticResource BackgroundInputBrush}"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderDefaultBrush}"/>
            <Setter Property="BorderThickness" Value="1.5"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Width" Value="150"/>
        </Style>

        <Style x:Key="PrimaryButtonStyle" TargetType="Button">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="20,10"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" CornerRadius="8" Padding="{TemplateBinding Padding}">
                            <Border.Background>
                                <LinearGradientBrush StartPoint="0,0" EndPoint="1,0.5">
                                    <GradientStop Color="{StaticResource PrimaryColor}" Offset="0"/>
                                    <GradientStop Color="{StaticResource PrimaryDarkColor}" Offset="1"/>
                                </LinearGradientBrush>
                            </Border.Background>
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Opacity" Value="0.88"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="border" Property="Opacity" Value="0.5"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="ModernColumnHeader" TargetType="DataGridColumnHeader">
            <Setter Property="Background" Value="{StaticResource BackgroundInputBrush}"/>
            <Setter Property="Padding" Value="14,12"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Foreground" Value="{StaticResource TextTertiaryBrush}"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderDefaultBrush}"/>
            <Setter Property="BorderThickness" Value="0,0,0,1.5"/>
        </Style>

        <Style x:Key="ModernRow" TargetType="DataGridRow">
            <Setter Property="Background" Value="{StaticResource BackgroundCardBrush}"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderLightBrush}"/>
            <Setter Property="BorderThickness" Value="0,0,0,1"/>
            <Setter Property="FontSize" Value="13"/>
            <Style.Triggers>
                <DataTrigger Binding="{Binding DateGroupIsAlternate}" Value="True">
                    <Setter Property="Background" Value="{StaticResource DataGridAlternateBrush}"/>
                </DataTrigger>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="{StaticResource DataGridHoverBrush}"/>
                </Trigger>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="{StaticResource PrimaryLightBrush}"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="ModernCell" TargetType="DataGridCell">
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="DataGridCell">
                        <Border Background="{TemplateBinding Background}"
                                Padding="14,10">
                            <ContentPresenter VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="{StaticResource PrimaryLightBrush}"/>
                    <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header + Stats Section -->
        <Grid Grid.Row="0" Margin="0,0,0,16">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Bugungi sotuvingiz -->
            <Border Grid.Column="0" Style="{StaticResource StatCardStyle}" Margin="0,0,8,0">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <StackPanel Grid.Column="0">
                        <TextBlock Text="Bugungi sotuvingiz"
                                   FontSize="13"
                                   Foreground="{StaticResource TextMutedBrush}"/>
                        <TextBlock Text="{Binding TodaySalesAmount}"
                                   FontSize="24"
                                   FontWeight="Bold"
                                   Foreground="{StaticResource TextPrimaryBrush}"
                                   Margin="0,8,0,0"/>
                        <TextBlock Text="Bugungi jami"
                                   FontSize="12"
                                   Foreground="{StaticResource TextTertiaryBrush}"
                                   Margin="0,5,0,0"/>
                    </StackPanel>
                    <Border Grid.Column="1"
                            Width="50" Height="50"
                            Background="{StaticResource SuccessBackgroundBrush}"
                            CornerRadius="12">
                        <Path Data="M5,6H23V18H5V6M14,9A3,3 0 0,1 17,12A3,3 0 0,1 14,15A3,3 0 0,1 11,12A3,3 0 0,1 14,9M9,8A2,2 0 0,1 7,10V14A2,2 0 0,1 9,16H19A2,2 0 0,1 21,14V10A2,2 0 0,1 19,8H9M1,10H3V20H19V22H1V10Z"
                              Fill="{StaticResource SuccessBrush}"
                              Width="24" Height="24"
                              Stretch="Uniform"
                              HorizontalAlignment="Center"
                              VerticalAlignment="Center"/>
                    </Border>
                </Grid>
            </Border>

            <!-- Bugungi buyurtmalar soni -->
            <Border Grid.Column="1" Style="{StaticResource StatCardStyle}" Margin="8,0,0,0">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <StackPanel Grid.Column="0">
                        <TextBlock Text="Bugungi buyurtmalar"
                                   FontSize="13"
                                   Foreground="{StaticResource TextMutedBrush}"/>
                        <TextBlock Text="{Binding TodayOrdersCount}"
                                   FontSize="24"
                                   FontWeight="Bold"
                                   Foreground="{StaticResource TextPrimaryBrush}"
                                   Margin="0,8,0,0"/>
                        <TextBlock Text="Bugungi jami"
                                   FontSize="12"
                                   Foreground="{StaticResource TextTertiaryBrush}"
                                   Margin="0,5,0,0"/>
                    </StackPanel>
                    <Border Grid.Column="1"
                            Width="50" Height="50"
                            Background="{StaticResource InfoBackgroundBrush}"
                            CornerRadius="12">
                        <Path Data="M17,18C15.89,18 15,18.89 15,20A2,2 0 0,0 17,22A2,2 0 0,0 19,20C19,18.89 18.1,18 17,18M1,2V4H3L6.6,11.59L5.24,14.04C5.09,14.32 5,14.65 5,15A2,2 0 0,0 7,17H19V15H7.42A0.25,0.25 0 0,1 7.17,14.75C7.17,14.7 7.18,14.66 7.2,14.63L8.1,13H15.55C16.3,13 16.96,12.58 17.3,11.97L20.88,5.5C20.95,5.34 21,5.17 21,5A1,1 0 0,0 20,4H5.21L4.27,2M7,18C5.89,18 5,18.89 5,20A2,2 0 0,0 7,22A2,2 0 0,0 9,20C9,18.89 8.1,18 7,18Z"
                              Fill="{StaticResource InfoBrush}"
                              Width="24" Height="24"
                              Stretch="Uniform"
                              HorizontalAlignment="Center"
                              VerticalAlignment="Center"/>
                    </Border>
                </Grid>
            </Border>
        </Grid>

        <!-- Filter Section -->
        <Border Grid.Row="1" Background="{StaticResource BackgroundCardBrush}" CornerRadius="12" Padding="24,18" Margin="0,0,0,16">
            <Border.Effect>
                <DropShadowEffect BlurRadius="20" ShadowDepth="2" Opacity="0.08" Direction="270"/>
            </Border.Effect>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Title -->
                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                    <Border Width="36" Height="36" CornerRadius="9" Margin="0,0,12,0">
                        <Border.Background>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                <GradientStop Color="{StaticResource PrimaryColor}" Offset="0"/>
                                <GradientStop Color="{StaticResource PrimaryDarkColor}" Offset="1"/>
                            </LinearGradientBrush>
                        </Border.Background>
                        <Path Data="M12,2A10,10 0 0,0 2,12A10,10 0 0,0 12,22A10,10 0 0,0 22,12A10,10 0 0,0 12,2M16.2,16.2L11,13V7H12.5V12.2L17,14.9L16.2,16.2Z"
                              Fill="White"
                              Width="18" Height="18"
                              Stretch="Uniform"
                              HorizontalAlignment="Center"
                              VerticalAlignment="Center"/>
                    </Border>
                    <TextBlock Text="Sotuvlar tarixi"
                               FontSize="18"
                               FontWeight="SemiBold"
                               Foreground="{StaticResource TextPrimaryBrush}"
                               VerticalAlignment="Center"/>
                </StackPanel>

                <!-- Date Filters + Button -->
                <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center">
                    <StackPanel Orientation="Horizontal" Margin="0,0,12,0">
                        <Path Data="M19,19H5V8H19M16,1V3H8V1H6V3H5C3.89,3 3,3.89 3,5V19A2,2 0 0,0 5,21H19A2,2 0 0,0 21,19V5C21,3.89 20.1,3 19,3H18V1"
                              Fill="{StaticResource PrimaryBrush}"
                              Width="14" Height="14"
                              Stretch="Uniform"
                              VerticalAlignment="Center"
                              Margin="0,0,6,0"/>
                        <TextBlock Text="Dan:"
                                   VerticalAlignment="Center"
                                   FontSize="13"
                                   FontWeight="SemiBold"
                                   Foreground="{StaticResource TextSecondaryBrush}"/>
                    </StackPanel>

                    <DatePicker SelectedDate="{Binding StartDate}"
                                Style="{StaticResource ModernDatePicker}"
                                Margin="0,0,16,0"/>

                    <StackPanel Orientation="Horizontal" Margin="0,0,12,0">
                        <Path Data="M16,11.78L20.24,4.45L21.97,5.45L16.74,14.5L10.23,10.75L5.46,19H22V21H2V3H4V17.54L9.5,8L16,11.78Z"
                              Fill="{StaticResource PrimaryBrush}"
                              Width="14" Height="14"
                              Stretch="Uniform"
                              VerticalAlignment="Center"
                              Margin="0,0,6,0"/>
                        <TextBlock Text="Gacha:"
                                   VerticalAlignment="Center"
                                   FontSize="13"
                                   FontWeight="SemiBold"
                                   Foreground="{StaticResource TextSecondaryBrush}"/>
                    </StackPanel>

                    <DatePicker SelectedDate="{Binding EndDate}"
                                Style="{StaticResource ModernDatePicker}"
                                Margin="0,0,16,0"/>

                    <Button Command="{Binding LoadSalesCommand}"
                            Style="{StaticResource PrimaryButtonStyle}">
                        <StackPanel Orientation="Horizontal">
                            <Path Data="M9.5,3A6.5,6.5 0 0,1 16,9.5C16,11.11 15.41,12.59 14.44,13.73L14.71,14H15.5L20.5,19L19,20.5L14,15.5V14.71L13.73,14.44C12.59,15.41 11.11,16 9.5,16A6.5,6.5 0 0,1 3,9.5A6.5,6.5 0 0,1 9.5,3M9.5,5C7,5 5,7 5,9.5C5,12 7,14 9.5,14C12,14 14,12 14,9.5C14,7 12,5 9.5,5Z"
                                  Fill="White"
                                  Width="14" Height="14"
                                  Stretch="Uniform"
                                  Margin="0,0,8,0"
                                  VerticalAlignment="Center"/>
                            <TextBlock Text="Ko'rsatish" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Error Message -->
        <Border Grid.Row="2"
                Background="{StaticResource ErrorBackgroundBrush}"
                Padding="16,12"
                CornerRadius="10"
                Margin="0,0,0,12"
                Visibility="{Binding ErrorMessage, Converter={StaticResource NullToVisibilityConverter}}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Border Grid.Column="0" Width="28" Height="28" CornerRadius="14"
                        Background="{StaticResource ErrorBackgroundBrush}" Margin="0,0,12,0">
                    <Path Data="M13,13H11V7H13M13,17H11V15H13M12,2A10,10 0 0,0 2,12A10,10 0 0,0 12,22A10,10 0 0,0 22,12A10,10 0 0,0 12,2Z"
                          Fill="{StaticResource ErrorTextBrush}"
                          Width="14" Height="14"
                          Stretch="Uniform"
                          HorizontalAlignment="Center"
                          VerticalAlignment="Center"/>
                </Border>
                <TextBlock Grid.Column="1" Text="{Binding ErrorMessage}"
                           Foreground="{StaticResource ErrorTextBrush}" FontSize="13" FontWeight="SemiBold"
                           VerticalAlignment="Center"/>
            </Grid>
        </Border>

        <!-- Summary Cards -->
        <Grid Grid.Row="3" Margin="0,0,0,16">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Border Grid.Column="0" Style="{StaticResource StatCardStyle}" Margin="0,0,8,0">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <StackPanel Grid.Column="0" VerticalAlignment="Center">
                        <TextBlock Text="Davrdagi jami sotuv"
                                   FontSize="13"
                                   Foreground="{StaticResource TextMutedBrush}"/>
                        <TextBlock FontSize="24"
                                   FontWeight="Bold"
                                   Foreground="{StaticResource TextPrimaryBrush}"
                                   Margin="0,8,0,0">
                            <TextBlock.Text>
                                <Binding Path="TotalSalesAmount" StringFormat="{}{0:N0} so'm"/>
                            </TextBlock.Text>
                        </TextBlock>
                        <TextBlock Text="Tanlangan davr uchun"
                                   FontSize="11"
                                   Foreground="{StaticResource TextFaintBrush}"
                                   Margin="0,4,0,0"/>
                    </StackPanel>
                    <Border Grid.Column="1"
                            Width="50" Height="50"
                            Background="{StaticResource SuccessBackgroundBrush}"
                            CornerRadius="12">
                        <Path Data="M5,6H23V18H5V6M14,9A3,3 0 0,1 17,12A3,3 0 0,1 14,15A3,3 0 0,1 11,12A3,3 0 0,1 14,9M9,8A2,2 0 0,1 7,10V14A2,2 0 0,1 9,16H19A2,2 0 0,1 21,14V10A2,2 0 0,1 19,8H9M1,10H3V20H19V22H1V10Z"
                              Fill="{StaticResource SuccessBrush}"
                              Width="24" Height="24"
                              Stretch="Uniform"
                              HorizontalAlignment="Center"
                              VerticalAlignment="Center"/>
                    </Border>
                </Grid>
            </Border>

            <Border Grid.Column="1" Style="{StaticResource StatCardStyle}" Margin="4,0">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <StackPanel Grid.Column="0" VerticalAlignment="Center">
                        <TextBlock Text="Buyurtmalar soni"
                                   FontSize="13"
                                   Foreground="{StaticResource TextMutedBrush}"/>
                        <TextBlock Text="{Binding PeriodOrdersCount, StringFormat={}{0} ta}"
                                   FontSize="24"
                                   FontWeight="Bold"
                                   Foreground="{StaticResource TextPrimaryBrush}"
                                   Margin="0,8,0,0"/>
                        <TextBlock Text="Tanlangan davr uchun"
                                   FontSize="11"
                                   Foreground="{StaticResource TextFaintBrush}"
                                   Margin="0,4,0,0"/>
                    </StackPanel>
                    <Border Grid.Column="1"
                            Width="50" Height="50"
                            Background="{StaticResource WarningBackgroundBrush}"
                            CornerRadius="12">
                        <Path Data="M17,18C15.89,18 15,18.89 15,20A2,2 0 0,0 17,22A2,2 0 0,0 19,20C19,18.89 18.1,18 17,18M1,2V4H3L6.6,11.59L5.24,14.04C5.09,14.32 5,14.65 5,15A2,2 0 0,0 7,17H19V15H7.42A0.25,0.25 0 0,1 7.17,14.75C7.17,14.7 7.18,14.66 7.2,14.63L8.1,13H15.55C16.3,13 16.96,12.58 17.3,11.97L20.88,5.5C20.95,5.34 21,5.17 21,5A1,1 0 0,0 20,4H5.21L4.27,2M7,18C5.89,18 5,18.89 5,20A2,2 0 0,0 7,22A2,2 0 0,0 9,20C9,18.89 8.1,18 7,18Z"
                              Fill="{StaticResource WarningBrush}"
                              Width="24" Height="24"
                              Stretch="Uniform"
                              HorizontalAlignment="Center"
                              VerticalAlignment="Center"/>
                    </Border>
                </Grid>
            </Border>

            <Border Grid.Column="2" Style="{StaticResource StatCardStyle}" Margin="8,0,0,0">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <StackPanel Grid.Column="0" VerticalAlignment="Center">
                        <TextBlock Text="Sotilgan mahsulotlar"
                                   FontSize="13"
                                   Foreground="{StaticResource TextMutedBrush}"/>
                        <TextBlock Text="{Binding SalesItemCount, StringFormat={}{0} ta}"
                                   FontSize="24"
                                   FontWeight="Bold"
                                   Foreground="{StaticResource TextPrimaryBrush}"
                                   Margin="0,8,0,0"/>
                        <TextBlock Text="Tanlangan davr uchun"
                                   FontSize="11"
                                   Foreground="{StaticResource TextFaintBrush}"
                                   Margin="0,4,0,0"/>
                    </StackPanel>
                    <Border Grid.Column="1"
                            Width="50" Height="50"
                            Background="{StaticResource InfoBackgroundBrush}"
                            CornerRadius="12">
                        <Path Data="M14,2H6A2,2 0 0,0 4,4V20A2,2 0 0,0 6,22H18A2,2 0 0,0 20,20V8L14,2M18,20H6V4H13V9H18V20M9,13V19H7V13H9M15,15V19H13V15H15M11,11V19H13V11H11Z"
                              Fill="{StaticResource InfoBrush}"
                              Width="24" Height="24"
                              Stretch="Uniform"
                              HorizontalAlignment="Center"
                              VerticalAlignment="Center"/>
                    </Border>
                </Grid>
            </Border>
        </Grid>

        <!-- Sales DataGrid -->
        <Border Grid.Row="4" Background="{StaticResource BackgroundCardBrush}" CornerRadius="12">
            <Border.Effect>
                <DropShadowEffect BlurRadius="20" ShadowDepth="2" Opacity="0.08" Direction="270"/>
            </Border.Effect>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <Border Grid.Row="0" Padding="20,16" BorderBrush="{StaticResource BorderLightBrush}" BorderThickness="0,0,0,1">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <StackPanel Grid.Column="0" Orientation="Horizontal">
                            <Border Width="28" Height="28" CornerRadius="7"
                                    Background="{StaticResource PrimaryLightBrush}" Margin="0,0,10,0">
                                <Path Data="M3,4H7V8H3V4M9,5V7H21V5H9M3,10H7V14H3V10M9,11V13H21V11H9M3,16H7V20H3V16M9,17V19H21V17H9"
                                      Fill="{StaticResource PrimaryBrush}"
                                      Width="14" Height="14"
                                      Stretch="Uniform"
                                      HorizontalAlignment="Center"
                                      VerticalAlignment="Center"/>
                            </Border>
                            <TextBlock Text="Sotuvlar ro'yxati"
                                       FontSize="15"
                                       FontWeight="SemiBold"
                                       Foreground="{StaticResource TextPrimaryBrush}"
                                       VerticalAlignment="Center"/>
                        </StackPanel>

                        <!-- Refresh button -->
                        <Button Grid.Column="1"
                                Command="{Binding RefreshCommand}"
                                Cursor="Hand"
                                VerticalAlignment="Center">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border x:Name="border"
                                            Background="{StaticResource PrimaryLightBrush}"
                                            CornerRadius="8"
                                            Padding="12,8">
                                        <StackPanel Orientation="Horizontal">
                                            <Path x:Name="icon"
                                                  Data="M17.65,6.35C16.2,4.9 14.21,4 12,4A8,8 0 0,0 4,12A8,8 0 0,0 12,20C15.73,20 18.84,17.45 19.73,14H17.65C16.83,16.33 14.61,18 12,18A6,6 0 0,1 6,12A6,6 0 0,1 12,6C13.66,6 15.14,6.69 16.22,7.78L13,11H20V4L17.65,6.35Z"
                                                  Fill="{StaticResource PrimaryBrush}"
                                                  Width="14" Height="14"
                                                  Stretch="Uniform"
                                                  VerticalAlignment="Center"
                                                  RenderTransformOrigin="0.5,0.5">
                                                <Path.RenderTransform>
                                                    <RotateTransform x:Name="spinTransform" Angle="0"/>
                                                </Path.RenderTransform>
                                            </Path>
                                            <TextBlock Text="Yangilash"
                                                       FontSize="12"
                                                       FontWeight="SemiBold"
                                                       Foreground="{StaticResource PrimaryBrush}"
                                                       VerticalAlignment="Center"
                                                       Margin="6,0,0,0"/>
                                        </StackPanel>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter TargetName="border" Property="Background" Value="{StaticResource PrimaryHoverLightBrush}"/>
                                        </Trigger>
                                        <DataTrigger Binding="{Binding IsRefreshing}" Value="True">
                                            <DataTrigger.EnterActions>
                                                <BeginStoryboard x:Name="SpinStoryboard">
                                                    <Storyboard>
                                                        <DoubleAnimation Storyboard.TargetName="spinTransform"
                                                                         Storyboard.TargetProperty="Angle"
                                                                         From="0" To="360"
                                                                         Duration="0:0:0.8"
                                                                         RepeatBehavior="Forever"/>
                                                    </Storyboard>
                                                </BeginStoryboard>
                                            </DataTrigger.EnterActions>
                                            <DataTrigger.ExitActions>
                                                <StopStoryboard BeginStoryboardName="SpinStoryboard"/>
                                            </DataTrigger.ExitActions>
                                        </DataTrigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>
                    </Grid>
                </Border>

                <DataGrid Grid.Row="1"
                          ItemsSource="{Binding SalesItems}"
                          AutoGenerateColumns="False"
                          IsReadOnly="True"
                          CanUserAddRows="False"
                          SelectionUnit="FullRow"
                          Background="{StaticResource BackgroundCardBrush}"
                          GridLinesVisibility="None"
                          HeadersVisibility="Column"
                          BorderThickness="0"
                          Margin="8,0,8,8"
                          SelectionMode="Single"
                          ColumnHeaderStyle="{StaticResource ModernColumnHeader}"
                          RowStyle="{StaticResource ModernRow}"
                          CellStyle="{StaticResource ModernCell}">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Sana" Binding="{Binding Date, StringFormat=dd.MM.yyyy HH:mm}" Width="150">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Foreground" Value="{StaticResource TextSecondaryBrush}"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>
                        <DataGridTextColumn Header="Mahsulot" Binding="{Binding ProductName}" Width="*">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="TextTrimming" Value="CharacterEllipsis"/>
                                    <Setter Property="ToolTip" Value="{Binding ProductName}"/>
                                    <Setter Property="FontWeight" Value="SemiBold"/>
                                    <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>
                        <DataGridTemplateColumn Header="Miqdor" Width="120">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock>
                                        <Run Text="{Binding FormattedQuantity, Mode=OneWay}" Foreground="{StaticResource TextPrimaryBrush}"/>
                                        <Run Text=" "/>
                                        <Run Text="{Binding UnitTypeName}" Foreground="{StaticResource TextFaintBrush}"/>
                                    </TextBlock>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                        <DataGridTemplateColumn Header="Narxi" Width="130">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Foreground="{StaticResource TextSecondaryBrush}">
                                        <Run Text="{Binding UnitPrice, StringFormat=N0}"/>
                                        <Run Text=" so'm" Foreground="{StaticResource TextFaintBrush}"/>
                                    </TextBlock>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                        <DataGridTemplateColumn Header="Jami" Width="150">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Border Background="{StaticResource SuccessBackgroundBrush}" CornerRadius="6" Padding="8,4" HorizontalAlignment="Left">
                                        <TextBlock FontWeight="SemiBold" Foreground="{StaticResource SuccessDarkBrush}" FontSize="12">
                                            <Run Text="{Binding TotalPrice, StringFormat=N0}"/>
                                            <Run Text=" so'm"/>
                                        </TextBlock>
                                    </Border>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                        <DataGridTemplateColumn Header="To'lov" Width="110">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Border Background="{StaticResource PrimaryLightBrush}" CornerRadius="6" Padding="8,4" HorizontalAlignment="Left">
                                        <TextBlock Text="{Binding PaymentTypeName}"
                                                   FontSize="12"
                                                   FontWeight="SemiBold"
                                                   Foreground="{StaticResource PrimaryBrush}"/>
                                    </Border>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>

                <!-- Empty State -->
                <StackPanel Grid.Row="1"
                            VerticalAlignment="Center"
                            HorizontalAlignment="Center"
                            Visibility="{Binding HasSales, Converter={StaticResource BoolToVisibilityConverter}, ConverterParameter=invert}">
                    <Border Width="64" Height="64" CornerRadius="32"
                            Background="{StaticResource PrimaryLightBrush}"
                            HorizontalAlignment="Center"
                            Margin="0,0,0,16">
                        <Path Data="M12,2A10,10 0 0,0 2,12A10,10 0 0,0 12,22A10,10 0 0,0 22,12A10,10 0 0,0 12,2M16.2,16.2L11,13V7H12.5V12.2L17,14.9L16.2,16.2Z"
                              Fill="{StaticResource PrimaryBrush}"
                              Width="28" Height="28"
                              Stretch="Uniform"
                              HorizontalAlignment="Center"
                              VerticalAlignment="Center"/>
                    </Border>
                    <TextBlock Text="Sotuvlar tarixi bo'sh"
                               FontSize="15" FontWeight="SemiBold" Foreground="{StaticResource TextPrimaryBrush}"
                               HorizontalAlignment="Center"/>
                    <TextBlock Text="Sana oralig'ini tanlab &quot;Ko'rsatish&quot; tugmasini bosing"
                               FontSize="12" Foreground="{StaticResource TextFaintBrush}"
                               HorizontalAlignment="Center"
                               Margin="0,6,0,0"/>
                </StackPanel>

                <!-- Pagination -->
                <Border Grid.Row="2" BorderBrush="{StaticResource BorderLightBrush}" BorderThickness="0,1,0,0" Padding="20,14">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                            <Border Background="{StaticResource PrimaryLightBrush}" CornerRadius="8" Padding="10,6">
                                <TextBlock FontSize="12" Foreground="{StaticResource PrimaryBrush}" FontWeight="SemiBold">
                                    <Run Text="Jami: "/>
                                    <Run Text="{Binding TotalCount}" FontWeight="Bold"/>
                                    <Run Text=" ta yozuv"/>
                                </TextBlock>
                            </Border>
                        </StackPanel>

                        <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center">
                            <Button Command="{Binding PreviousPageCommand}" Cursor="Hand" Margin="0,0,8,0">
                                <Button.Template>
                                    <ControlTemplate TargetType="Button">
                                        <Border x:Name="border" Background="{StaticResource BackgroundInputBrush}" CornerRadius="10" Padding="18,10" BorderBrush="{StaticResource BorderDefaultBrush}" BorderThickness="1">
                                            <StackPanel Orientation="Horizontal">
                                                <Path Data="M15.41,16.58L10.83,12L15.41,7.41L14,6L8,12L14,18L15.41,16.58Z"
                                                      Fill="{StaticResource TextTertiaryBrush}" Width="14" Height="14" Stretch="Uniform" Margin="0,0,6,0" VerticalAlignment="Center"/>
                                                <TextBlock Text="Oldingi" FontSize="14" Foreground="{StaticResource TextTertiaryBrush}" FontWeight="SemiBold"/>
                                            </StackPanel>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter TargetName="border" Property="Background" Value="{StaticResource BorderLightBrush}"/>
                                            </Trigger>
                                            <Trigger Property="IsEnabled" Value="False">
                                                <Setter TargetName="border" Property="Opacity" Value="0.5"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Button.Template>
                            </Button>

                            <Border Background="{StaticResource BackgroundInputBrush}" CornerRadius="10" Padding="18,10" VerticalAlignment="Center">
                                <TextBlock FontSize="14" Foreground="{StaticResource TextDarkBrush}">
                                    <Run Text="{Binding CurrentPage}" FontWeight="Bold" Foreground="{StaticResource PrimaryBrush}"/>
                                    <Run Text=" / "/>
                                    <Run Text="{Binding TotalPages}" FontWeight="Bold"/>
                                </TextBlock>
                            </Border>

                            <Button Command="{Binding NextPageCommand}" Cursor="Hand" Margin="8,0,0,0">
                                <Button.Template>
                                    <ControlTemplate TargetType="Button">
                                        <Border x:Name="border" Background="{StaticResource BackgroundInputBrush}" CornerRadius="10" Padding="18,10" BorderBrush="{StaticResource BorderDefaultBrush}" BorderThickness="1">
                                            <StackPanel Orientation="Horizontal">
                                                <TextBlock Text="Keyingi" FontSize="14" Foreground="{StaticResource TextTertiaryBrush}" FontWeight="SemiBold"/>
                                                <Path Data="M8.59,16.58L13.17,12L8.59,7.41L10,6L16,12L10,18L8.59,16.58Z"
                                                      Fill="{StaticResource TextTertiaryBrush}" Width="14" Height="14" Stretch="Uniform" Margin="6,0,0,0" VerticalAlignment="Center"/>
                                            </StackPanel>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter TargetName="border" Property="Background" Value="{StaticResource BorderLightBrush}"/>
                                            </Trigger>
                                            <Trigger Property="IsEnabled" Value="False">
                                                <Setter TargetName="border" Property="Opacity" Value="0.5"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Button.Template>
                            </Button>
                        </StackPanel>
                    </Grid>
                </Border>
            </Grid>
        </Border>

        <!-- Loading Overlay -->
        <Border Grid.RowSpan="5"
                Background="{StaticResource OverlayLoadingBrush}"
                CornerRadius="12"
                Visibility="{Binding IsLoading, Converter={StaticResource BoolToVisibilityConverter}}">
            <Border Background="{StaticResource BackgroundCardBrush}" CornerRadius="16" Padding="40,30"
                    HorizontalAlignment="Center" VerticalAlignment="Center"
                    MinWidth="280">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="30" ShadowDepth="4" Opacity="0.12" Direction="270"/>
                </Border.Effect>
                <StackPanel HorizontalAlignment="Center">
                    <ProgressBar IsIndeterminate="True" Width="200" Height="4"
                                 Foreground="{StaticResource PrimaryBrush}"/>
                    <TextBlock Text="Ma'lumotlar yuklanmoqda..."
                               Margin="0,16,0,0"
                               FontSize="14"
                               FontWeight="SemiBold"
                               Foreground="{StaticResource TextPrimaryBrush}"
                               HorizontalAlignment="Center"/>
                    <TextBlock Text="Iltimos kuting"
                               Margin="0,4,0,0"
                               FontSize="12"
                               Foreground="{StaticResource TextMutedBrush}"
                               HorizontalAlignment="Center"/>
                </StackPanel>
            </Border>
        </Border>
    </Grid>
</UserControl>
