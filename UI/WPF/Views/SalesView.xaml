<UserControl x:Class="WPF.Views.SalesView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="clr-namespace:WPF.ViewModels"
             mc:Ignorable="d"
             d:DataContext="{d:DesignInstance Type=vm:SalesViewModel}"
             d:DesignHeight="600" d:DesignWidth="900">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="380"/>
        </Grid.ColumnDefinitions>

        <!-- Cart Items -->
        <Border Grid.Column="0" Background="White" CornerRadius="12" Margin="0,0,15,0">
            <Border.Effect>
                <DropShadowEffect BlurRadius="20" ShadowDepth="2" Opacity="0.08" Direction="270"/>
            </Border.Effect>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Barcode Input -->
                <Border Grid.Row="0" Padding="20" BorderBrush="#eee" BorderThickness="0,0,0,1">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <Border Grid.Column="0" Background="#f5f5f5" CornerRadius="8">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Path Grid.Column="0"
                                      Data="M2,6H4V18H2V6M5,6H6V18H5V6M7,6H10V18H7V6M11,6H12V18H11V6M14,6H16V18H14V6M17,6H20V18H17V6M21,6H22V18H21V6Z"
                                      Fill="#888"
                                      Width="20" Height="20"
                                      Stretch="Uniform"
                                      Margin="15,0,10,0"
                                      VerticalAlignment="Center"/>
                                <TextBox x:Name="BarcodeTextBox"
                                         Grid.Column="1"
                                         Text="{Binding BarcodeInput, UpdateSourceTrigger=PropertyChanged}"
                                         Background="Transparent"
                                         BorderThickness="0"
                                         Padding="5,14"
                                         FontSize="15"
                                         VerticalContentAlignment="Center">
                                    <TextBox.InputBindings>
                                        <KeyBinding Key="Enter" Command="{Binding AddProductByBarcodeCommand}"/>
                                    </TextBox.InputBindings>
                                </TextBox>
                            </Grid>
                        </Border>

                        <!-- Search button -->
                        <Button Grid.Column="1"
                                Command="{Binding OpenSearchDialogCommand}"
                                ToolTip="Qo'lda qidirish"
                                Padding="14"
                                Margin="10,0,0,0"
                                Background="#f5f5f5"
                                BorderThickness="0"
                                Cursor="Hand">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border x:Name="border"
                                            Background="{TemplateBinding Background}"
                                            CornerRadius="8"
                                            Padding="{TemplateBinding Padding}">
                                        <Path Data="M9.5,3A6.5,6.5 0 0,1 16,9.5C16,11.11 15.41,12.59 14.44,13.73L14.71,14H15.5L20.5,19L19,20.5L14,15.5V14.71L13.73,14.44C12.59,15.41 11.11,16 9.5,16A6.5,6.5 0 0,1 3,9.5A6.5,6.5 0 0,1 9.5,3M9.5,5C7,5 5,7 5,9.5C5,12 7,14 9.5,14C12,14 14,12 14,9.5C14,7 12,5 9.5,5Z"
                                              Fill="#666"
                                              Width="20" Height="20"
                                              Stretch="Uniform"/>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter TargetName="border" Property="Background" Value="#e0e0e0"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>

                        <Button Grid.Column="2"
                                Content="Qo'shish"
                                Command="{Binding AddProductByBarcodeCommand}"
                                Padding="25,14"
                                Margin="10,0,0,0"
                                Background="#4CAF50"
                                Foreground="White"
                                BorderThickness="0"
                                FontSize="14"
                                Cursor="Hand">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border x:Name="border"
                                            Background="{TemplateBinding Background}"
                                            CornerRadius="8"
                                            Padding="{TemplateBinding Padding}">
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter TargetName="border" Property="Background" Value="#388E3C"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>
                    </Grid>
                </Border>

                <!-- Cart Items List -->
                <ListView Grid.Row="1"
                          ItemsSource="{Binding CartItems}"
                          BorderThickness="0"
                          Background="Transparent"
                          ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                    <ListView.ItemContainerStyle>
                        <Style TargetType="ListViewItem">
                            <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                            <Setter Property="Padding" Value="0"/>
                            <Setter Property="Margin" Value="0"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="ListViewItem">
                                        <Border x:Name="border" Background="Transparent">
                                            <ContentPresenter/>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter TargetName="border" Property="Background" Value="#fafafa"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </ListView.ItemContainerStyle>
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <Border Padding="20,15" BorderBrush="#f0f0f0" BorderThickness="0,0,0,1">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="100"/>
                                        <ColumnDefinition Width="120"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <StackPanel Grid.Column="0" VerticalAlignment="Center">
                                        <TextBlock Text="{Binding Product.Name}"
                                                   FontSize="14"
                                                   FontWeight="SemiBold"
                                                   Foreground="#333"/>
                                        <StackPanel Orientation="Horizontal" Margin="0,4,0,0">
                                            <TextBlock Text="{Binding Product.UnitPrice, StringFormat={}{0:N0} sum}"
                                                       FontSize="12"
                                                       Foreground="#888"/>
                                            <TextBlock Text="  |  " FontSize="12" Foreground="#ccc"/>
                                            <TextBlock Text="{Binding Product.StockQuantity, StringFormat=Omborda: {0:N0}}"
                                                       FontSize="12"
                                                       Foreground="#FF9800"/>
                                        </StackPanel>
                                    </StackPanel>

                                    <Border Grid.Column="1" Background="#f5f5f5" CornerRadius="6" Padding="8,6" VerticalAlignment="Center">
                                        <TextBox Text="{Binding Quantity, UpdateSourceTrigger=PropertyChanged}"
                                                 Background="Transparent"
                                                 BorderThickness="0"
                                                 TextAlignment="Center"
                                                 FontSize="14"
                                                 VerticalAlignment="Center"/>
                                    </Border>

                                    <TextBlock Grid.Column="2"
                                               Text="{Binding Subtotal, StringFormat={}{0:N0} sum}"
                                               FontSize="15"
                                               FontWeight="Bold"
                                               Foreground="#4CAF50"
                                               VerticalAlignment="Center"
                                               HorizontalAlignment="Right"
                                               Margin="15,0"/>

                                    <Button Grid.Column="3"
                                            Command="{Binding DataContext.RemoveItemCommand, RelativeSource={RelativeSource AncestorType=ListView}}"
                                            CommandParameter="{Binding}"
                                            Background="#ffebee"
                                            BorderThickness="0"
                                            Padding="10,8"
                                            Cursor="Hand"
                                            VerticalAlignment="Center">
                                        <Button.Template>
                                            <ControlTemplate TargetType="Button">
                                                <Border x:Name="border"
                                                        Background="{TemplateBinding Background}"
                                                        CornerRadius="6"
                                                        Padding="{TemplateBinding Padding}">
                                                    <Path Data="M19,6.41L17.59,5L12,10.59L6.41,5L5,6.41L10.59,12L5,17.59L6.41,19L12,13.41L17.59,19L19,17.59L13.41,12L19,6.41Z"
                                                          Fill="#e53935"
                                                          Width="14" Height="14"
                                                          Stretch="Uniform"/>
                                                </Border>
                                                <ControlTemplate.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter TargetName="border" Property="Background" Value="#ffcdd2"/>
                                                    </Trigger>
                                                </ControlTemplate.Triggers>
                                            </ControlTemplate>
                                        </Button.Template>
                                    </Button>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>

                <!-- Empty Cart Message -->
                <StackPanel Grid.Row="1"
                            VerticalAlignment="Center"
                            HorizontalAlignment="Center"
                            Visibility="{Binding CartItems.Count, Converter={StaticResource IntToVisibilityConverter}, ConverterParameter=invert}">
                    <Path Data="M17,18C15.89,18 15,18.89 15,20A2,2 0 0,0 17,22A2,2 0 0,0 19,20C19,18.89 18.1,18 17,18M1,2V4H3L6.6,11.59L5.24,14.04C5.09,14.32 5,14.65 5,15A2,2 0 0,0 7,17H19V15H7.42A0.25,0.25 0 0,1 7.17,14.75C7.17,14.7 7.18,14.66 7.2,14.63L8.1,13H15.55C16.3,13 16.96,12.58 17.3,11.97L20.88,5.5C20.95,5.34 21,5.17 21,5A1,1 0 0,0 20,4H5.21L4.27,2M7,18C5.89,18 5,18.89 5,20A2,2 0 0,0 7,22A2,2 0 0,0 9,20C9,18.89 8.1,18 7,18Z"
                          Fill="#ddd"
                          Width="64" Height="64"
                          Stretch="Uniform"
                          HorizontalAlignment="Center"/>
                    <TextBlock Text="Savat bo'sh"
                               FontSize="16"
                               Foreground="#888"
                               HorizontalAlignment="Center"
                               Margin="0,20,0,0"/>
                    <TextBlock Text="Mahsulot qo'shish uchun shtrix kodni kiriting"
                               FontSize="13"
                               Foreground="#aaa"
                               HorizontalAlignment="Center"
                               Margin="0,8,0,0"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Summary Panel -->
        <Border Grid.Column="1" Background="White" CornerRadius="12">
            <Border.Effect>
                <DropShadowEffect BlurRadius="20" ShadowDepth="2" Opacity="0.08" Direction="270"/>
            </Border.Effect>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Total Display -->
                <StackPanel Grid.Row="0" VerticalAlignment="Center" Margin="30">
                    <Border Background="#e8f5e9" CornerRadius="16" Padding="30,40" HorizontalAlignment="Center">
                        <StackPanel>
                            <TextBlock Text="Jami summa"
                                       FontSize="14"
                                       Foreground="#666"
                                       HorizontalAlignment="Center"/>
                            <TextBlock Text="{Binding TotalAmount, StringFormat={}{0:N0}}"
                                       FontSize="42"
                                       FontWeight="Bold"
                                       Foreground="#2e7d32"
                                       HorizontalAlignment="Center"
                                       Margin="0,10,0,0"/>
                            <TextBlock Text="so'm"
                                       FontSize="16"
                                       Foreground="#4CAF50"
                                       HorizontalAlignment="Center"
                                       Margin="0,5,0,0"/>
                        </StackPanel>
                    </Border>

                    <!-- Items count -->
                    <Border Background="#f5f5f5" CornerRadius="8" Padding="20,12" Margin="0,20,0,0">
                        <Grid>
                            <TextBlock Text="Mahsulotlar turi:" Foreground="#666" VerticalAlignment="Center"/>
                            <TextBlock Text="{Binding CartItems.Count, StringFormat={}{0} ta}"
                                       HorizontalAlignment="Right"
                                       FontWeight="SemiBold"
                                       Foreground="#333"/>
                        </Grid>
                    </Border>

                    <!-- Total quantity -->
                    <Border Background="#f5f5f5" CornerRadius="8" Padding="20,12" Margin="0,10,0,0">
                        <Grid>
                            <TextBlock Text="Umumiy dona:" Foreground="#666" VerticalAlignment="Center"/>
                            <TextBlock Text="{Binding TotalQuantity, StringFormat={}{0:N0} dona}"
                                       HorizontalAlignment="Right"
                                       FontWeight="SemiBold"
                                       Foreground="#333"/>
                        </Grid>
                    </Border>
                </StackPanel>

                <!-- Action Buttons -->
                <StackPanel Grid.Row="1" Margin="20,0,20,25">
                    <!-- Error Message -->
                    <Border Background="#FFEBEE"
                            Padding="15"
                            CornerRadius="8"
                            Margin="0,0,0,15"
                            Visibility="{Binding ErrorMessage, Converter={StaticResource NullToVisibilityConverter}}">
                        <TextBlock Text="{Binding ErrorMessage}"
                                   Foreground="#C62828"
                                   TextWrapping="Wrap"
                                   FontSize="13"/>
                    </Border>

                    <Button Content="Tozalash"
                            Command="{Binding ClearCartCommand}"
                            Padding="0,16"
                            Margin="0,0,0,12"
                            Background="#fff3e0"
                            Foreground="#e65100"
                            BorderThickness="0"
                            FontSize="15"
                            FontWeight="SemiBold"
                            Cursor="Hand">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border x:Name="border"
                                        Background="{TemplateBinding Background}"
                                        CornerRadius="10"
                                        Padding="{TemplateBinding Padding}">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter TargetName="border" Property="Background" Value="#ffe0b2"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>

                    <Button Content="Sotishni yakunlash"
                            Command="{Binding CompleteSaleCommand}"
                            Padding="0,18"
                            Background="#4CAF50"
                            Foreground="White"
                            BorderThickness="0"
                            FontSize="16"
                            FontWeight="SemiBold"
                            Cursor="Hand">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border x:Name="border"
                                        Background="{TemplateBinding Background}"
                                        CornerRadius="10"
                                        Padding="{TemplateBinding Padding}">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter TargetName="border" Property="Background" Value="#388E3C"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Search Dialog Overlay -->
        <Border Grid.ColumnSpan="2"
                Background="#80000000"
                Visibility="{Binding IsSearchDialogOpen, Converter={StaticResource BoolToVisibilityConverter}}"
                MouseLeftButtonDown="SearchOverlay_MouseLeftButtonDown">

            <Border Background="White"
                    CornerRadius="16"
                    Width="520"
                    MinHeight="400"
                    MaxHeight="600"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Center"
                    Padding="0"
                    MouseLeftButtonDown="SearchDialog_MouseLeftButtonDown">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="30" ShadowDepth="4" Opacity="0.15" Direction="270"/>
                </Border.Effect>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Header -->
                    <Border Grid.Row="0" Padding="24,20,24,16">
                        <Grid>
                            <TextBlock Text="Mahsulot qidirish"
                                       FontSize="18"
                                       FontWeight="SemiBold"
                                       Foreground="#333"
                                       VerticalAlignment="Center"/>
                            <Button HorizontalAlignment="Right"
                                    Command="{Binding CloseSearchDialogCommand}"
                                    Background="Transparent"
                                    BorderThickness="0"
                                    Cursor="Hand"
                                    Padding="6">
                                <Button.Template>
                                    <ControlTemplate TargetType="Button">
                                        <Border x:Name="border" Background="Transparent" CornerRadius="6" Padding="{TemplateBinding Padding}">
                                            <Path Data="M19,6.41L17.59,5L12,10.59L6.41,5L5,6.41L10.59,12L5,17.59L6.41,19L12,13.41L17.59,19L19,17.59L13.41,12L19,6.41Z"
                                                  Fill="#999" Width="16" Height="16" Stretch="Uniform"/>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter TargetName="border" Property="Background" Value="#f5f5f5"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Button.Template>
                            </Button>
                        </Grid>
                    </Border>

                    <!-- Search Input -->
                    <Border Grid.Row="1" Margin="24,0,24,12" Background="#f5f5f5" CornerRadius="8">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <Path Grid.Column="0"
                                  Data="M9.5,3A6.5,6.5 0 0,1 16,9.5C16,11.11 15.41,12.59 14.44,13.73L14.71,14H15.5L20.5,19L19,20.5L14,15.5V14.71L13.73,14.44C12.59,15.41 11.11,16 9.5,16A6.5,6.5 0 0,1 3,9.5A6.5,6.5 0 0,1 9.5,3M9.5,5C7,5 5,7 5,9.5C5,12 7,14 9.5,14C12,14 14,12 14,9.5C14,7 12,5 9.5,5Z"
                                  Fill="#888"
                                  Width="18" Height="18"
                                  Stretch="Uniform"
                                  Margin="14,0,8,0"
                                  VerticalAlignment="Center"/>
                            <TextBox x:Name="SearchDialogTextBox"
                                     Grid.Column="1"
                                     Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                                     Background="Transparent"
                                     BorderThickness="0"
                                     Padding="4,13"
                                     FontSize="14"
                                     VerticalContentAlignment="Center">
                                <TextBox.InputBindings>
                                    <KeyBinding Key="Enter" Command="{Binding SearchProductsCommand}"/>
                                </TextBox.InputBindings>
                            </TextBox>
                            <Button Grid.Column="2"
                                    Content="Qidirish"
                                    Command="{Binding SearchProductsCommand}"
                                    Padding="16,10"
                                    Margin="4"
                                    Background="#2196F3"
                                    Foreground="White"
                                    BorderThickness="0"
                                    FontSize="13"
                                    Cursor="Hand">
                                <Button.Template>
                                    <ControlTemplate TargetType="Button">
                                        <Border x:Name="border"
                                                Background="{TemplateBinding Background}"
                                                CornerRadius="6"
                                                Padding="{TemplateBinding Padding}">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter TargetName="border" Property="Background" Value="#1976D2"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Button.Template>
                            </Button>
                        </Grid>
                    </Border>

                    <!-- Search Results -->
                    <ListView Grid.Row="2"
                              ItemsSource="{Binding SearchResults}"
                              SelectedItem="{Binding SelectedSearchProduct}"
                              BorderThickness="0"
                              Background="Transparent"
                              Margin="24,0"
                              ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                        <ListView.ItemContainerStyle>
                            <Style TargetType="ListViewItem">
                                <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                                <Setter Property="Padding" Value="0"/>
                                <Setter Property="Margin" Value="0"/>
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="ListViewItem">
                                            <Border x:Name="border" Background="Transparent" CornerRadius="6" Margin="0,1">
                                                <ContentPresenter/>
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter TargetName="border" Property="Background" Value="#f5f5f5"/>
                                                </Trigger>
                                                <Trigger Property="IsSelected" Value="True">
                                                    <Setter TargetName="border" Property="Background" Value="#e3f2fd"/>
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </ListView.ItemContainerStyle>
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <Border Padding="12,10" Cursor="Hand">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <StackPanel Grid.Column="0" VerticalAlignment="Center">
                                            <TextBlock Text="{Binding Name}" FontSize="14" FontWeight="Medium" Foreground="#333"/>
                                            <StackPanel Orientation="Horizontal" Margin="0,3,0,0">
                                                <TextBlock Text="{Binding UnitType, Converter={StaticResource EnumToStringConverter}}"
                                                           FontSize="11" Foreground="#2196F3" Margin="0,0,10,0"/>
                                                <TextBlock Text="{Binding Barcode}" FontSize="11" Foreground="#aaa"/>
                                            </StackPanel>
                                        </StackPanel>
                                        <TextBlock Grid.Column="1"
                                                   Text="{Binding StockQuantity, StringFormat=Ombor: {0:0.##}}"
                                                   FontSize="12" Foreground="#FF9800"
                                                   VerticalAlignment="Center" Margin="10,0"/>
                                        <TextBlock Grid.Column="2"
                                                   Text="{Binding UnitPrice, StringFormat={}{0:N0} sum}"
                                                   FontSize="14" FontWeight="SemiBold" Foreground="#4CAF50"
                                                   VerticalAlignment="Center"/>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>

                    <!-- Selected Product - Quantity Input -->
                    <Border Grid.Row="3"
                            Margin="24,8"
                            Background="#f9f9f9"
                            CornerRadius="10"
                            Padding="16"
                            Visibility="{Binding SelectedSearchProduct, Converter={StaticResource NullToVisibilityConverter}}">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <StackPanel Grid.Column="0" VerticalAlignment="Center">
                                <TextBlock FontSize="13" Foreground="#666">
                                    <TextBlock.Text>
                                        <MultiBinding StringFormat="Miqdor ({0}):">
                                            <Binding Path="SelectedSearchProduct.UnitType" Converter="{StaticResource EnumToStringConverter}"/>
                                        </MultiBinding>
                                    </TextBlock.Text>
                                </TextBlock>
                                <Border Background="White" CornerRadius="6" Margin="0,6,0,0" BorderBrush="#e0e0e0" BorderThickness="1">
                                    <TextBox x:Name="ManualQuantityTextBox"
                                             Text="{Binding ManualQuantityText, UpdateSourceTrigger=PropertyChanged}"
                                             Background="Transparent"
                                             BorderThickness="0"
                                             Padding="12,10"
                                             FontSize="16"
                                             FontWeight="SemiBold"
                                             VerticalContentAlignment="Center">
                                        <TextBox.InputBindings>
                                            <KeyBinding Key="Enter" Command="{Binding AddManualProductCommand}"/>
                                        </TextBox.InputBindings>
                                    </TextBox>
                                </Border>
                            </StackPanel>
                            <Button Grid.Column="1"
                                    Command="{Binding AddManualProductCommand}"
                                    Background="#4CAF50"
                                    Foreground="White"
                                    Padding="24,14"
                                    Margin="12,0,0,0"
                                    BorderThickness="0"
                                    FontSize="14"
                                    FontWeight="SemiBold"
                                    Cursor="Hand"
                                    VerticalAlignment="Bottom">
                                <Button.Template>
                                    <ControlTemplate TargetType="Button">
                                        <Border x:Name="border"
                                                Background="{TemplateBinding Background}"
                                                CornerRadius="8"
                                                Padding="{TemplateBinding Padding}">
                                            <TextBlock Text="Qo'shish" Foreground="White" FontSize="14" FontWeight="SemiBold"/>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter TargetName="border" Property="Background" Value="#388E3C"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Button.Template>
                            </Button>
                        </Grid>
                    </Border>

                    <!-- Search Error -->
                    <Border Grid.Row="4"
                            Margin="24,0,24,16"
                            Padding="12"
                            CornerRadius="8"
                            Background="#FFEBEE"
                            Visibility="{Binding SearchError, Converter={StaticResource NullToVisibilityConverter}}">
                        <TextBlock Text="{Binding SearchError}" Foreground="#C62828" FontSize="13" TextWrapping="Wrap"/>
                    </Border>
                </Grid>
            </Border>
        </Border>
    </Grid>
</UserControl>
