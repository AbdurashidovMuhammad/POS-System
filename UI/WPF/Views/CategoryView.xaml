<UserControl x:Class="WPF.Views.CategoryView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="clr-namespace:WPF.ViewModels"
             mc:Ignorable="d"
             d:DataContext="{d:DesignInstance Type=vm:CategoryViewModel}"
             d:DesignHeight="700" d:DesignWidth="1200"
             Loaded="UserControl_Loaded">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>

        <!-- ═══════════════ MAIN CONTENT ═══════════════ -->
        <Border Grid.Column="0" Background="White" CornerRadius="16">
            <Border.Effect>
                <DropShadowEffect BlurRadius="20" ShadowDepth="2" Opacity="0.06" Direction="270"/>
            </Border.Effect>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Gradient Header -->
                <Border Grid.Row="0" CornerRadius="16,16,0,0">
                    <Border.Background>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,0.5">
                            <GradientStop Color="#4361ee" Offset="0"/>
                            <GradientStop Color="#3a0ca3" Offset="1"/>
                        </LinearGradientBrush>
                    </Border.Background>
                    <Grid Margin="24,18">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                            <Path Data="M10,4H4C2.89,4 2,4.89 2,6V18A2,2 0 0,0 4,20H20A2,2 0 0,0 22,18V8C22,6.89 21.1,6 20,6H12L10,4Z"
                                  Fill="White" Width="22" Height="22" Stretch="Uniform" Opacity="0.9"/>
                            <TextBlock Text="Kategoriyalar" FontSize="18" FontWeight="SemiBold" Foreground="White" Margin="12,0,0,0" VerticalAlignment="Center"/>
                            <Border Background="Transparent" CornerRadius="12" Padding="10,4" Margin="12,0,0,0" VerticalAlignment="Center" BorderBrush="#FFFFFF90" BorderThickness="1.5">
                                <TextBlock Text="{Binding Categories.Count, StringFormat={}{0} ta}" FontSize="12" Foreground="White" FontWeight="Bold"/>
                            </Border>
                        </StackPanel>

                        <!-- Add Category Button -->
                        <Button Grid.Column="1"
                                Command="{Binding ShowAddPanelCommand}"
                                Cursor="Hand">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border x:Name="border" CornerRadius="12" Padding="22,12">
                                        <Border.Background>
                                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                                <GradientStop Color="#4CAF50" Offset="0"/>
                                                <GradientStop Color="#2e7d32" Offset="1"/>
                                            </LinearGradientBrush>
                                        </Border.Background>
                                        <StackPanel Orientation="Horizontal">
                                            <Path Data="M19,13H13V19H11V13H5V11H11V5H13V11H19V13Z"
                                                  Fill="White" Width="16" Height="16" Stretch="Uniform" Margin="0,0,10,0" VerticalAlignment="Center"/>
                                            <TextBlock Text="Yangi kategoriya" Foreground="White" FontSize="15" FontWeight="SemiBold" VerticalAlignment="Center"/>
                                        </StackPanel>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter TargetName="border" Property="Opacity" Value="0.88"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>
                    </Grid>
                </Border>

                <!-- Search Bar -->
                <Border Grid.Row="1" Padding="20,16,20,12">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <Border x:Name="SearchBorder" Grid.Column="0" Background="#f8f9fa" CornerRadius="12" BorderBrush="#e8e8e8" BorderThickness="1">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <Border Grid.Column="0" Background="#4361ee" CornerRadius="12,0,0,12" Padding="14,0">
                                    <Path Data="M9.5,3A6.5,6.5 0 0,1 16,9.5C16,11.11 15.41,12.59 14.44,13.73L14.71,14H15.5L20.5,19L19,20.5L14,15.5V14.71L13.73,14.44C12.59,15.41 11.11,16 9.5,16A6.5,6.5 0 0,1 3,9.5A6.5,6.5 0 0,1 9.5,3M9.5,5C7,5 5,7 5,9.5C5,12 7,14 9.5,14C12,14 14,12 14,9.5C14,7 12,5 9.5,5Z"
                                          Fill="White"
                                          Width="18" Height="18"
                                          Stretch="Uniform"
                                          VerticalAlignment="Center"/>
                                </Border>
                                <TextBox x:Name="SearchTextBox"
                                         Grid.Column="1"
                                         Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                                         Background="Transparent"
                                         BorderThickness="0"
                                         Padding="12,13"
                                         FontSize="14"
                                         VerticalContentAlignment="Center"
                                         LostFocus="SearchTextBox_LostFocus">
                                    <TextBox.InputBindings>
                                        <KeyBinding Key="Enter" Command="{Binding SearchCategoriesCommand}"/>
                                        <KeyBinding Key="Escape" Command="{Binding CloseSuggestionsCommand}"/>
                                    </TextBox.InputBindings>
                                </TextBox>
                                <Button Grid.Column="2"
                                        Command="{Binding SearchCategoriesCommand}"
                                        Margin="4"
                                        Cursor="Hand">
                                    <Button.Template>
                                        <ControlTemplate TargetType="Button">
                                            <Border x:Name="border" CornerRadius="10" Padding="22,12">
                                                <Border.Background>
                                                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                                        <GradientStop Color="#4361ee" Offset="0"/>
                                                        <GradientStop Color="#3a0ca3" Offset="1"/>
                                                    </LinearGradientBrush>
                                                </Border.Background>
                                                <TextBlock Text="Qidirish" Foreground="White" FontSize="15" FontWeight="SemiBold"/>
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter TargetName="border" Property="Opacity" Value="0.85"/>
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Button.Template>
                                </Button>

                                <!-- Suggestions Popup -->
                                <Popup Grid.Column="1"
                                       IsOpen="{Binding IsSuggestionsOpen}"
                                       PlacementTarget="{Binding ElementName=SearchBorder}"
                                       Placement="Bottom"
                                       Width="{Binding ElementName=SearchBorder, Path=ActualWidth}"
                                       StaysOpen="False"
                                       AllowsTransparency="True"
                                       PopupAnimation="Slide">
                                    <Border Background="White"
                                            BorderBrush="#e0e0e0"
                                            BorderThickness="1"
                                            CornerRadius="12"
                                            Margin="0,4,0,0"
                                            MaxHeight="350">
                                        <Border.Effect>
                                            <DropShadowEffect BlurRadius="20" ShadowDepth="4" Opacity="0.15" Direction="270"/>
                                        </Border.Effect>
                                        <ScrollViewer VerticalScrollBarVisibility="Auto" MaxHeight="340">
                                            <ItemsControl ItemsSource="{Binding Suggestions}">
                                                <ItemsControl.ItemTemplate>
                                                    <DataTemplate>
                                                        <Border Padding="14,10"
                                                                Cursor="Hand"
                                                                Background="Transparent"
                                                                BorderBrush="#f0f0f0"
                                                                BorderThickness="0,0,0,1">
                                                            <Border.InputBindings>
                                                                <MouseBinding MouseAction="LeftClick"
                                                                              Command="{Binding DataContext.SelectSuggestionCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                                              CommandParameter="{Binding}"/>
                                                            </Border.InputBindings>
                                                            <TextBlock Text="{Binding Name}"
                                                                       FontSize="14"
                                                                       FontWeight="SemiBold"
                                                                       Foreground="#1a1a2e"/>
                                                            <Border.Style>
                                                                <Style TargetType="Border">
                                                                    <Style.Triggers>
                                                                        <Trigger Property="IsMouseOver" Value="True">
                                                                            <Setter Property="Background" Value="#f8f9fa"/>
                                                                        </Trigger>
                                                                    </Style.Triggers>
                                                                </Style>
                                                            </Border.Style>
                                                        </Border>
                                                    </DataTemplate>
                                                </ItemsControl.ItemTemplate>
                                            </ItemsControl>
                                        </ScrollViewer>
                                    </Border>
                                </Popup>
                            </Grid>
                        </Border>
                    </Grid>
                </Border>

                <!-- Success Message -->
                <Border Grid.Row="2"
                        Margin="20,0,20,8"
                        Background="#e8f5e9"
                        Padding="14"
                        CornerRadius="10"
                        Visibility="{Binding SuccessMessage, Converter={StaticResource NullToVisibilityConverter}}">
                    <StackPanel Orientation="Horizontal">
                        <Path Data="M12,2A10,10 0 0,1 22,12A10,10 0 0,1 12,22A10,10 0 0,1 2,12A10,10 0 0,1 12,2M12,4A8,8 0 0,0 4,12A8,8 0 0,0 12,20A8,8 0 0,0 20,12A8,8 0 0,0 12,4M11,16.5L6.5,12L7.91,10.59L11,13.67L16.59,8.09L18,9.5L11,16.5Z"
                              Fill="#4CAF50" Width="16" Height="16" Stretch="Uniform" Margin="0,0,10,0" VerticalAlignment="Center"/>
                        <TextBlock Text="{Binding SuccessMessage}" Foreground="#2E7D32" FontSize="13" VerticalAlignment="Center"/>
                    </StackPanel>
                </Border>

                <!-- Error Message -->
                <Border Grid.Row="3"
                        Margin="20,0,20,8"
                        Background="#FFEBEE"
                        Padding="14"
                        CornerRadius="10"
                        Visibility="{Binding ErrorMessage, Converter={StaticResource NullToVisibilityConverter}}">
                    <StackPanel Orientation="Horizontal">
                        <Path Data="M13,13H11V7H13M13,17H11V15H13M12,2A10,10 0 0,0 2,12A10,10 0 0,0 12,22A10,10 0 0,0 22,12A10,10 0 0,0 12,2Z"
                              Fill="#e53935" Width="16" Height="16" Stretch="Uniform" Margin="0,0,10,0" VerticalAlignment="Center"/>
                        <TextBlock Text="{Binding ErrorMessage}" Foreground="#C62828" FontSize="13" TextWrapping="Wrap"/>
                    </StackPanel>
                </Border>

                <!-- Table Area -->
                <Border Grid.Row="4" Padding="20,0,20,0">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <!-- Table Header -->
                        <Border Grid.Row="0" Background="#f8f9fa" CornerRadius="10" Padding="16,12" Margin="0,0,0,4">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="50"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="100"/>
                                    <ColumnDefinition Width="70"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0" Text="#" FontSize="12" Foreground="#666" FontWeight="Bold"/>
                                <TextBlock Grid.Column="1" Text="Nomi" FontSize="12" Foreground="#666" FontWeight="Bold"/>
                                <TextBlock Grid.Column="2" Text="Holat" FontSize="12" Foreground="#666" FontWeight="Bold"/>
                                <TextBlock Grid.Column="3" Text="Amallar" FontSize="12" Foreground="#666" FontWeight="Bold" HorizontalAlignment="Center"/>
                            </Grid>
                        </Border>

                        <!-- Categories ListView -->
                        <ListView x:Name="CategoriesListView"
                                  Grid.Row="1"
                                  ItemsSource="{Binding Categories}"
                                  SelectedItem="{Binding SelectedCategory}"
                                  Background="Transparent"
                                  BorderThickness="0"
                                  ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                                  SelectionMode="Single">
                            <ListView.ItemContainerStyle>
                                <Style TargetType="ListViewItem">
                                    <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                                    <Setter Property="Padding" Value="0"/>
                                    <Setter Property="Margin" Value="0,1"/>
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="ListViewItem">
                                                <Border x:Name="border" Background="Transparent" CornerRadius="10">
                                                    <ContentPresenter/>
                                                </Border>
                                                <ControlTemplate.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter TargetName="border" Property="Background" Value="#f8f9fa"/>
                                                    </Trigger>
                                                    <Trigger Property="IsSelected" Value="True">
                                                        <Setter TargetName="border" Property="Background" Value="#e8f0fe"/>
                                                    </Trigger>
                                                </ControlTemplate.Triggers>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                    <Setter Property="ContextMenu">
                                        <Setter.Value>
                                            <ContextMenu FontSize="15">
                                                <MenuItem Header="Tahrirlash" Padding="6,8,20,8"
                                                          Command="{Binding PlacementTarget.Tag.EditCategoryCommand, RelativeSource={RelativeSource AncestorType=ContextMenu}}">
                                                    <MenuItem.Icon>
                                                        <Path Data="M20.71,7.04C21.1,6.65 21.1,6 20.71,5.63L18.37,3.29C18,2.9 17.35,2.9 16.96,3.29L15.12,5.12L18.87,8.87M3,17.25V21H6.75L17.81,9.93L14.06,6.18L3,17.25Z"
                                                              Fill="#4361ee" Width="18" Height="18" Stretch="Uniform"/>
                                                    </MenuItem.Icon>
                                                </MenuItem>
                                                <MenuItem Padding="6,8,20,8"
                                                          Command="{Binding PlacementTarget.Tag.ToggleActiveCommand, RelativeSource={RelativeSource AncestorType=ContextMenu}}">
                                                    <MenuItem.Style>
                                                        <Style TargetType="MenuItem">
                                                            <Setter Property="Header" Value="Nofaollashtirish"/>
                                                            <Style.Triggers>
                                                                <DataTrigger Binding="{Binding IsActive}" Value="False">
                                                                    <Setter Property="Header" Value="Faollashtirish"/>
                                                                </DataTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </MenuItem.Style>
                                                    <MenuItem.Icon>
                                                        <Path Data="M12,2A10,10 0 0,1 22,12A10,10 0 0,1 12,22A10,10 0 0,1 2,12A10,10 0 0,1 12,2M12,4A8,8 0 0,0 4,12A8,8 0 0,0 12,20A8,8 0 0,0 20,12A8,8 0 0,0 12,4M12,6A6,6 0 0,1 18,12A6,6 0 0,1 12,18A6,6 0 0,1 6,12A6,6 0 0,1 12,6Z"
                                                              Fill="#FF9800" Width="18" Height="18" Stretch="Uniform"/>
                                                    </MenuItem.Icon>
                                                </MenuItem>
                                                <Separator/>
                                                <MenuItem Header="O'chirish" Padding="6,8,20,8"
                                                          Command="{Binding PlacementTarget.Tag.DeleteCategoryCommand, RelativeSource={RelativeSource AncestorType=ContextMenu}}">
                                                    <MenuItem.Icon>
                                                        <Path Data="M19,4H15.5L14.5,3H9.5L8.5,4H5V6H19M6,19A2,2 0 0,0 8,21H16A2,2 0 0,0 18,19V7H6V19Z"
                                                              Fill="#f44336" Width="18" Height="18" Stretch="Uniform"/>
                                                    </MenuItem.Icon>
                                                </MenuItem>
                                            </ContextMenu>
                                        </Setter.Value>
                                    </Setter>
                                    <Setter Property="Tag" Value="{Binding DataContext, RelativeSource={RelativeSource AncestorType=UserControl}}"/>
                                </Style>
                            </ListView.ItemContainerStyle>
                            <ListView.ItemTemplate>
                                <DataTemplate>
                                    <Border Padding="16,10">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="50"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="100"/>
                                                <ColumnDefinition Width="70"/>
                                            </Grid.ColumnDefinitions>

                                            <!-- Row Number Badge -->
                                            <Border Grid.Column="0" Background="#f0f4ff" CornerRadius="8" Width="28" Height="28" VerticalAlignment="Center" HorizontalAlignment="Left">
                                                <TextBlock Text="{Binding RelativeSource={RelativeSource AncestorType=ListViewItem}, Converter={StaticResource IndexConverter}}"
                                                           FontSize="12" FontWeight="SemiBold" Foreground="#4361ee"
                                                           HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </Border>

                                            <!-- Name -->
                                            <TextBlock Grid.Column="1"
                                                       Text="{Binding Name}"
                                                       FontSize="13.5" FontWeight="SemiBold" Foreground="#1a1a2e"
                                                       VerticalAlignment="Center"
                                                       TextTrimming="CharacterEllipsis"
                                                       ToolTip="{Binding Name}"/>

                                            <!-- Status Badge -->
                                            <Border Grid.Column="2" CornerRadius="10" Padding="8,4"
                                                    HorizontalAlignment="Left" VerticalAlignment="Center">
                                                <Border.Style>
                                                    <Style TargetType="Border">
                                                        <Setter Property="Background" Value="#e8f5e9"/>
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding IsActive}" Value="False">
                                                                <Setter Property="Background" Value="#FFEBEE"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </Border.Style>
                                                <TextBlock FontSize="11" FontWeight="SemiBold">
                                                    <TextBlock.Style>
                                                        <Style TargetType="TextBlock">
                                                            <Setter Property="Text" Value="Faol"/>
                                                            <Setter Property="Foreground" Value="#4CAF50"/>
                                                            <Style.Triggers>
                                                                <DataTrigger Binding="{Binding IsActive}" Value="False">
                                                                    <Setter Property="Text" Value="Nofaol"/>
                                                                    <Setter Property="Foreground" Value="#f44336"/>
                                                                </DataTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </TextBlock.Style>
                                                </TextBlock>
                                            </Border>

                                            <!-- Actions Button -->
                                            <Button Grid.Column="3"
                                                    Click="ActionMenuButton_Click"
                                                    Tag="{Binding DataContext, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                    Cursor="Hand"
                                                    ToolTip="Amallar"
                                                    HorizontalAlignment="Center"
                                                    VerticalAlignment="Center">
                                                <Button.Template>
                                                    <ControlTemplate TargetType="Button">
                                                        <Border x:Name="btnBorder"
                                                                Background="#f0f4ff"
                                                                CornerRadius="12"
                                                                Padding="18,10"
                                                                BorderBrush="#e0e8f8"
                                                                BorderThickness="1.5">
                                                            <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
                                                                <Ellipse Width="6" Height="6" Fill="#4361ee" Margin="0,0,0,4"/>
                                                                <Ellipse Width="6" Height="6" Fill="#4361ee" Margin="0,0,0,4"/>
                                                                <Ellipse Width="6" Height="6" Fill="#4361ee"/>
                                                            </StackPanel>
                                                        </Border>
                                                        <ControlTemplate.Triggers>
                                                            <Trigger Property="IsMouseOver" Value="True">
                                                                <Setter TargetName="btnBorder" Property="Background" Value="#e0e8f8"/>
                                                                <Setter TargetName="btnBorder" Property="BorderBrush" Value="#c0d0f0"/>
                                                            </Trigger>
                                                            <Trigger Property="IsPressed" Value="True">
                                                                <Setter TargetName="btnBorder" Property="Background" Value="#d0dffc"/>
                                                            </Trigger>
                                                        </ControlTemplate.Triggers>
                                                    </ControlTemplate>
                                                </Button.Template>
                                            </Button>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>

                        <!-- Empty State -->
                        <StackPanel Grid.Row="1"
                                    VerticalAlignment="Center"
                                    HorizontalAlignment="Center"
                                    Visibility="{Binding Categories.Count, Converter={StaticResource IntToVisibilityConverter}, ConverterParameter=invert}">
                            <Border Background="#f0f4ff" CornerRadius="24" Width="80" Height="80" HorizontalAlignment="Center">
                                <Path Data="M10,4H4C2.89,4 2,4.89 2,6V18A2,2 0 0,0 4,20H20A2,2 0 0,0 22,18V8C22,6.89 21.1,6 20,6H12L10,4Z"
                                      Fill="#4361ee" Width="36" Height="36" Stretch="Uniform"
                                      HorizontalAlignment="Center" VerticalAlignment="Center" Opacity="0.5"/>
                            </Border>
                            <TextBlock Text="Kategoriyalar topilmadi"
                                       FontSize="16" FontWeight="SemiBold" Foreground="#555"
                                       HorizontalAlignment="Center" Margin="0,16,0,0"/>
                            <TextBlock Text="Yangi kategoriya qo'shish uchun yuqoridagi tugmani bosing"
                                       FontSize="13" Foreground="#aaa"
                                       HorizontalAlignment="Center" Margin="0,6,0,0"/>
                        </StackPanel>
                    </Grid>
                </Border>

                <!-- Footer -->
                <Border Grid.Row="5" BorderBrush="#f0f0f0" BorderThickness="0,1,0,0" Padding="20,14">
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                        <Border Background="#f0f4ff" CornerRadius="8" Padding="10,6">
                            <TextBlock FontSize="12" Foreground="#4361ee" FontWeight="SemiBold">
                                <Run Text="Jami: "/>
                                <Run Text="{Binding Categories.Count, Mode=OneWay}" FontWeight="Bold"/>
                                <Run Text=" ta kategoriya"/>
                            </TextBlock>
                        </Border>
                    </StackPanel>
                </Border>

                <!-- Loading Indicator -->
                <Border Grid.RowSpan="6"
                        Background="#E0FFFFFF"
                        CornerRadius="16"
                        Visibility="{Binding IsLoading, Converter={StaticResource BoolToVisibilityConverter}}">
                    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                        <Border Background="#f0f4ff" CornerRadius="20" Width="60" Height="60" HorizontalAlignment="Center" Margin="0,0,0,16">
                            <Path Data="M12,4V2A10,10 0 0,0 2,12H4A8,8 0 0,1 12,4Z"
                                  Fill="#4361ee" Width="24" Height="24" Stretch="Uniform"
                                  HorizontalAlignment="Center" VerticalAlignment="Center"
                                  RenderTransformOrigin="0.5,0.5">
                                <Path.RenderTransform>
                                    <RotateTransform x:Name="LoadingRotation"/>
                                </Path.RenderTransform>
                            </Path>
                        </Border>
                        <TextBlock Text="Yuklanmoqda..." FontSize="14" Foreground="#666" FontWeight="SemiBold"/>
                    </StackPanel>
                </Border>
            </Grid>
        </Border>

        <!-- ═══════════════ SIDE PANEL ═══════════════ -->
        <Border Grid.Column="1"
                Width="400"
                Background="White"
                Margin="12,0,0,0"
                CornerRadius="16"
                Visibility="{Binding IsPanelOpen, Converter={StaticResource BoolToVisibilityConverter}}">
            <Border.Effect>
                <DropShadowEffect BlurRadius="20" ShadowDepth="2" Opacity="0.06" Direction="180"/>
            </Border.Effect>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Panel Header with Gradient -->
                <Border Grid.Row="0" CornerRadius="16,16,0,0">
                    <Border.Background>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,0.5">
                            <GradientStop Color="#4361ee" Offset="0"/>
                            <GradientStop Color="#3a0ca3" Offset="1"/>
                        </LinearGradientBrush>
                    </Border.Background>
                    <Grid Margin="24,18">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                            <!-- Panel Icon -->
                            <Path Fill="White" Width="20" Height="20" Stretch="Uniform" Opacity="0.9">
                                <Path.Style>
                                    <Style TargetType="Path">
                                        <Setter Property="Data" Value="M19,13H13V19H11V13H5V11H11V5H13V11H19V13Z"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding IsEditPanelOpen}" Value="True">
                                                <Setter Property="Data" Value="M20.71,7.04C21.1,6.65 21.1,6 20.71,5.63L18.37,3.29C18,2.9 17.35,2.9 16.96,3.29L15.12,5.12L18.87,8.87M3,17.25V21H6.75L17.81,9.93L14.06,6.18L3,17.25Z"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Path.Style>
                            </Path>

                            <TextBlock FontSize="17" FontWeight="SemiBold" Foreground="White" Margin="12,0,0,0" VerticalAlignment="Center">
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="Text" Value="Yangi kategoriya"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding IsEditPanelOpen}" Value="True">
                                                <Setter Property="Text" Value="Tahrirlash"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>
                        </StackPanel>

                        <Button Grid.Column="1"
                                Command="{Binding CancelPanelCommand}"
                                Cursor="Hand">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border x:Name="border" Background="#e53935" CornerRadius="8" Padding="8">
                                        <Path Data="M19,6.41L17.59,5L12,10.59L6.41,5L5,6.41L10.59,12L5,17.59L6.41,19L12,13.41L17.59,19L19,17.59L13.41,12L19,6.41Z"
                                              Fill="White"
                                              Width="14" Height="14"
                                              Stretch="Uniform"/>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter TargetName="border" Property="Background" Value="#c62828"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>
                    </Grid>
                </Border>

                <!-- Panel Content -->
                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Padding="24,20">
                    <StackPanel>
                        <!-- Category Name -->
                        <TextBlock Text="Kategoriya nomi" FontSize="13" FontWeight="SemiBold" Foreground="#555" Margin="4,0,0,8"/>
                        <Border Background="#f8f9fa" CornerRadius="10" BorderBrush="#e8e8e8" BorderThickness="1" Margin="0,0,0,18">
                            <TextBox Text="{Binding FormName, UpdateSourceTrigger=PropertyChanged}"
                                     Background="Transparent"
                                     BorderThickness="0"
                                     Padding="14,12"
                                     FontSize="14"/>
                        </Border>

                        <!-- IsActive (only for edit) -->
                        <StackPanel Visibility="{Binding IsEditPanelOpen, Converter={StaticResource BoolToVisibilityConverter}}"
                                    Margin="0,0,0,18">
                            <TextBlock Text="Holat" FontSize="13" FontWeight="SemiBold" Foreground="#555" Margin="4,0,0,8"/>
                            <CheckBox IsChecked="{Binding FormIsActive}" Content="Faol" FontSize="14"/>
                        </StackPanel>

                        <!-- Form Error -->
                        <Border Background="#FFEBEE"
                                Padding="14"
                                CornerRadius="10"
                                Margin="0,0,0,15"
                                Visibility="{Binding FormError, Converter={StaticResource NullToVisibilityConverter}}">
                            <StackPanel Orientation="Horizontal">
                                <Path Data="M13,13H11V7H13M13,17H11V15H13M12,2A10,10 0 0,0 2,12A10,10 0 0,0 12,22A10,10 0 0,0 22,12A10,10 0 0,0 12,2Z"
                                      Fill="#e53935" Width="14" Height="14" Stretch="Uniform" Margin="0,0,8,0" VerticalAlignment="Center"/>
                                <TextBlock Text="{Binding FormError}" Foreground="#C62828" TextWrapping="Wrap" FontSize="13"/>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </ScrollViewer>

                <!-- Panel Footer -->
                <Border Grid.Row="2" Padding="24,16">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="12"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Cancel Button -->
                        <Button Grid.Column="0"
                                Command="{Binding CancelPanelCommand}"
                                Cursor="Hand">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border x:Name="border"
                                            CornerRadius="12"
                                            Padding="0,16">
                                        <Border.Background>
                                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                                <GradientStop Color="#ef5350" Offset="0"/>
                                                <GradientStop Color="#c62828" Offset="1"/>
                                            </LinearGradientBrush>
                                        </Border.Background>
                                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                            <Path Data="M19,6.41L17.59,5L12,10.59L6.41,5L5,6.41L10.59,12L5,17.59L6.41,19L12,13.41L17.59,19L19,17.59L13.41,12L19,6.41Z"
                                                  Fill="White" Width="16" Height="16" Stretch="Uniform" Margin="0,0,8,0"/>
                                            <TextBlock Text="Bekor qilish" Foreground="White" FontSize="15" FontWeight="SemiBold"/>
                                        </StackPanel>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter TargetName="border" Property="Opacity" Value="0.88"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>

                        <!-- Save Button for Add -->
                        <Button Grid.Column="2"
                                Command="{Binding SaveCategoryCommand}"
                                Visibility="{Binding IsAddPanelOpen, Converter={StaticResource BoolToVisibilityConverter}}"
                                Cursor="Hand">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border x:Name="border" CornerRadius="12" Padding="0,16">
                                        <Border.Background>
                                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                                <GradientStop Color="#4CAF50" Offset="0"/>
                                                <GradientStop Color="#2e7d32" Offset="1"/>
                                            </LinearGradientBrush>
                                        </Border.Background>
                                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                            <Path Data="M9,20.42L2.79,14.21L5.62,11.38L9,14.77L18.88,4.88L21.71,7.71L9,20.42Z"
                                                  Fill="White" Width="16" Height="16" Stretch="Uniform" Margin="0,0,8,0"/>
                                            <TextBlock Text="Saqlash" Foreground="White" FontSize="15" FontWeight="SemiBold"/>
                                        </StackPanel>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter TargetName="border" Property="Opacity" Value="0.88"/>
                                        </Trigger>
                                        <Trigger Property="IsEnabled" Value="False">
                                            <Setter TargetName="border" Property="Opacity" Value="0.5"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>

                        <!-- Update Button for Edit -->
                        <Button Grid.Column="2"
                                Command="{Binding UpdateCategoryCommand}"
                                Visibility="{Binding IsEditPanelOpen, Converter={StaticResource BoolToVisibilityConverter}}"
                                Cursor="Hand">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border x:Name="border" CornerRadius="12" Padding="0,16">
                                        <Border.Background>
                                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                                <GradientStop Color="#4361ee" Offset="0"/>
                                                <GradientStop Color="#3a0ca3" Offset="1"/>
                                            </LinearGradientBrush>
                                        </Border.Background>
                                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                            <Path Data="M9,20.42L2.79,14.21L5.62,11.38L9,14.77L18.88,4.88L21.71,7.71L9,20.42Z"
                                                  Fill="White" Width="16" Height="16" Stretch="Uniform" Margin="0,0,8,0"/>
                                            <TextBlock Text="Yangilash" Foreground="White" FontSize="15" FontWeight="SemiBold"/>
                                        </StackPanel>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter TargetName="border" Property="Opacity" Value="0.88"/>
                                        </Trigger>
                                        <Trigger Property="IsEnabled" Value="False">
                                            <Setter TargetName="border" Property="Opacity" Value="0.5"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>
                    </Grid>
                </Border>

                <!-- Saving Indicator -->
                <Border Grid.RowSpan="3"
                        Background="#E0FFFFFF"
                        CornerRadius="16"
                        Visibility="{Binding IsSaving, Converter={StaticResource BoolToVisibilityConverter}}">
                    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                        <Border Background="#f0f4ff" CornerRadius="20" Width="60" Height="60" HorizontalAlignment="Center" Margin="0,0,0,12">
                            <Path Data="M12,4V2A10,10 0 0,0 2,12H4A8,8 0 0,1 12,4Z"
                                  Fill="#4361ee" Width="24" Height="24" Stretch="Uniform"
                                  HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <TextBlock Text="Saqlanmoqda..." FontSize="14" Foreground="#666" FontWeight="SemiBold"/>
                    </StackPanel>
                </Border>
            </Grid>
        </Border>
    </Grid>
</UserControl>
