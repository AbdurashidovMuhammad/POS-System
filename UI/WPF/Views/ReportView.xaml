                                                    <Path Data="M15.41,16.58L10.83,12L15.41,7.41L14,6L8,12L14,18L15.41,16.58Z" Fill="{StaticResource TextTertiaryBrush}" Width="14" Height="14" Stretch="Uniform" Margin="0,0,6,0" VerticalAlignment="Center"/>
                                                    <TextBlock Text="Oldingi" FontSize="14" Foreground="{StaticResource TextTertiaryBrush}" FontWeight="SemiBold"/>
                                                </StackPanel>
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True"><Setter TargetName="border" Property="Background" Value="{StaticResource BorderLightBrush}"/></Trigger>
                                                <Trigger Property="IsEnabled" Value="False"><Setter TargetName="border" Property="Opacity" Value="0.5"/></Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Button.Template>
                                </Button>
                                <Border Background="{StaticResource BackgroundInputBrush}" CornerRadius="10" Padding="18,10" VerticalAlignment="Center">
                                    <TextBlock FontSize="14" Foreground="{StaticResource TextDarkBrush}">
                                        <Run Text="{Binding CurrentPage}" FontWeight="Bold" Foreground="{StaticResource PrimaryBrush}"/>
                                        <Run Text=" / "/>
                                        <Run Text="{Binding TotalPages}" FontWeight="Bold"/>
                                    </TextBlock>
                                </Border>
                                <Button Command="{Binding NextPageCommand}" Cursor="Hand" Margin="8,0,0,0">
                                    <Button.Template>
                                        <ControlTemplate TargetType="Button">
                                            <Border x:Name="border" Background="{StaticResource BackgroundInputBrush}" CornerRadius="10" Padding="18,10" BorderBrush="{StaticResource BorderDefaultBrush}" BorderThickness="1">
                                                <StackPanel Orientation="Horizontal">
                                                    <TextBlock Text="Keyingi" FontSize="14" Foreground="{StaticResource TextTertiaryBrush}" FontWeight="SemiBold"/>
                                                    <Path Data="M8.59,16.58L13.17,12L8.59,7.41L10,6L16,12L10,18L8.59,16.58Z" Fill="{StaticResource TextTertiaryBrush}" Width="14" Height="14" Stretch="Uniform" Margin="6,0,0,0" VerticalAlignment="Center"/>
                                                </StackPanel>
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True"><Setter TargetName="border" Property="Background" Value="{StaticResource BorderLightBrush}"/></Trigger>
                                                <Trigger Property="IsEnabled" Value="False"><Setter TargetName="border" Property="Opacity" Value="0.5"/></Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Button.Template>
                                </Button>
                            </StackPanel>
                        </Grid>
                    </Border>
                </Grid>
            </Border>
        </Grid>

        <!-- Loading Overlay -->
        <Border Grid.RowSpan="5"
                Background="{StaticResource OverlayLoadingBrush}"
                CornerRadius="12"
                Visibility="{Binding IsLoading, Converter={StaticResource BoolToVisibilityConverter}}">
            <Border Background="{StaticResource BackgroundCardBrush}" CornerRadius="16" Padding="40,30"
                    HorizontalAlignment="Center" VerticalAlignment="Center" MinWidth="280">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="30" ShadowDepth="4" Opacity="0.12" Direction="270"/>
                </Border.Effect>
                <StackPanel HorizontalAlignment="Center">
                    <ProgressBar IsIndeterminate="True" Width="200" Height="4" Foreground="{StaticResource PrimaryBrush}"/>
                    <TextBlock Text="Hisobot yuklanmoqda..." Margin="0,16,0,0" FontSize="14" FontWeight="SemiBold" Foreground="{StaticResource TextPrimaryBrush}" HorizontalAlignment="Center"/>
                    <TextBlock Text="Iltimos kuting" Margin="0,4,0,0" FontSize="12" Foreground="{StaticResource TextMutedBrush}" HorizontalAlignment="Center"/>
