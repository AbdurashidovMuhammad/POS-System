<UserControl x:Class="WPF.Views.ReportView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="clr-namespace:WPF.ViewModels"
             mc:Ignorable="d"
             d:DataContext="{d:DesignInstance Type=vm:ReportViewModel}"
             d:DesignHeight="700" d:DesignWidth="1100">

    <UserControl.Resources>
        <!-- Stat Card Style -->
        <Style x:Key="StatCardStyle" TargetType="Border">
            <Setter Property="Background" Value="{StaticResource BackgroundCardBrush}"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Padding" Value="24"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="20" ShadowDepth="2" Opacity="0.08" Direction="270"/>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Tab Button Style -->
        <Style x:Key="TabButtonStyle" TargetType="RadioButton">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="{StaticResource TextTertiaryBrush}"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Padding" Value="18,10"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="RadioButton">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                CornerRadius="8"
                                Padding="{TemplateBinding Padding}"
                                BorderBrush="Transparent"
                                BorderThickness="1.5">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="border" Property="Background" Value="{StaticResource PrimaryLightBrush}"/>
                                <Setter TargetName="border" Property="BorderBrush" Value="{StaticResource PrimaryBrush}"/>
                                <Setter Property="Foreground" Value="{StaticResource PrimaryBrush}"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="{StaticResource BackgroundInputBrush}"/>
                            </Trigger>
                            <MultiTrigger>
                                <MultiTrigger.Conditions>
                                    <Condition Property="IsChecked" Value="True"/>
                                    <Condition Property="IsMouseOver" Value="True"/>
                                </MultiTrigger.Conditions>
                                <Setter TargetName="border" Property="Background" Value="{StaticResource PrimaryHoverLightBrush}"/>
                            </MultiTrigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- DatePicker Style -->
        <Style x:Key="ModernDatePicker" TargetType="DatePicker">
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Padding" Value="8,6"/>
            <Setter Property="Background" Value="{StaticResource BackgroundInputBrush}"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderDefaultBrush}"/>
            <Setter Property="BorderThickness" Value="1.5"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Width" Value="150"/>
        </Style>

        <!-- Primary Action Button -->
        <Style x:Key="PrimaryButtonStyle" TargetType="Button">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="20,10"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" CornerRadius="8" Padding="{TemplateBinding Padding}">
                            <Border.Background>
                                <LinearGradientBrush StartPoint="0,0" EndPoint="1,0.5">
                                    <GradientStop Color="{StaticResource PrimaryColor}" Offset="0"/>
                                    <GradientStop Color="{StaticResource PrimaryDarkColor}" Offset="1"/>
                                </LinearGradientBrush>
                            </Border.Background>
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Opacity" Value="0.88"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="border" Property="Opacity" Value="0.5"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Export Button -->
        <Style x:Key="ExportButtonStyle" TargetType="Button">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="20,10"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" CornerRadius="8" Padding="{TemplateBinding Padding}">
                            <Border.Background>
                                <LinearGradientBrush StartPoint="0,0" EndPoint="1,0.5">
                                    <GradientStop Color="{StaticResource SuccessColor}" Offset="0"/>
                                    <GradientStop Color="{StaticResource SuccessDarkColor}" Offset="1"/>
                                </LinearGradientBrush>
                            </Border.Background>
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Opacity" Value="0.88"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="border" Property="Opacity" Value="0.5"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- DataGrid Header Style -->
        <Style x:Key="ModernColumnHeader" TargetType="DataGridColumnHeader">
            <Setter Property="Background" Value="{StaticResource BackgroundInputBrush}"/>
            <Setter Property="Padding" Value="14,12"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Foreground" Value="{StaticResource TextTertiaryBrush}"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderDefaultBrush}"/>
            <Setter Property="BorderThickness" Value="0,0,0,1.5"/>
        </Style>

        <!-- DataGrid Row Style -->
        <Style x:Key="ModernRow" TargetType="DataGridRow">
            <Setter Property="Background" Value="{StaticResource BackgroundCardBrush}"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderLightBrush}"/>
            <Setter Property="BorderThickness" Value="0,0,0,1"/>
            <Setter Property="FontSize" Value="13"/>
            <Style.Triggers>
                <DataTrigger Binding="{Binding DateGroupIsAlternate}" Value="True">
                    <Setter Property="Background" Value="{StaticResource DataGridAlternateBrush}"/>
                </DataTrigger>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="{StaticResource DataGridHoverBrush}"/>
                </Trigger>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="{StaticResource PrimaryLightBrush}"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- DataGrid Row Style for Orders (with cursor) -->
        <Style x:Key="OrderRow" TargetType="DataGridRow">
            <Setter Property="Background" Value="{StaticResource BackgroundCardBrush}"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderLightBrush}"/>
            <Setter Property="BorderThickness" Value="0,0,0,1"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Style.Triggers>
                <DataTrigger Binding="{Binding DateGroupIsAlternate}" Value="True">
                    <Setter Property="Background" Value="{StaticResource DataGridAlternateBrush}"/>
                </DataTrigger>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="{StaticResource DataGridHoverBrush}"/>
                </Trigger>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="{StaticResource PrimaryLightBrush}"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- DataGrid Cell Style -->
        <Style x:Key="ModernCell" TargetType="DataGridCell">
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="DataGridCell">
                        <Border Background="{TemplateBinding Background}"
                                Padding="14,10">
                            <ContentPresenter VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="{StaticResource PrimaryLightBrush}"/>
                    <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header Section -->
        <Border Grid.Row="0" Background="{StaticResource BackgroundCardBrush}" CornerRadius="12" Padding="28,24" Margin="0,0,0,16">
            <Border.Effect>
                <DropShadowEffect BlurRadius="20" ShadowDepth="2" Opacity="0.08" Direction="270"/>
            </Border.Effect>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Title + Tabs -->
                <Grid Grid.Row="0" Margin="0,0,0,20">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Title with icon -->
                    <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                        <Border Width="42" Height="42" CornerRadius="10" Margin="0,0,14,0">
                            <Border.Background>
                                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                    <GradientStop Color="{StaticResource PrimaryColor}" Offset="0"/>
                                    <GradientStop Color="{StaticResource PrimaryDarkColor}" Offset="1"/>
                                </LinearGradientBrush>
                            </Border.Background>
                            <Path Data="M19,3H5C3.89,3 3,3.89 3,5V19A2,2 0 0,0 5,21H19A2,2 0 0,0 21,19V5C21,3.89 20.1,3 19,3M9,17H7V10H9V17M13,17H11V7H13V17M17,17H15V13H17V17Z"
                                  Fill="White"
                                  Width="20" Height="20"
                                  Stretch="Uniform"
                                  HorizontalAlignment="Center"
                                  VerticalAlignment="Center"/>
                        </Border>
                        <StackPanel VerticalAlignment="Center">
                            <TextBlock Text="Hisobotlar"
                                       FontSize="22"
                                       FontWeight="SemiBold"
                                       Foreground="{StaticResource TextPrimaryBrush}"/>
                            <TextBlock Text="Sotish va kirim ma'lumotlarini ko'ring"
                                       FontSize="12"
                                       Foreground="{StaticResource TextMutedBrush}"
                                       Margin="0,2,0,0"/>
                        </StackPanel>
                    </StackPanel>

                    <!-- Tab Buttons -->
                    <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center">
                        <RadioButton Content="Sotilgan mahsulotlar"
                                     Style="{StaticResource TabButtonStyle}"
                                     IsChecked="True"
                                     Checked="SalesTab_Checked"
                                     GroupName="ReportTab"
                                     Margin="0,0,6,0"/>
                        <RadioButton Content="Buyurtmalar"
                                     Style="{StaticResource TabButtonStyle}"
                                     Checked="OrdersTab_Checked"
                                     GroupName="ReportTab"
                                     Margin="0,0,6,0"/>
                        <RadioButton Content="Kirib kelgan mahsulotlar"
                                     Style="{StaticResource TabButtonStyle}"
                                     Checked="StockInTab_Checked"
                                     GroupName="ReportTab"/>
                    </StackPanel>
                </Grid>

                <!-- Date Filter Row -->
                <Border Grid.Row="1"
                        Background="{StaticResource BackgroundInputBrush}"
                        CornerRadius="10"
                        Padding="18,14">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,16,0">
                            <Path Data="M19,19H5V8H19M16,1V3H8V1H6V3H5C3.89,3 3,3.89 3,5V19A2,2 0 0,0 5,21H19A2,2 0 0,0 21,19V5C21,3.89 20.1,3 19,3H18V1"
                                  Fill="{StaticResource PrimaryBrush}"
                                  Width="16" Height="16"
                                  Stretch="Uniform"
                                  VerticalAlignment="Center"
                                  Margin="0,0,8,0"/>
                            <TextBlock Text="Dan:"
                                       VerticalAlignment="Center"
                                       FontSize="13"
                                       FontWeight="SemiBold"
                                       Foreground="{StaticResource TextSecondaryBrush}"/>
                        </StackPanel>

                        <DatePicker Grid.Column="1"
                                    SelectedDate="{Binding StartDate}"
                                    Style="{StaticResource ModernDatePicker}"
                                    Margin="0,0,20,0"/>

                        <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,16,0">
                            <Path Data="M16,11.78L20.24,4.45L21.97,5.45L16.74,14.5L10.23,10.75L5.46,19H22V21H2V3H4V17.54L9.5,8L16,11.78Z"
                                  Fill="{StaticResource PrimaryBrush}"
                                  Width="16" Height="16"
                                  Stretch="Uniform"
                                  VerticalAlignment="Center"
                                  Margin="0,0,8,0"/>
                            <TextBlock Text="Gacha:"
                                       VerticalAlignment="Center"
                                       FontSize="13"
                                       FontWeight="SemiBold"
                                       Foreground="{StaticResource TextSecondaryBrush}"/>
                        </StackPanel>

                        <DatePicker Grid.Column="3"
                                    SelectedDate="{Binding EndDate}"
                                    Style="{StaticResource ModernDatePicker}"
                                    Margin="0,0,20,0"/>

                        <StackPanel Grid.Column="4" Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,10,0">
                            <Path Data="M12,4A4,4 0 0,1 16,8A4,4 0 0,1 12,12A4,4 0 0,1 8,8A4,4 0 0,1 12,4M12,14C16.42,14 20,15.79 20,18V20H4V18C4,15.79 7.58,14 12,14Z"
                                  Fill="{StaticResource PrimaryBrush}"
                                  Width="16" Height="16"
                                  Stretch="Uniform"
                                  VerticalAlignment="Center"
                                  Margin="0,0,8,0"/>
                            <TextBlock Text="Foydalanuvchi:"
                                       VerticalAlignment="Center"
                                       FontSize="13"
                                       FontWeight="SemiBold"
                                       Foreground="{StaticResource TextSecondaryBrush}"/>
                        </StackPanel>

                        <ComboBox Grid.Column="5"
                                  ItemsSource="{Binding UserFilterItems}"
                                  SelectedItem="{Binding SelectedUserFilter}"
                                  DisplayMemberPath="DisplayName"
                                  FontSize="13"
                                  Padding="8,6"
                                  Width="180"
                                  VerticalAlignment="Center"
                                  Background="{StaticResource BackgroundInputBrush}"
                                  BorderBrush="{StaticResource BorderDefaultBrush}"
                                  BorderThickness="1.5"/>

                        <Button Grid.Column="7"
                                Command="{Binding LoadReportCommand}"
                                Style="{StaticResource PrimaryButtonStyle}"
                                Margin="0,0,8,0">
                            <StackPanel Orientation="Horizontal">
                                <Path Data="M9.5,3A6.5,6.5 0 0,1 16,9.5C16,11.11 15.41,12.59 14.44,13.73L14.71,14H15.5L20.5,19L19,20.5L14,15.5V14.71L13.73,14.44C12.59,15.41 11.11,16 9.5,16A6.5,6.5 0 0,1 3,9.5A6.5,6.5 0 0,1 9.5,3M9.5,5C7,5 5,7 5,9.5C5,12 7,14 9.5,14C12,14 14,12 14,9.5C14,7 12,5 9.5,5Z"
                                      Fill="White"
                                      Width="14" Height="14"
                                      Stretch="Uniform"
                                      Margin="0,0,8,0"
                                      VerticalAlignment="Center"/>
                                <TextBlock Text="Hisobot olish" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>

                        <Button Grid.Column="8"
                                Command="{Binding ExportToExcelCommand}"
                                Style="{StaticResource ExportButtonStyle}">
                            <StackPanel Orientation="Horizontal">
                                <Path Data="M14,2H6A2,2 0 0,0 4,4V20A2,2 0 0,0 6,22H18A2,2 0 0,0 20,20V8L14,2M18,20H6V4H13V9H18V20M12,19L8,15H10.5V12H13.5V15H16L12,19Z"
                                      Fill="White"
                                      Width="14" Height="14"
                                      Stretch="Uniform"
                                      Margin="0,0,8,0"
                                      VerticalAlignment="Center"/>
                                <TextBlock Text="Excel" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>
                    </Grid>
                </Border>
            </Grid>
        </Border>

        <!-- Success Message -->
        <Border Grid.Row="1"
                Background="{StaticResource SuccessBackgroundBrush}"
                Padding="16,12"
                CornerRadius="10"
                Margin="0,0,0,12"
                Visibility="{Binding SuccessMessage, Converter={StaticResource NullToVisibilityConverter}}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Border Grid.Column="0" Width="28" Height="28" CornerRadius="14"
                        Background="{StaticResource SuccessLightBrush}" Margin="0,0,12,0">
                    <Path Data="M21,7L9,19L3.5,13.5L4.91,12.09L9,16.17L19.59,5.59L21,7Z"
                          Fill="{StaticResource SuccessDarkBrush}"
                          Width="14" Height="14"
                          Stretch="Uniform"
                          HorizontalAlignment="Center"
                          VerticalAlignment="Center"/>
                </Border>
                <TextBlock Grid.Column="1" Text="{Binding SuccessMessage}"
                           Foreground="{StaticResource SuccessDarkBrush}" FontSize="13" FontWeight="SemiBold"
                           VerticalAlignment="Center"/>
            </Grid>
        </Border>

        <!-- Error Message -->
        <Border Grid.Row="2"
                Background="{StaticResource ErrorBackgroundBrush}"
                Padding="16,12"
                CornerRadius="10"
                Margin="0,0,0,12"
                Visibility="{Binding ErrorMessage, Converter={StaticResource NullToVisibilityConverter}}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Border Grid.Column="0" Width="28" Height="28" CornerRadius="14"
                        Background="{StaticResource ErrorBackgroundBrush}" Margin="0,0,12,0">
                    <Path Data="M13,13H11V7H13M13,17H11V15H13M12,2A10,10 0 0,0 2,12A10,10 0 0,0 12,22A10,10 0 0,0 22,12A10,10 0 0,0 12,2Z"
                          Fill="{StaticResource ErrorTextBrush}"
                          Width="14" Height="14"
                          Stretch="Uniform"
                          HorizontalAlignment="Center"
                          VerticalAlignment="Center"/>
                </Border>
                <TextBlock Grid.Column="1" Text="{Binding ErrorMessage}"
                           Foreground="{StaticResource ErrorTextBrush}" FontSize="13" FontWeight="SemiBold"
                           VerticalAlignment="Center"/>
            </Grid>
        </Border>

        <!-- ==================== SALES REPORT TAB (Tab 0) ==================== -->
        <Grid Grid.Row="3" Grid.RowSpan="2"
              Visibility="{Binding SelectedTabIndex, Converter={StaticResource IntEqualsVisibilityConverter}, ConverterParameter=0}">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Summary Cards -->
            <Grid Grid.Row="0" Margin="0,0,0,16">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Border Grid.Column="0" Style="{StaticResource StatCardStyle}" Margin="0,0,8,0">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <StackPanel Grid.Column="0" VerticalAlignment="Center">
                            <TextBlock Text="Jami sotuvlar" FontSize="13" Foreground="{StaticResource TextMutedBrush}"/>
                            <TextBlock FontSize="24" FontWeight="Bold" Foreground="{StaticResource TextPrimaryBrush}" Margin="0,8,0,0">
                                <TextBlock.Text>
                                    <Binding Path="TotalSalesAmount" StringFormat="{}{0:N0} so'm"/>
                                </TextBlock.Text>
                            </TextBlock>
                            <TextBlock Text="Tanlangan davr uchun" FontSize="11" Foreground="{StaticResource TextFaintBrush}" Margin="0,4,0,0"/>
                        </StackPanel>
                        <Border Grid.Column="1" Width="50" Height="50" Background="{StaticResource SuccessBackgroundBrush}" CornerRadius="12">
                            <Path Data="M5,6H23V18H5V6M14,9A3,3 0 0,1 17,12A3,3 0 0,1 14,15A3,3 0 0,1 11,12A3,3 0 0,1 14,9M9,8A2,2 0 0,1 7,10V14A2,2 0 0,1 9,16H19A2,2 0 0,1 21,14V10A2,2 0 0,1 19,8H9M1,10H3V20H19V22H1V10Z"
                                  Fill="{StaticResource SuccessBrush}" Width="24" Height="24" Stretch="Uniform" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </Grid>
                </Border>

                <Border Grid.Column="1" Style="{StaticResource StatCardStyle}" Margin="8,0,8,0">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <StackPanel Grid.Column="0" VerticalAlignment="Center">
                            <TextBlock Text="Jami foyda" FontSize="13" Foreground="{StaticResource TextMutedBrush}"/>
                            <TextBlock FontSize="24" FontWeight="Bold" Foreground="{StaticResource SuccessDarkBrush}" Margin="0,8,0,0">
                                <TextBlock.Text>
                                    <Binding Path="TotalSalesProfit" StringFormat="{}{0:N0} so'm"/>
                                </TextBlock.Text>
                            </TextBlock>
                            <TextBlock Text="Tanlangan davr uchun" FontSize="11" Foreground="{StaticResource TextFaintBrush}" Margin="0,4,0,0"/>
                        </StackPanel>
                        <Border Grid.Column="1" Width="50" Height="50" Background="{StaticResource SuccessBackgroundBrush}" CornerRadius="12">
                            <Path Data="M13,2.05V4.05C17.39,4.59 20.5,8.58 19.96,12.97C19.5,16.61 16.64,19.5 13,19.93V21.93C18.5,21.38 22.5,16.5 21.95,11C21.5,6.25 17.73,2.5 13,2.05M11,2.06C9.05,2.25 7.19,3 5.67,4.26L7.1,5.74C8.22,4.84 9.57,4.26 11,4.06V2.06M4.26,5.67C3,7.19 2.25,9.04 2.05,11H4.05C4.24,9.58 4.8,8.23 5.69,7.1L4.26,5.67M15.5,8.5L10.61,13.39L8.5,11.28L7.44,12.34L10.61,15.5L16.56,9.56L15.5,8.5M2.06,13C2.26,14.96 3.03,16.81 4.27,18.33L5.69,16.9C4.81,15.77 4.24,14.42 4.06,13H2.06Z"
                                  Fill="{StaticResource SuccessBrush}" Width="24" Height="24" Stretch="Uniform" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </Grid>
                </Border>

                <Border Grid.Column="2" Style="{StaticResource StatCardStyle}" Margin="8,0,0,0">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <StackPanel Grid.Column="0" VerticalAlignment="Center">
                            <TextBlock Text="Jami yozuvlar" FontSize="13" Foreground="{StaticResource TextMutedBrush}"/>
                            <TextBlock Text="{Binding SalesItemCount, StringFormat={}{0} ta}" FontSize="24" FontWeight="Bold" Foreground="{StaticResource TextPrimaryBrush}" Margin="0,8,0,0"/>
                            <TextBlock Text="Sotuv yozuvlari" FontSize="11" Foreground="{StaticResource TextFaintBrush}" Margin="0,4,0,0"/>
                        </StackPanel>
                        <Border Grid.Column="1" Width="50" Height="50" Background="{StaticResource InfoBackgroundBrush}" CornerRadius="12">
                            <Path Data="M14,2H6A2,2 0 0,0 4,4V20A2,2 0 0,0 6,22H18A2,2 0 0,0 20,20V8L14,2M18,20H6V4H13V9H18V20M9,13V19H7V13H9M15,15V19H13V15H15M11,11V19H13V11H11Z"
                                  Fill="{StaticResource InfoBrush}" Width="24" Height="24" Stretch="Uniform" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </Grid>
                </Border>
            </Grid>

            <!-- Sales DataGrid -->
            <Border Grid.Row="1" Background="{StaticResource BackgroundCardBrush}" CornerRadius="12">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="20" ShadowDepth="2" Opacity="0.08" Direction="270"/>
                </Border.Effect>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <Border Grid.Row="0" Padding="20,16" BorderBrush="{StaticResource BorderLightBrush}" BorderThickness="0,0,0,1">
                        <StackPanel Orientation="Horizontal">
