                                        <ControlTemplate TargetType="Button">
                                            <Border x:Name="border" Background="{StaticResource BackgroundInputBrush}" CornerRadius="10" Padding="18,10" BorderBrush="{StaticResource BorderDefaultBrush}" BorderThickness="1">
                                                <StackPanel Orientation="Horizontal">
                                                    <TextBlock Text="Keyingi" FontSize="14" Foreground="{StaticResource TextTertiaryBrush}" FontWeight="SemiBold"/>
                                                    <Path Data="M8.59,16.58L13.17,12L8.59,7.41L10,6L16,12L10,18L8.59,16.58Z" Fill="{StaticResource TextTertiaryBrush}" Width="14" Height="14" Stretch="Uniform" Margin="6,0,0,0" VerticalAlignment="Center"/>
