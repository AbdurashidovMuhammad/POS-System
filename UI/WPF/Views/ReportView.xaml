                            <Path Data="M19,13H13V19H11V13H5V11H11V5H13V11H19V13Z"
                                  Fill="{StaticResource WarningBrush}" Width="28" Height="28" Stretch="Uniform" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <TextBlock Text="Kirim ma'lumotlari yo'q" FontSize="15" FontWeight="SemiBold" Foreground="{StaticResource TextPrimaryBrush}" HorizontalAlignment="Center"/>
                        <TextBlock Text="Sana oralig'ini tanlab &quot;Hisobot olish&quot; tugmasini bosing" FontSize="12" Foreground="{StaticResource TextFaintBrush}" HorizontalAlignment="Center" Margin="0,6,0,0"/>
                    </StackPanel>

                    <!-- Pagination -->
                    <Border Grid.Row="2" BorderBrush="{StaticResource BorderLightBrush}" BorderThickness="0,1,0,0" Padding="20,14">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                                <Border Background="{StaticResource PrimaryLightBrush}" CornerRadius="8" Padding="10,6">
                                    <TextBlock FontSize="12" Foreground="{StaticResource PrimaryBrush}" FontWeight="SemiBold">
                                        <Run Text="Jami: "/>
                                        <Run Text="{Binding TotalCount}" FontWeight="Bold"/>
                                        <Run Text=" ta yozuv"/>
                                    </TextBlock>
                                </Border>
                            </StackPanel>
                            <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center">
                                <Button Command="{Binding PreviousPageCommand}" Cursor="Hand" Margin="0,0,8,0">
                                    <Button.Template>
