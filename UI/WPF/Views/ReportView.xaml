        <!-- ==================== STOCK-IN REPORT TAB (Tab 2) ==================== -->
        <Grid Grid.Row="3" Grid.RowSpan="2"
              Visibility="{Binding SelectedTabIndex, Converter={StaticResource IntEqualsVisibilityConverter}, ConverterParameter=2}">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Summary Cards -->
            <Grid Grid.Row="0" Margin="0,0,0,16">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Border Grid.Column="0" Style="{StaticResource StatCardStyle}" Margin="0,0,8,0">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <StackPanel Grid.Column="0" VerticalAlignment="Center">
                            <TextBlock Text="Jami kirim miqdori" FontSize="13" Foreground="{StaticResource TextMutedBrush}"/>
                            <TextBlock Text="{Binding TotalStockInQuantity, StringFormat={}{0:0.##}}" FontSize="24" FontWeight="Bold" Foreground="{StaticResource TextPrimaryBrush}" Margin="0,8,0,0"/>
                            <TextBlock Text="Tanlangan davr uchun" FontSize="11" Foreground="{StaticResource TextFaintBrush}" Margin="0,4,0,0"/>
                        </StackPanel>
                        <Border Grid.Column="1" Width="50" Height="50" Background="{StaticResource WarningBackgroundBrush}" CornerRadius="12">
                            <Path Data="M19,13H13V19H11V13H5V11H11V5H13V11H19V13Z"
                                  Fill="{StaticResource WarningBrush}" Width="24" Height="24" Stretch="Uniform" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </Grid>
                </Border>

                <Border Grid.Column="1" Style="{StaticResource StatCardStyle}" Margin="8,0,8,0">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <StackPanel Grid.Column="0" VerticalAlignment="Center">
                            <TextBlock Text="Jami summasi" FontSize="13" Foreground="{StaticResource TextMutedBrush}"/>
                            <TextBlock FontSize="24" FontWeight="Bold" Foreground="{StaticResource TextPrimaryBrush}" Margin="0,8,0,0">
                                <Run Text="{Binding TotalStockInAmount, StringFormat={}{0:#\,##0}, Mode=OneWay}"/>
                                <Run Text=" so'm"/>
                            </TextBlock>
                            <TextBlock Text="Asl bahosi bo'yicha" FontSize="11" Foreground="{StaticResource TextFaintBrush}" Margin="0,4,0,0"/>
                        </StackPanel>
                        <Border Grid.Column="1" Width="50" Height="50" Background="{StaticResource SuccessBackgroundBrush}" CornerRadius="12">
                            <Path Data="M7,15H9C9,16.08 10.37,17 12,17C13.63,17 15,16.08 15,15C15,13.9 13.96,13.5 11.76,12.97C9.64,12.44 7,11.78 7,9C7,7.21 8.47,5.69 10.5,5.18V3H13.5V5.18C15.53,5.69 17,7.21 17,9H15C15,7.92 13.63,7 12,7C10.37,7 9,7.92 9,9C9,10.1 10.04,10.5 12.24,11.03C14.36,11.56 17,12.22 17,15C17,16.79 15.53,18.31 13.5,18.82V21H10.5V18.82C8.47,18.31 7,16.79 7,15Z"
