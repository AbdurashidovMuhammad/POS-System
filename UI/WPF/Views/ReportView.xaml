                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <StackPanel Grid.Column="0" VerticalAlignment="Center">
                            <TextBlock Text="Jami yozuvlar" FontSize="13" Foreground="{StaticResource TextMutedBrush}"/>
                            <TextBlock Text="{Binding StockInItemCount, StringFormat={}{0} ta}" FontSize="24" FontWeight="Bold" Foreground="{StaticResource TextPrimaryBrush}" Margin="0,8,0,0"/>
                            <TextBlock Text="Kirim yozuvlari" FontSize="11" Foreground="{StaticResource TextFaintBrush}" Margin="0,4,0,0"/>
                        </StackPanel>
