                                                                        <Binding Path="UnitType"/>
                                                                    </MultiBinding>
                                                                </TextBlock.Text>
                                                            </TextBlock>
                                                        </StackPanel>
                                                    </StackPanel>
                                                </Grid>
                                            </Border>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                                </ScrollViewer>
                            </DockPanel>
                        </Grid>
                    </Border>
                </Grid>
            </Grid>
        </Grid>
</UserControl>
