<UserControl x:Class="WPF.Views.AdminDashboardView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="clr-namespace:WPF.ViewModels"
             mc:Ignorable="d"
             d:DataContext="{d:DesignInstance Type=vm:AdminDashboardViewModel}"
             d:DesignHeight="800" d:DesignWidth="1200">

    <UserControl.Resources>
        <Style x:Key="StatCardStyle" TargetType="Border">
            <Setter Property="Background" Value="{StaticResource BackgroundCardBrush}"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Padding" Value="24,20"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="20" ShadowDepth="2" Opacity="0.08" Direction="270"/>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="SectionCardStyle" TargetType="Border">
            <Setter Property="Background" Value="{StaticResource BackgroundCardBrush}"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="20" ShadowDepth="2" Opacity="0.08" Direction="270"/>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="SectionTitleStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}"/>
        </Style>
    </UserControl.Resources>

    <Grid Margin="0,0,0,20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

            <!-- ═══ GRADIENT HEADER ═══ -->
            <Border Grid.Row="0" CornerRadius="12" Padding="30" Margin="0,0,0,20">
                <Border.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,0.5">
                        <GradientStop Color="{StaticResource PrimaryColor}" Offset="0"/>
                        <GradientStop Color="{StaticResource PrimaryDarkColor}" Offset="1"/>
                    </LinearGradientBrush>
                </Border.Background>
                <Border.Effect>
                    <DropShadowEffect BlurRadius="30" ShadowDepth="4" Opacity="0.18" Color="{StaticResource PrimaryColor}" Direction="270"/>
                </Border.Effect>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <StackPanel Grid.Column="0">
                        <TextBlock Text="Boshqaruv paneli"
                                   FontSize="28" FontWeight="SemiBold" Foreground="White"/>
                        <TextBlock Text="Umumiy savdo statistikasi va tizim holati"
                                   FontSize="14" Foreground="{StaticResource HeaderSubtitleBrush}" Margin="0,8,0,0"/>
                    </StackPanel>
                    <Button Grid.Column="1"
                            Command="{Binding RefreshCommand}"
                            Cursor="Hand"
                            VerticalAlignment="Center">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border x:Name="border"
                                        Background="{StaticResource GlassButtonBgBrush}"
                                        CornerRadius="10"
                                        Padding="14,10"
                                        BorderBrush="{StaticResource GlassButtonBorderBrush}"
                                        BorderThickness="1">
                                    <StackPanel Orientation="Horizontal">
                                        <Path x:Name="icon"
                                              Data="M17.65,6.35C16.2,4.9 14.21,4 12,4A8,8 0 0,0 4,12A8,8 0 0,0 12,20C15.73,20 18.84,17.45 19.73,14H17.65C16.83,16.33 14.61,18 12,18A6,6 0 0,1 6,12A6,6 0 0,1 12,6C13.66,6 15.14,6.69 16.22,7.78L13,11H20V4L17.65,6.35Z"
                                              Fill="White"
                                              Width="18" Height="18"
                                              Stretch="Uniform"
                                              VerticalAlignment="Center"
                                              RenderTransformOrigin="0.5,0.5">
                                            <Path.RenderTransform>
                                                <RotateTransform x:Name="spinTransform" Angle="0"/>
                                            </Path.RenderTransform>
                                        </Path>
                                        <TextBlock Text="Yangilash"
                                                   FontSize="13" FontWeight="SemiBold"
                                                   Foreground="White"
                                                   VerticalAlignment="Center"
                                                   Margin="8,0,0,0"/>
                                    </StackPanel>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter TargetName="border" Property="Background" Value="{StaticResource GlassButtonHoverBrush}"/>
                                    </Trigger>
                                    <DataTrigger Binding="{Binding IsRefreshing}" Value="True">
                                        <DataTrigger.EnterActions>
                                            <BeginStoryboard x:Name="SpinStoryboard">
                                                <Storyboard>
                                                    <DoubleAnimation Storyboard.TargetName="spinTransform"
                                                                     Storyboard.TargetProperty="Angle"
                                                                     From="0" To="360"
                                                                     Duration="0:0:0.8"
                                                                     RepeatBehavior="Forever"/>
                                                </Storyboard>
                                            </BeginStoryboard>
                                        </DataTrigger.EnterActions>
                                        <DataTrigger.ExitActions>
                                            <StopStoryboard BeginStoryboardName="SpinStoryboard"/>
                                        </DataTrigger.ExitActions>
                                    </DataTrigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                </Grid>
            </Border>

            <!-- ═══ STAT CARDS ═══ -->
            <Grid Grid.Row="1" Margin="0,0,0,20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Umumiy sotish -->
                <Border Grid.Column="0" Style="{StaticResource StatCardStyle}" Margin="0,0,10,0">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <StackPanel Grid.Column="0">
                            <TextBlock Text="Umumiy bugungi sotish"
                                       FontSize="13" Foreground="{StaticResource TextMutedBrush}"/>
                            <TextBlock Text="{Binding TodaySalesAmount}"
                                       FontSize="24" FontWeight="Bold"
                                       Foreground="{StaticResource TextPrimaryBrush}" Margin="0,8,0,0"/>
                            <TextBlock Text="Bugungi savdo"
                                       FontSize="12" Foreground="{StaticResource TextTertiaryBrush}"
                                       Margin="0,5,0,0"/>
                        </StackPanel>
                        <Border Grid.Column="1" Width="50" Height="50" CornerRadius="12">
                            <Border.Background>
                                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                    <GradientStop Color="{StaticResource SuccessBackgroundColor}" Offset="0"/>
                                    <GradientStop Color="{StaticResource SuccessLightColor}" Offset="1"/>
                                </LinearGradientBrush>
                            </Border.Background>
                            <Path Data="M5,6H23V18H5V6M14,9A3,3 0 0,1 17,12A3,3 0 0,1 14,15A3,3 0 0,1 11,12A3,3 0 0,1 14,9M9,8A2,2 0 0,1 7,10V14A2,2 0 0,1 9,16H19A2,2 0 0,1 21,14V10A2,2 0 0,1 19,8H9M1,10H3V20H19V22H1V10Z"
                                  Fill="{StaticResource SuccessBrush}" Width="24" Height="24"
                                  Stretch="Uniform" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </Grid>
                </Border>

                <!-- Umumiy buyurtmalar -->
                <Border Grid.Column="1" Style="{StaticResource StatCardStyle}" Margin="5,0">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <StackPanel Grid.Column="0">
                            <TextBlock Text="Umumiy buyurtmalar"
                                       FontSize="13" Foreground="{StaticResource TextMutedBrush}"/>
                            <TextBlock Text="{Binding TodayOrdersCount}"
                                       FontSize="24" FontWeight="Bold"
                                       Foreground="{StaticResource TextPrimaryBrush}" Margin="0,8,0,0"/>
                            <TextBlock Text="Bugungi buyurtmalar"
                                       FontSize="12" Foreground="{StaticResource TextTertiaryBrush}"
                                       Margin="0,5,0,0"/>
                        </StackPanel>
                        <Border Grid.Column="1" Width="50" Height="50" CornerRadius="12">
                            <Border.Background>
                                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                    <GradientStop Color="{StaticResource InfoBackgroundColor}" Offset="0"/>
                                    <GradientStop Color="{StaticResource InfoDarkColor}" Offset="1"/>
                                </LinearGradientBrush>
                            </Border.Background>
                            <Path Data="M17,18C15.89,18 15,18.89 15,20A2,2 0 0,0 17,22A2,2 0 0,0 19,20C19,18.89 18.1,18 17,18M1,2V4H3L6.6,11.59L5.24,14.04C5.09,14.32 5,14.65 5,15A2,2 0 0,0 7,17H19V15H7.42A0.25,0.25 0 0,1 7.17,14.75C7.17,14.7 7.18,14.66 7.2,14.63L8.1,13H15.55C16.3,13 16.96,12.58 17.3,11.97L20.88,5.5C20.95,5.34 21,5.17 21,5A1,1 0 0,0 20,4H5.21L4.27,2M7,18C5.89,18 5,18.89 5,20A2,2 0 0,0 7,22A2,2 0 0,0 9,20C9,18.89 8.1,18 7,18Z"
                                  Fill="{StaticResource InfoBrush}" Width="24" Height="24"
                                  Stretch="Uniform" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </Grid>
                </Border>

                <!-- Mahsulotlar -->
                <Border Grid.Column="2" Style="{StaticResource StatCardStyle}" Margin="5,0">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <StackPanel Grid.Column="0">
                            <TextBlock Text="Jami mahsulotlar"
                                       FontSize="13" Foreground="{StaticResource TextMutedBrush}"/>
                            <TextBlock Text="{Binding TotalProductsCount}"
                                       FontSize="24" FontWeight="Bold"
                                       Foreground="{StaticResource TextPrimaryBrush}" Margin="0,8,0,0"/>
                            <TextBlock Text="Faol mahsulotlar"
                                       FontSize="12" Foreground="{StaticResource TextTertiaryBrush}" Margin="0,5,0,0"/>
                        </StackPanel>
                        <Border Grid.Column="1" Width="50" Height="50" CornerRadius="12">
                            <Border.Background>
                                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                    <GradientStop Color="{StaticResource WarningBackgroundColor}" Offset="0"/>
                                    <GradientStop Color="{StaticResource WarningLightColor}" Offset="1"/>
                                </LinearGradientBrush>
                            </Border.Background>
                            <Path Data="M12,3L2,12H5V20H19V12H22L12,3M12,8.75A2.25,2.25 0 0,1 14.25,11A2.25,2.25 0 0,1 12,13.25A2.25,2.25 0 0,1 9.75,11A2.25,2.25 0 0,1 12,8.75Z"
                                  Fill="{StaticResource WarningBrush}" Width="24" Height="24"
                                  Stretch="Uniform" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </Grid>
                </Border>

                <!-- Kategoriyalar -->
                <Border Grid.Column="3" Style="{StaticResource StatCardStyle}" Margin="10,0,0,0">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <StackPanel Grid.Column="0">
                            <TextBlock Text="Kategoriyalar"
                                       FontSize="13" Foreground="{StaticResource TextMutedBrush}"/>
                            <TextBlock Text="{Binding TotalCategoriesCount}"
                                       FontSize="24" FontWeight="Bold"
                                       Foreground="{StaticResource TextPrimaryBrush}" Margin="0,8,0,0"/>
                            <TextBlock Text="Faol kategoriyalar"
                                       FontSize="12" Foreground="{StaticResource TextTertiaryBrush}" Margin="0,5,0,0"/>
                        </StackPanel>
                        <Border Grid.Column="1" Width="50" Height="50" CornerRadius="12">
                            <Border.Background>
                                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                    <GradientStop Color="{StaticResource CategoryBackgroundColor}" Offset="0"/>
                                    <GradientStop Color="{StaticResource CategoryLightColor}" Offset="1"/>
                                </LinearGradientBrush>
                            </Border.Background>
                            <Path Data="M10,4H4C2.89,4 2,4.89 2,6V18A2,2 0 0,0 4,20H20A2,2 0 0,0 22,18V8C22,6.89 21.1,6 20,6H12L10,4Z"
                                  Fill="{StaticResource CategoryBrush}" Width="24" Height="24"
                                  Stretch="Uniform" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </Grid>
                </Border>
            </Grid>

            <!-- ═══ MAIN CONTENT ═══ -->
            <Grid Grid.Row="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="3*"/>
                    <ColumnDefinition Width="2*"/>
                </Grid.ColumnDefinitions>

                <!-- ── LEFT COLUMN ── -->
                <StackPanel Grid.Column="0" Margin="0,0,10,0">

                    <!-- Kassirlar bo'yicha sotish -->
                    <Border Style="{StaticResource SectionCardStyle}">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <Border Grid.Row="0" Padding="24,16" CornerRadius="12,12,0,0">
                                <Border.Background>
                                    <LinearGradientBrush StartPoint="0,0.5" EndPoint="1,0.5">
                                        <GradientStop Color="#90caf9" Offset="0"/>
                                        <GradientStop Color="#90caf9" Offset="0.35"/>
                                        <GradientStop Color="{StaticResource InfoDarkColor}" Offset="0.65"/>
                                        <GradientStop Color="{StaticResource InfoBackgroundColor}" Offset="0.9"/>
                                        <GradientStop Color="#F0F6FF" Offset="1"/>
                                    </LinearGradientBrush>
                                </Border.Background>
                                <StackPanel Orientation="Horizontal">
                                    <Border Width="32" Height="32" CornerRadius="8"
                                            Background="{StaticResource InfoBackgroundBrush}" Margin="0,0,12,0">
                                        <Path Data="M12,4A4,4 0 0,1 16,8A4,4 0 0,1 12,12A4,4 0 0,1 8,8A4,4 0 0,1 12,4M12,14C16.42,14 20,15.79 20,18V20H4V18C4,15.79 7.58,14 12,14Z"
                                              Fill="{StaticResource InfoBrush}" Width="16" Height="16"
                                              Stretch="Uniform"
                                              HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                    <TextBlock Text="Kassirlar bo'yicha sotish (bugun)"
                                               Style="{StaticResource SectionTitleStyle}"
                                               VerticalAlignment="Center"/>
                                </StackPanel>
                            </Border>

                            <!-- Empty state -->
                            <StackPanel Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Center"
                                        Margin="0,30,0,30"
                                        Visibility="{Binding HasCashierSales, Converter={StaticResource BoolToVisibilityConverter}, ConverterParameter=invert}">
                                <Path Data="M12,4A4,4 0 0,1 16,8A4,4 0 0,1 12,12A4,4 0 0,1 8,8A4,4 0 0,1 12,4M12,14C16.42,14 20,15.79 20,18V20H4V18C4,15.79 7.58,14 12,14Z"
                                      Fill="{StaticResource TextSeparatorBrush}" Width="36" Height="36" Stretch="Uniform"
                                      HorizontalAlignment="Center"/>
                                <TextBlock Text="Bugun hali sotish bo'lmagan"
                                           FontSize="14" Foreground="{StaticResource TextMutedBrush}"
                                           HorizontalAlignment="Center"
                                           Margin="0,10,0,0"/>
                            </StackPanel>

                            <!-- Cashier list -->
                            <DockPanel Grid.Row="1"
                                       Visibility="{Binding HasCashierSales, Converter={StaticResource BoolToVisibilityConverter}}">

                                <!-- Pagination - docked at bottom -->
                                <Border DockPanel.Dock="Bottom" Padding="16,10" BorderBrush="{StaticResource BorderLightBrush}" BorderThickness="0,1,0,0">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <Button Grid.Column="0"
                                                Command="{Binding CashierPreviousPageCommand}"
                                                IsEnabled="{Binding CanCashierPrevious}"
                                                Cursor="Hand">
                                            <Button.Template>
                                                <ControlTemplate TargetType="Button">
                                                    <Border x:Name="btnBorder" Background="Transparent" CornerRadius="6" Padding="8,4">
                                                        <StackPanel Orientation="Horizontal">
                                                            <Path Data="M15.41,16.58L10.83,12L15.41,7.41L14,6L8,12L14,18L15.41,16.58Z"
                                                                  Fill="{StaticResource TextMutedBrush}" Width="14" Height="14"
                                                                  Stretch="Uniform" VerticalAlignment="Center"/>
                                                            <TextBlock Text="Oldingi" FontSize="12"
                                                                       Foreground="{StaticResource TextMutedBrush}"
                                                                       VerticalAlignment="Center" Margin="4,0,0,0"/>
                                                        </StackPanel>
                                                    </Border>
                                                    <ControlTemplate.Triggers>
                                                        <Trigger Property="IsMouseOver" Value="True">
                                                            <Setter TargetName="btnBorder" Property="Background" Value="{StaticResource InfoBackgroundBrush}"/>
                                                        </Trigger>
                                                        <Trigger Property="IsEnabled" Value="False">
                                                            <Setter TargetName="btnBorder" Property="Opacity" Value="0.4"/>
                                                        </Trigger>
                                                    </ControlTemplate.Triggers>
                                                </ControlTemplate>
                                            </Button.Template>
                                        </Button>

                                        <TextBlock Grid.Column="1"
                                                   Text="{Binding CashierPageInfo}"
                                                   FontSize="12" Foreground="{StaticResource TextMutedBrush}"
                                                   HorizontalAlignment="Center" VerticalAlignment="Center"/>

                                        <Button Grid.Column="2"
                                                Command="{Binding CashierNextPageCommand}"
                                                IsEnabled="{Binding CanCashierNext}"
                                                Cursor="Hand">
                                            <Button.Template>
                                                <ControlTemplate TargetType="Button">
                                                    <Border x:Name="btnBorder" Background="Transparent" CornerRadius="6" Padding="8,4">
                                                        <StackPanel Orientation="Horizontal">
                                                            <TextBlock Text="Keyingi" FontSize="12"
                                                                       Foreground="{StaticResource TextMutedBrush}"
                                                                       VerticalAlignment="Center" Margin="0,0,4,0"/>
                                                            <Path Data="M8.59,16.58L13.17,12L8.59,7.41L10,6L16,12L10,18L8.59,16.58Z"
                                                                  Fill="{StaticResource TextMutedBrush}" Width="14" Height="14"
                                                                  Stretch="Uniform" VerticalAlignment="Center"/>
                                                        </StackPanel>
                                                    </Border>
                                                    <ControlTemplate.Triggers>
                                                        <Trigger Property="IsMouseOver" Value="True">
                                                            <Setter TargetName="btnBorder" Property="Background" Value="{StaticResource InfoBackgroundBrush}"/>
                                                        </Trigger>
                                                        <Trigger Property="IsEnabled" Value="False">
                                                            <Setter TargetName="btnBorder" Property="Opacity" Value="0.4"/>
                                                        </Trigger>
                                                    </ControlTemplate.Triggers>
                                                </ControlTemplate>
                                            </Button.Template>
                                        </Button>
                                    </Grid>
                                </Border>

                                <!-- Scrollable cashier list -->
                                <ScrollViewer VerticalScrollBarVisibility="Auto">
                                    <ItemsControl ItemsSource="{Binding PagedCashierSales}" Margin="0,4,0,0">
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <Border Padding="24,14" BorderBrush="{StaticResource BorderLightBrush}" BorderThickness="0,0,0,1">
                                                    <Grid>
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="Auto"/>
                                                            <ColumnDefinition Width="*"/>
                                                            <ColumnDefinition Width="Auto"/>
                                                            <ColumnDefinition Width="Auto"/>
                                                        </Grid.ColumnDefinitions>

                                                        <!-- Avatar -->
                                                        <Border Grid.Column="0" Width="40" Height="40"
                                                                CornerRadius="20" Margin="0,0,14,0">
                                                            <Border.Background>
                                                                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                                                    <GradientStop Color="{StaticResource InfoBackgroundColor}" Offset="0"/>
                                                                    <GradientStop Color="{StaticResource InfoDarkColor}" Offset="1"/>
                                                                </LinearGradientBrush>
                                                            </Border.Background>
                                                            <Path Data="M12,4A4,4 0 0,1 16,8A4,4 0 0,1 12,12A4,4 0 0,1 8,8A4,4 0 0,1 12,4M12,14C16.42,14 20,15.79 20,18V20H4V18C4,15.79 7.58,14 12,14Z"
                                                                  Fill="{StaticResource InfoBrush}" Width="20" Height="20"
                                                                  Stretch="Uniform"
                                                                  HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                        </Border>

                                                        <TextBlock Grid.Column="1"
                                                                   Text="{Binding Username}"
                                                                   FontSize="14" FontWeight="SemiBold"
                                                                   Foreground="{StaticResource TextPrimaryBrush}"
                                                                   VerticalAlignment="Center"/>

                                                        <Border Grid.Column="2" Background="{StaticResource InfoBackgroundBrush}" CornerRadius="6"
                                                                Padding="8,3" Margin="15,0" VerticalAlignment="Center">
                                                            <TextBlock FontSize="12" Foreground="{StaticResource InfoBrush}">
                                                                <Run Text="{Binding TodayOrdersCount, Mode=OneWay}"/>
                                                                <Run Text=" buyurtma" Foreground="{StaticResource TextTertiaryBrush}"/>
                                                            </TextBlock>
                                                        </Border>

                                                        <TextBlock Grid.Column="3"
                                                                   FontSize="14" FontWeight="Bold"
                                                                   Foreground="{StaticResource TextPrimaryBrush}" VerticalAlignment="Center">
                                                            <TextBlock.Text>
                                                                <MultiBinding StringFormat="{}{0:N0} sum">
                                                                    <Binding Path="TodaySalesAmount"/>
                                                                </MultiBinding>
                                                            </TextBlock.Text>
                                                        </TextBlock>
                                                    </Grid>
                                                </Border>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                </ScrollViewer>
                            </DockPanel>
                        </Grid>
                    </Border>
                </StackPanel>

                <!-- ── RIGHT COLUMN ── -->
                <Grid Grid.Column="1" Margin="10,0,0,0">

                    <!-- Kam qolgan mahsulotlar -->
                    <Border Style="{StaticResource SectionCardStyle}">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <Border Grid.Row="0" Padding="24,16" CornerRadius="12,12,0,0">
                                <Border.Background>
                                    <LinearGradientBrush StartPoint="0,0.5" EndPoint="1,0.5">
                                        <GradientStop Color="#ffcc80" Offset="0"/>
                                        <GradientStop Color="#ffcc80" Offset="0.35"/>
                                        <GradientStop Color="{StaticResource WarningLightColor}" Offset="0.65"/>
                                        <GradientStop Color="{StaticResource WarningBackgroundColor}" Offset="0.9"/>
                                        <GradientStop Color="#FFFAF0" Offset="1"/>
                                    </LinearGradientBrush>
                                </Border.Background>
                                <Grid>
                                    <StackPanel Orientation="Horizontal">
                                        <Border Width="32" Height="32" CornerRadius="8"
                                                Background="{StaticResource WarningBackgroundBrush}" Margin="0,0,12,0">
                                            <Path Data="M12,2L1,21H23M12,6L19.53,19H4.47M11,10V14H13V10M11,16V18H13V16"
                                                  Fill="{StaticResource WarningDarkBrush}" Width="16" Height="16"
                                                  Stretch="Uniform"
                                                  HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                        <TextBlock Text="Kam qolgan mahsulotlar"
                                                   Style="{StaticResource SectionTitleStyle}"
                                                   VerticalAlignment="Center"/>
                                    </StackPanel>
                                    <Border HorizontalAlignment="Right"
                                            Background="{StaticResource WarningBackgroundBrush}" CornerRadius="8" Padding="10,4"
                                            VerticalAlignment="Center"
                                            Visibility="{Binding HasLowStockProducts, Converter={StaticResource BoolToVisibilityConverter}}">
                                        <TextBlock FontSize="12" Foreground="{StaticResource WarningDarkBrush}" FontWeight="SemiBold">
                                            <TextBlock.Text>
                                                <MultiBinding StringFormat="{}{0} ta">
                                                    <Binding Path="LowStockCount"/>
                                                </MultiBinding>
                                            </TextBlock.Text>
                                        </TextBlock>
                                    </Border>
                                </Grid>
                            </Border>

                            <!-- Empty state -->
                            <StackPanel Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Center"
                                        Margin="0,25,0,25"
                                        Visibility="{Binding HasLowStockProducts, Converter={StaticResource BoolToVisibilityConverter}, ConverterParameter=invert}">
                                <Border Width="48" Height="48" CornerRadius="24" Background="{StaticResource SuccessBackgroundBrush}"
                                        HorizontalAlignment="Center">
                                    <Path Data="M9,20.42L2.79,14.21L5.62,11.38L9,14.77L18.88,4.88L21.71,7.71L9,20.42Z"
                                          Fill="{StaticResource SuccessDarkBrush}" Width="24" Height="24" Stretch="Uniform"
                                          HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                                <TextBlock Text="Barcha mahsulotlar yetarli"
                                           FontSize="13" Foreground="{StaticResource TextMutedBrush}"
                                           HorizontalAlignment="Center" Margin="0,10,0,0"/>
                            </StackPanel>

                            <!-- Low stock list -->
                            <DockPanel Grid.Row="1"
                                       Visibility="{Binding HasLowStockProducts, Converter={StaticResource BoolToVisibilityConverter}}">

                                <!-- Pagination - docked at bottom -->
                                <Border DockPanel.Dock="Bottom" Padding="16,10" BorderBrush="{StaticResource BorderLightBrush}" BorderThickness="0,1,0,0">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <Button Grid.Column="0"
                                                Command="{Binding LowStockPreviousPageCommand}"
                                                IsEnabled="{Binding CanLowStockPrevious}"
                                                Cursor="Hand">
                                            <Button.Template>
                                                <ControlTemplate TargetType="Button">
