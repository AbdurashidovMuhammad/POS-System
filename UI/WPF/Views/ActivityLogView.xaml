                               Margin="0,16,0,0"
                               FontSize="14"
                               FontWeight="SemiBold"
                               Foreground="#1a1a2e"
                               HorizontalAlignment="Center"/>
                    <TextBlock Text="Iltimos kuting"
                               Margin="0,4,0,0"
                               FontSize="12"
                               Foreground="#888"
                               HorizontalAlignment="Center"/>
                </StackPanel>
            </Border>
        </Border>
    </Grid>
</UserControl>
