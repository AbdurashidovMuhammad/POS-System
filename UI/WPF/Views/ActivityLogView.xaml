                            </Button>

                            <Border Background="#f8f9fa" CornerRadius="10" Padding="18,10" VerticalAlignment="Center">
                                <TextBlock FontSize="14" Foreground="#333">
                                    <Run Text="{Binding CurrentPage, Mode=OneWay}" FontWeight="Bold" Foreground="#4361ee"/>
                                    <Run Text=" / "/>
                                    <Run Text="{Binding TotalPages, Mode=OneWay}" FontWeight="Bold"/>
                                </TextBlock>
                            </Border>

                            <Button Command="{Binding NextPageCommand}"
                                    Cursor="Hand"
                                    Margin="8,0,0,0">
                                <Button.Template>
                                    <ControlTemplate TargetType="Button">
                                        <Border x:Name="border" Background="#f8f9fa" CornerRadius="10" Padding="18,10" BorderBrush="#e8e8e8" BorderThickness="1">
                                            <StackPanel Orientation="Horizontal">
                                                <TextBlock Text="Keyingi" FontSize="14" Foreground="#666" FontWeight="SemiBold"/>
                                                <Path Data="M8.59,16.58L13.17,12L8.59,7.41L10,6L16,12L10,18L8.59,16.58Z"
                                                      Fill="#666" Width="14" Height="14" Stretch="Uniform" Margin="6,0,0,0" VerticalAlignment="Center"/>
                                            </StackPanel>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter TargetName="border" Property="Background" Value="#f0f0f0"/>
                                            </Trigger>
                                            <Trigger Property="IsEnabled" Value="False">
                                                <Setter TargetName="border" Property="Opacity" Value="0.5"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Button.Template>
                            </Button>
                        </StackPanel>
                    </Grid>
                </Border>
            </Grid>
        </Border>

        <!-- Loading Overlay -->
        <Border Grid.RowSpan="4"
                Background="#80FFFFFF"
                CornerRadius="12"
                Visibility="{Binding IsLoading, Converter={StaticResource BoolToVisibilityConverter}}">
            <Border Background="White" CornerRadius="16" Padding="40,30"
                    HorizontalAlignment="Center" VerticalAlignment="Center"
                    MinWidth="280">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="30" ShadowDepth="4" Opacity="0.12" Direction="270"/>
